# Coverage.py配置文件
# BetterLaser ERP - .coveragerc

[run]
# 源代码目录
source = apps

# 包含的文件
include =
    apps/**/*.py

# 排除的文件
omit =
    # 迁移文件
    */migrations/*
    # 测试文件
    */tests/*
    */test_*.py
    *_tests.py
    # 初始化文件
    */__init__.py
    # 配置文件
    */apps.py
    */admin.py
    # 临时文件
    */.tox/*
    */venv/*
    */env/*

# 并行执行
parallel = True

# 分支覆盖
branch = True

# 数据文件
data_file = .coverage

[report]
# 精度（小数点后位数）
precision = 2

# 显示缺失的行
show_missing = True

# 跳过已覆盖的文件（简化输出）
skip_covered = False

# 跳过空文件
skip_empty = True

# 排序方式（按覆盖率升序）
sort = Cover

# 排除的行（正则表达式）
exclude_lines =
    # 标准排除
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    @abstract
    @abstractmethod
    # Django特定
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    # 调试代码
    if settings.DEBUG
    if DEBUG

# 忽略错误
ignore_errors = False

[html]
# HTML报告目录
directory = htmlcov

# 页面标题
title = BetterLaser ERP 测试覆盖率报告

# 显示上下文（显示哪些测试执行了这些代码）
show_contexts = True

[xml]
# XML报告文件
output = coverage.xml

[json]
# JSON报告文件
output = coverage.json
pretty_print = True
show_contexts = True

[paths]
# 路径映射（用于CI环境）
source =
    apps/
    /home/runner/work/*/apps/
    /Users/*/Code_Projects/django_erp/apps/
