{% extends 'base.html' %}

{% block title %}删除联系人 - BetterLaser ERP{% endblock %}
{% block page_title %}删除联系人{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:order_list' %}" class="text-gray-500 hover:text-gray-700">销售管理</a>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'customers:contact_list' %}" class="text-gray-500 hover:text-gray-700">客户管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">删除联系人</span>
{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center mb-6">
            <div class="flex-shrink-0">
                <svg x-data="heroicon('exclamation-triangle')" class="text-red-500 text-3xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            </div>
            <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">确认删除联系人</h3>
                <p class="mt-2 text-sm text-gray-500">
                    此操作无法撤销。确定要删除以下联系人吗？
                </p>
            </div>
        </div> <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <div class="grid grid-cols-2 gap-4">
                <div>
                    <p class="text-sm text-gray-500">姓名</p>
                    <p class="mt-1 font-medium">{{ contact.name }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">所属客户</p>
                    <p class="mt-1 font-medium">{{ contact.customer.name }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">职位</p>
                    <p class="mt-1 font-medium">{{ contact.position|default:"-" }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">部门</p>
                    <p class="mt-1 font-medium">{{ contact.department|default:"-" }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">电话</p>
                    <p class="mt-1 font-medium">{{ contact.phone|default:"-" }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">手机</p>
                    <p class="mt-1 font-medium">{{ contact.mobile|default:"-" }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">邮箱</p>
                    <p class="mt-1 font-medium">{{ contact.email|default:"-" }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-500">主联系人</p>
                    <p class="mt-1 font-medium">
                        {% if contact.is_primary %}
                        <span class="text-green-600"><svg x-data="heroicon('check')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg> 是</span>
                        {% else %}
                        <span class="text-gray-400">否</span>
                        {% endif %}
                    </p>
                </div>
            </div>
        </div> <form method="post">
            {% csrf_token %}
            <div class="flex justify-end space-x-3">
                <a href="{% url 'customers:contact_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <svg x-data="heroicon('x-mark')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>取消
                </a>
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('trash')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>确认删除
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
