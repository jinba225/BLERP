{% extends 'base.html' %}

{% block title %}客户详情 - {{ customer.name }} - BetterLaser ERP{% endblock %}
{% block page_title %}客户详情{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:order_list' %}" class="text-gray-500 hover:text-gray-700">销售管理</a>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'customers:customer_list' %}" class="text-gray-500 hover:text-gray-700">客户管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ customer.name }}</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ customer.name }}</h3>
            <p class="text-sm text-gray-600 mt-1">
                <span class="px-2 py-1 text-xs font-semibold rounded
                    {% if customer.status == 'active' %}bg-green-100 text-green-800
                    {% elif customer.status == 'inactive' %}bg-gray-100 text-gray-800
                    {% elif customer.status == 'potential' %}bg-theme-100 text-theme-800
                    {% elif customer.status == 'blacklist' %}bg-red-100 text-red-800
                    {% endif %}">
                    {{ customer.get_status_display }}
                </span>
                <span class="ml-2">{{ customer.code }}</span>
                <span class="ml-2">{{ customer.get_customer_type_display }}</span>
                <span class="ml-2">{{ customer.get_customer_level_display }}</span>
            </p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'customers:customer_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <svg x-data="heroicon('arrow-left')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>返回列表
            </a>
            <a class="btn btn-primary" href="{% url 'customers:customer_update' customer.pk %}">
                <svg x-data="heroicon('pencil')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑
            </a>
            <a class="btn btn-primary" href="{% url 'customers:customer_delete' customer.pk %}">
                <svg x-data="heroicon('trash')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>删除
            </a>
        </div>
    </div> <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Basic Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">基本信息</h4>
                <dl class="grid grid-cols-2 gap-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">客户编码</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.code }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">客户名称</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.name }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">客户类型</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.get_customer_type_display }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">客户等级</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.get_customer_level_display }}</dd>
                    </div>
                    {% if customer.category %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">客户分类</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.category.name }}</dd>
                    </div>
                    {% endif %}
                    {% if customer.industry %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">所属行业</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.industry }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div> <!-- Contacts Section (moved under Basic Information) -->
            <div class="mt-6 bg-white rounded-lg shadow p-6" x-data="contactManager()">
                <div class="flex justify-between items-center mb-4 pb-2 border-b">
                    <h4 class="text-lg font-semibold text-gray-900">联系人</h4>
                    <button class="btn btn-primary" type="button">
                        <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>添加联系人
                    </button>
                </div> <!-- Add Contact Form -->
                <div x-show="showAddForm" x-cloak class="mb-6 p-4 bg-gray-50 rounded-lg">
                    <form method="post" action="{% url 'customers:contact_create' %}">
                        {% csrf_token %}
                        <input type="hidden" name="customer" value="{{ customer.pk }}">
                        <input type="hidden" name="from_customer_detail" value="1"> <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">姓名 *</label>
                                <input type="text" name="name" required
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">职位</label>
                                <input type="text" name="position"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">部门</label>
                                <input type="text" name="department"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            </div>
                        </div> <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">电话</label>
                                <input type="text" name="phone"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">手机</label>
                                <input type="text" name="mobile"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">邮箱</label>
                                <input type="email" name="email"
                                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            </div>
                        </div> <div class="mb-4">
                            <label class="flex items-center">
                                <input type="checkbox" name="is_primary" class="h-4 w-4 text-theme-600 focus:ring-theme-500 border-gray-300 rounded">
                                <span class="ml-2 text-sm text-gray-700">设为主联系人</span>
                            </label>
                        </div> <div class="flex justify-end space-x-2">
                            <button type="button" @click="showAddForm = false" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                                取消
                            </button>
                            <button class="btn btn-primary" type="submit">
                                保存
                            </button>
                        </div>
                    </form>
                </div> <!-- Contacts List -->
                {% if contacts %}
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">姓名</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">职位</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">部门</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">电话</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">手机</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">邮箱</th>
                                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">主联系人</th>
                                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">操作</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for contact in contacts %}
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 whitespace-nowrap text-sm font-medium text-gray-900">
                                    {{ contact.name }}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                    {{ contact.position|default:"-" }}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                    {{ contact.department|default:"-" }}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                    {% if contact.phone %}
                                    <i class="fas fa-phone mr-1 text-gray-400"></i>{{ contact.phone }}
                                    {% else %}-{% endif %}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                    {% if contact.mobile %}
                                    <i class="fas fa-mobile-alt mr-1 text-gray-400"></i>{{ contact.mobile }}
                                    {% else %}-{% endif %}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-sm text-gray-500">
                                    {% if contact.email %}
                                    <svg x-data="heroicon('envelope')" class="mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>{{ contact.email }}
                                    {% else %}-{% endif %}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-center">
                                    {% if contact.is_primary %}
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <svg x-data="heroicon('star')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>主联系人
                                    </span>
                                    {% else %}
                                    <span class="text-gray-400">-</span>
                                    {% endif %}
                                </td>
                                <td class="px-4 py-3 whitespace-nowrap text-center text-sm">
                                    <a href="{% url 'customers:contact_update' contact.pk %}" class="text-theme-600 hover:text-theme-700 mr-3">
                                        <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                    </a>
                                    <a href="{% url 'customers:contact_delete' contact.pk %}" class="text-red-600 hover:text-red-900"
                                       onclick="return confirm('确定要删除联系人 {{ contact.name }} 吗？')">
                                        <svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                    </a>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% else %}
                <div class="text-center py-12 text-gray-500">
                    <i class="fas fa-address-book text-4xl mb-4"></i>
                    <p>暂无联系人</p>
                    <p class="text-sm mt-2">点击上方"添加联系人"按钮添加第一个联系人</p>
                </div>
                {% endif %}
            </div> <!-- Address Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">地址信息</h4>
                <dl class="grid grid-cols-2 gap-4">
                    {% if customer.address %}
                    <div class="col-span-2">
                        <dt class="text-sm font-medium text-gray-500">详细地址</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.address }}</dd>
                    </div>
                    {% endif %}
                    {% if customer.city %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">城市</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.city }}</dd>
                    </div>
                    {% endif %}
                    {% if customer.province %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">省份</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.province }}</dd>
                    </div>
                    {% endif %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">国家</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.country }}</dd>
                    </div>
                    {% if customer.postal_code %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">邮政编码</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.postal_code }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div> {% if customer.notes %}
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">备注</h4>
                <p class="text-sm text-gray-700 whitespace-pre-wrap">{{ customer.notes }}</p>
            </div>
            {% endif %}
        </div> <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Sales Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">销售信息</h4>
                <dl class="space-y-3">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">销售代表</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.sales_rep.username|default:"-" }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">信用额度</dt>
                        <dd class="mt-1 text-sm font-semibold text-gray-900">¥{{ customer.credit_limit }}</dd>
                    </div>
                    {% if customer.discount_rate %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">折扣率</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.discount_rate }}%</dd>
                    </div>
                    {% endif %}
                    {% if customer.payment_terms %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">付款方式</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.get_payment_terms_display }}</dd>
                    </div>
                    {% endif %}
                    {% if customer.source %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">客户来源</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.source }}</dd>
                    </div>
                    {% endif %}
                    {% if customer.tags %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">标签</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.tags }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div> <!-- System Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">系统信息</h4>
                <dl class="space-y-3">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">创建人</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.created_by.username|default:"-" }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">创建时间</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.created_at|date:"Y-m-d H:i" }}</dd>
                    </div>
                    {% if customer.updated_by %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">最后修改人</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.updated_by.username }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">最后修改时间</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ customer.updated_at|date:"Y-m-d H:i" }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div>
        </div>
    </div> </div>

<script>
function contactManager() {
    return {
        showAddForm: false
    }
}
</script>
{% endblock %}
