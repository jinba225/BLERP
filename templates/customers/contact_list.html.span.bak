{% extends 'base.html' %}

{% block title %}客户联系人 - BetterLaser ERP{% endblock %}
{% block page_title %}客户联系人{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:order_list' %}" class="text-gray-500 hover:text-gray-700">销售管理</a>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'customers:customer_list' %}" class="text-gray-500 hover:text-gray-700">客户管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">客户联系人</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header with Actions -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <p class="mt-1 text-sm text-gray-600">共 {{ total_count }} 个联系人</p>
        </div>
        <div>
            <a class="btn btn-primary" href="{% url 'customers:contact_create' %}">
                <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建联系人
            </a>
        </div>
    </div> <!-- Search and Filters -->
    <div class="bg-white rounded-lg shadow mb-6 p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent"
                       placeholder="姓名、客户、电话、邮箱...">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">客户</label>
                <select name="customer" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部客户</option>
                    {% for customer in customers %}
                    <option value="{{ customer.pk }}" {% if customer_id == customer.pk|stringformat:"s" %}selected{% endif %}>
                        {{ customer.name }}
                    </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">主联系人</label>
                <select name="is_primary" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    <option value="true" {% if is_primary == 'true' %}selected{% endif %}>是</option>
                    <option value="false" {% if is_primary == 'false' %}selected{% endif %}>否</option>
                </select>
            </div> <div class="flex items-end space-x-2">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
                <a href="{% url 'customers:contact_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <svg x-data="heroicon('arrow-path')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>重置
                </a>
            </div>
        </form>
    </div> <!-- Contacts Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">姓名</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">客户</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">职位</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">部门</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">电话</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">手机</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">邮箱</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">主联系人</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for contact in page_obj %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            {% if contact.gender == 'M' %}
                            <i class="fas fa-male text-theme-500 mr-2"></i>
                            {% elif contact.gender == 'F' %}
                            <i class="fas fa-female text-pink-500 mr-2"></i>
                            {% else %}
                            <svg x-data="heroicon('user')" class="text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            {% endif %}
                            <span class="font-medium">{{ contact.name }}</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <a href="{% url 'customers:customer_detail' contact.customer.pk %}" class="text-theme-600 hover:underline">
                            {{ contact.customer.name }}
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ contact.position|default:"-" }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ contact.department|default:"-" }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {% if contact.phone %}
                        <i class="fas fa-phone mr-1"></i>{{ contact.phone }}
                        {% else %}-{% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {% if contact.mobile %}
                        <i class="fas fa-mobile-alt mr-1"></i>{{ contact.mobile }}
                        {% else %}-{% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {% if contact.email %}
                        <svg x-data="heroicon('envelope')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>{{ contact.email }}
                        {% else %}-{% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center">
                        {% if contact.is_primary %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <svg x-data="heroicon('star')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>主联系人
                        </span>
                        {% else %}
                        <span class="text-gray-400">-</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                        <a href="{% url 'customers:contact_update' contact.pk %}" class="text-theme-600 hover:text-theme-700 mr-3">
                            <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        <a href="{% url 'customers:contact_delete' contact.pk %}" class="text-red-600 hover:text-red-900">
                            <svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="9" class="px-6 py-12 text-center text-gray-500">
                        <i class="fas fa-address-book text-4xl mb-4"></i>
                        <p>暂无联系人数据</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
            <div class="flex-1 flex justify-between sm:hidden">
                {% if page_obj.has_previous %}
                <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if customer_id %}&customer={{ customer_id }}{% endif %}{% if is_primary %}&is_primary={{ is_primary }}{% endif %}"
                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    上一页
                </a>
                {% endif %}
                {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if customer_id %}&customer={{ customer_id }}{% endif %}{% if is_primary %}&is_primary={{ is_primary }}{% endif %}"
                   class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    下一页
                </a>
                {% endif %}
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到
                        <span class="font-medium">{{ page_obj.end_index }}</span> 条，
                        共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                        {% if page_obj.has_previous %}
                        <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if customer_id %}&customer={{ customer_id }}{% endif %}{% if is_primary %}&is_primary={{ is_primary }}{% endif %}"
                           class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <svg x-data="heroicon('chevron-left')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% endif %} {% for num in page_obj.paginator.page_range %}
                            {% if page_obj.number == num %}
                            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-theme-50 text-sm font-medium text-theme-600">
                                {{ num }}
                            </span>
                            {% elif num > page_obj.number|add:'-3' and num < page_obj.number|add:'3' %}
                            <a href="?page={{ num }}{% if search %}&search={{ search }}{% endif %}{% if customer_id %}&customer={{ customer_id }}{% endif %}{% if is_primary %}&is_primary={{ is_primary }}{% endif %}"
                               class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                                {{ num }}
                            </a>
                            {% endif %}
                        {% endfor %} {% if page_obj.has_next %}
                        <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if customer_id %}&customer={{ customer_id }}{% endif %}{% if is_primary %}&is_primary={{ is_primary }}{% endif %}"
                           class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <svg x-data="heroicon('chevron-right')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
