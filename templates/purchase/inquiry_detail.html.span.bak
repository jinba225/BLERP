{% extends 'base.html' %}
{% block title %}询价单详情 - {{ inquiry.inquiry_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'purchase:inquiry_list' %}" class="text-gray-500 hover:text-gray-700">询价管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">询价单详情</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">询价单 {{ inquiry.inquiry_number }}</h3>
            <p class="text-sm text-gray-600 mt-1">{{ inquiry.title }}</p>
        </div>
        <div class="flex gap-2">
            {% if inquiry.status == 'draft' %}
            <a class="btn btn-primary" href="{% url 'purchase:inquiry_update' inquiry.pk %}">
                <svg x-data="heroicon('pencil')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑
            </a>
            <a class="btn btn-primary" href="{% url 'purchase:inquiry_send' inquiry.pk %}">
                <i class="fas fa-paper-plane mr-2"></i>发送询价
            </a>
            <a class="btn btn-primary" href="{% url 'purchase:inquiry_delete' inquiry.pk %}">
                <svg x-data="heroicon('trash')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>删除
            </a>
            {% elif inquiry.status in 'quoted,selected' %}
            <a class="btn btn-primary" href="{% url 'purchase:quotation_compare' inquiry.pk %}">
                <i class="fas fa-balance-scale mr-2"></i>对比报价
            </a>
            {% endif %}
            {% if inquiry.status != 'ordered' and not inquiry.purchase_order %}
            <a class="btn btn-primary" href="{% url 'purchase:inquiry_create_order' inquiry.pk %}">
                <svg x-data="heroicon('document')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>创建采购订单
            </a>
            {% endif %}
            {% if inquiry.purchase_order %}
            <a class="btn btn-primary" href="{% url 'purchase:order_detail' inquiry.purchase_order.pk %}">
                <svg x-data="heroicon('external-link')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>查看采购订单
            </a>
            {% endif %}
        </div>
    </div> <!-- Basic Information -->
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-md font-semibold text-gray-900 mb-4">基本信息</h4>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <span class="text-sm text-gray-600">询价单号</span>
                <p class="text-sm font-medium text-gray-900 mt-1">{{ inquiry.inquiry_number }}</p>
            </div>
            <div>
                <span class="text-sm text-gray-600">询价日期</span>
                <p class="text-sm font-medium text-gray-900 mt-1">{{ inquiry.inquiry_date }}</p>
            </div>
            <div>
                <span class="text-sm text-gray-600">报价截止日期</span>
                <p class="text-sm font-medium text-gray-900 mt-1">{{ inquiry.deadline }}</p>
            </div>
            <div>
                <span class="text-sm text-gray-600">状态</span>
                <p class="text-sm font-medium mt-1">
                    <span class="px-2 py-1 text-xs font-semibold rounded
                        {% if inquiry.status == 'draft' %}bg-gray-100 text-gray-800
                        {% elif inquiry.status == 'sent' %}bg-theme-100 text-theme-800
                        {% elif inquiry.status == 'quoted' %}bg-purple-100 text-purple-800
                        {% elif inquiry.status == 'selected' %}bg-yellow-100 text-yellow-800
                        {% elif inquiry.status == 'ordered' %}bg-green-100 text-green-800
                        {% elif inquiry.status == 'cancelled' %}bg-red-100 text-red-800
                        {% endif %}">
                        {{ inquiry.get_status_display }}
                    </span>
                </p>
            </div>
            <div>
                <span class="text-sm text-gray-600">采购员</span>
                <p class="text-sm font-medium text-gray-900 mt-1">
                    {% if inquiry.buyer %}{{ inquiry.buyer.get_full_name|default:inquiry.buyer.username }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                </p>
            </div>
            <div>
                <span class="text-sm text-gray-600">需求日期</span>
                <p class="text-sm font-medium text-gray-900 mt-1">
                    {% if inquiry.required_date %}{{ inquiry.required_date }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                </p>
            </div>
            {% if inquiry.department %}
            <div>
                <span class="text-sm text-gray-600">申请部门</span>
                <p class="text-sm font-medium text-gray-900 mt-1">{{ inquiry.department.name }}</p>
            </div>
            {% endif %}
            {% if inquiry.warehouse %}
            <div>
                <span class="text-sm text-gray-600">收货仓库</span>
                <p class="text-sm font-medium text-gray-900 mt-1">{{ inquiry.warehouse.name }}</p>
            </div>
            {% endif %}
            {% if inquiry.payment_terms %}
            <div>
                <span class="text-sm text-gray-600">付款方式</span>
                <p class="text-sm font-medium text-gray-900 mt-1">{{ inquiry.get_payment_terms_display }}</p>
            </div>
            {% endif %}
        </div>
        {% if inquiry.description %}
        <div class="mt-4 pt-4 border-t border-gray-200">
            <span class="text-sm text-gray-600">需求描述</span>
            <p class="text-sm text-gray-900 mt-1">{{ inquiry.description }}</p>
        </div>
        {% endif %}
        {% if inquiry.notes %}
        <div class="mt-4 pt-4 border-t border-gray-200">
            <span class="text-sm text-gray-600">备注</span>
            <p class="text-sm text-gray-900 mt-1">{{ inquiry.notes }}</p>
        </div>
        {% endif %}
    </div> <!-- Inquiry Items -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">询价明细</h4>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">产品名称</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">规格要求</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">需求数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">目标价格</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">首选供应商</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in items %}
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 text-sm text-gray-900">
                            <div class="font-medium">{{ item.product.name }}</div>
                            <div class="text-xs text-gray-500">{{ item.product.code }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {% if item.specifications %}{{ item.specifications }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-right font-medium text-gray-900">
                            {{ item.quantity }} {{ item.product.unit }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {% if item.target_price %}¥{{ item.target_price }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {% if item.preferred_supplier %}{{ item.preferred_supplier.name }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> <!-- Quotations -->
    {% if quotations %}
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h4 class="text-md font-semibold text-gray-900">供应商报价 ({{ quotations.count }})</h4>
            {% if quotations.count > 1 and inquiry.status in 'quoted,selected' %}
            <a href="{% url 'purchase:quotation_compare' inquiry.pk %}" class="text-sm text-theme-600 hover:text-theme-700 font-medium">
                <i class="fas fa-balance-scale mr-1"></i>对比报价
            </a>
            {% endif %}
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报价单号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">供应商</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报价日期</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">报价总额</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">交货期</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for quotation in quotations %}
                    <tr class="hover:bg-gray-50 transition-colors {% if quotation.status == 'selected' %}bg-green-50{% endif %}">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            {{ quotation.quotation_number }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ quotation.supplier.name }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ quotation.quotation_date }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                            {% if quotation.status != 'pending' %}¥{{ quotation.total_amount|floatformat:2 }}{% else %}<span class="text-gray-400">待报价</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {% if quotation.delivery_period %}{{ quotation.delivery_period }} 天{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            <span class="px-2 py-1 text-xs font-semibold rounded
                                {% if quotation.status == 'pending' %}bg-gray-100 text-gray-800
                                {% elif quotation.status == 'submitted' %}bg-theme-100 text-theme-800
                                {% elif quotation.status == 'selected' %}bg-green-100 text-green-800
                                {% elif quotation.status == 'rejected' %}bg-red-100 text-red-800
                                {% elif quotation.status == 'expired' %}bg-gray-100 text-gray-600
                                {% endif %}">
                                {{ quotation.get_status_display }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <a href="{% url 'purchase:quotation_detail' quotation.pk %}" class="text-theme-600 hover:text-theme-700" title="查看详情">
                                <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            {% if quotation.status == 'submitted' and inquiry.status != 'selected' %}
                            <a href="{% url 'purchase:quotation_select' quotation.pk %}" class="text-green-600 hover:text-green-900" title="选定此报价">
                                <svg x-data="heroicon('check-circle')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
