{% extends 'base.html' %}
{% block title %}采购订单详情 - {{ order.order_number }} - BetterLaser ERP{% endblock %}
{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'purchase:order_list' %}" class="text-gray-500 hover:text-gray-700">采购管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">订单详情</span>
{% endblock %}
{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h3 class="text-lg font-semibold text-gray-900">采购订单 {{ order.order_number }}</h3>
        <div class="flex space-x-2">
            {% if can_edit %}
            <a class="btn btn-primary" href="{% url 'purchase:order_update' order.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            {% endif %}
            {% if can_approve %}
            <form method="post" action="{% url 'purchase:order_approve' order.pk %}" class="inline" onsubmit="return checkPricesBeforeApprove(event);">
                {% csrf_token %}
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-check mr-2"></i>审核通过
                </button>
            </form>
            {% endif %}
            {% if order.status == 'approved' or order.status == 'partial_received' %}
                {% if pending_receipt %}
                <a class="btn btn-primary" href="{% url 'purchase:receipt_detail' pending_receipt.pk %}">
                    <i class="fas fa-eye mr-2"></i>查看收货单 ({{ pending_receipt.receipt_number }})
                </a>
                {% else %}
                <a class="btn btn-primary" href="{% url 'purchase:receipt_create' order.pk %}">
                    <i class="fas fa-truck mr-2"></i>创建收货单
                </a>
                {% endif %}
            {% endif %}
            {% if order.status == 'approved' or order.status == 'partial_received' or order.status == 'fully_received' %}
            <a class="btn btn-primary" href="{% url 'purchase:return_create' order.pk %}">
                <i class="fas fa-undo-alt mr-2"></i>创建退货单
            </a>
            {% endif %}
            {% if can_request_payment %}
            <a href="{% url 'purchase:order_request_payment' order.pk %}" class="btn btn-primary" onclick="return confirm('确认要为该订单申请付款吗？将生成应付账款记录。');">
                <i class="fas fa-money-bill-wave mr-2"></i>申请付款
            </a>
            {% endif %}
        </div>
    </div>
    <div class="bg-white rounded-lg shadow p-6 space-y-4">
        <h4 class="text-md font-semibold">基本信息</h4>
        <div class="grid grid-cols-3 gap-4">
            <div><span class="text-gray-600">供应商:</span> <span class="font-medium">{{ order.supplier.name }}</span></div>
            <div><span class="text-gray-600">订单日期:</span> <span class="font-medium">{{ order.order_date|date:"Y-m-d" }}</span></div>
            <div><span class="text-gray-600">状态:</span> <span class="font-medium">{{ order.get_status_display }}</span></div>
            <div><span class="text-gray-600">总金额:</span> <span class="font-medium">{{ order.currency }} {{ order.total_amount|floatformat:2 }}</span></div>
            <div><span class="text-gray-600">采购员:</span> <span class="font-medium">{{ order.buyer.get_full_name|default:order.buyer.username }}</span></div>
            {% if order.approved_by %}
            <div><span class="text-gray-600">审核人:</span> <span class="font-medium">{{ order.approved_by.get_full_name|default:order.approved_by.username }}</span></div>
            {% endif %}
        </div>
    </div>
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品名称</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">订单数量</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">已收货数量</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">剩余数量</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">单价</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">小计</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for item_data in items_with_remaining %}
                {% with item=item_data.item remaining=item_data.remaining_quantity %}
                <tr>
                    <td class="px-6 py-4 text-sm text-gray-900">{{ item.product.name }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900 text-right">{{ item.quantity }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900 text-right">
                        {% if item.received_quantity > 0 %}
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                {{ item.received_quantity }}
                            </span>
                        {% else %}
                            <span class="text-gray-400">0</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900 text-right">
                        {% if remaining > 0 %}
                            <span class="font-medium text-theme-600">{{ remaining }}</span>
                        {% else %}
                            <span class="text-green-600 font-medium">✓ 已完成</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900 text-right">{{ item.unit_price|floatformat:2 }}</td>
                    <td class="px-6 py-4 text-sm text-gray-900 text-right">{{ item.line_total|floatformat:2 }}</td>
                </tr>
                {% endwith %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
// 检查产品价格并提示用户
function checkPricesBeforeApprove(event) {
    // 收集所有没有单价的产品
    const itemsWithoutPrice = [];
    const table = event.target.form.closest('table');
    if (!table) return true; // 如果没找到表格，直接通过

    const rows = table.querySelectorAll('tbody tr');
    rows.forEach((row, index) => {
        const cells = row.querySelectorAll('td');
        if (cells.length >= 7) {
            const productName = cells[0].textContent.trim();
            const unitPrice = cells[6].textContent.trim();

            // 检查单价是否为0或"0.00"或空字符串
            if (!unitPrice || unitPrice === '0' || unit_price === '0.00' || unitPrice === '-' || unitPrice === '') {
                itemsWithoutPrice.push(productName);
            }
        }
    });

    // 如果没有价格的产品，弹出提示
    if (itemsWithoutPrice.length > 0) {
        const message = '以下产品未确认单价，无法审核：\n\n' + itemsWithoutPrice.join('\n') + '\n\n请先编辑订单，确认所有产品的单价后再审核。';
        alert(message);
        return false;
    }

    // 都有价格，显示审核确认
    return confirm('确认要审核此订单吗？');
}
</script>

{% endblock %}
