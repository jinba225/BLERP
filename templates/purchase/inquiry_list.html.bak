{% extends 'base.html' %}
{% block title %}采购询价单列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">采购管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">询价单列表</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">采购询价单列表</h3>
            <p class="text-sm text-gray-600">共 {{ page_obj.paginator.count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'purchase:inquiry_create' %}">
            <i class="fas fa-plus mr-2"></i>新建询价单
        </a>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search_query }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500" placeholder="询价单号、标题...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部状态</option>
                    {% for status_key, status_label in inquiry_statuses %}
                    <option value="{{ status_key }}" {% if status == status_key %}selected{% endif %}>{{ status_label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">采购员</label>
                <select name="buyer" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部采购员</option>
                    {% for buyer in buyers %}
                    <option value="{{ buyer.id }}" {% if buyer_id|stringformat:"s" == buyer.id|stringformat:"s" %}selected{% endif %}>
                        {{ buyer.get_full_name|default:buyer.username }}
                    </option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label>
                <input type="date" name="date_from" value="{{ date_from }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div>
            <div class="flex items-end space-x-2">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>搜索
                </button>
                <a href="{% url 'purchase:inquiry_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </form>
    </div> <!-- Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        {% if page_obj %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">询价单号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">标题</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">询价日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">截止日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">采购员</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">报价数</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for inquiry in page_obj %}
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            {{ inquiry.inquiry_number }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            <div class="max-w-xs truncate">{{ inquiry.title }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ inquiry.inquiry_date }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ inquiry.deadline }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {% if inquiry.buyer %}{{ inquiry.buyer.get_full_name|default:inquiry.buyer.username }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                            {{ inquiry.quotations.count }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            <span class="px-2 py-1 text-xs font-semibold rounded
                                {% if inquiry.status == 'draft' %}bg-gray-100 text-gray-800
                                {% elif inquiry.status == 'sent' %}bg-theme-100 text-theme-800
                                {% elif inquiry.status == 'quoted' %}bg-purple-100 text-purple-800
                                {% elif inquiry.status == 'selected' %}bg-yellow-100 text-yellow-800
                                {% elif inquiry.status == 'ordered' %}bg-green-100 text-green-800
                                {% elif inquiry.status == 'cancelled' %}bg-red-100 text-red-800
                                {% endif %}">
                                {{ inquiry.get_status_display }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <a href="{% url 'purchase:inquiry_detail' inquiry.pk %}" class="text-theme-600 hover:text-theme-700" title="查看详情">
                                <i class="fas fa-eye"></i>
                            </a>
                            {% if inquiry.status == 'draft' %}
                            <a href="{% url 'purchase:inquiry_update' inquiry.pk %}" class="text-green-600 hover:text-green-900" title="编辑">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="{% url 'purchase:inquiry_delete' inquiry.pk %}" class="text-red-600 hover:text-red-900" title="删除">
                                <i class="fas fa-trash"></i>
                            </a>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
                <div class="flex-1 flex justify-between sm:hidden">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}&search={{ search_query }}&status={{ status }}&buyer={{ buyer_id }}&date_from={{ date_from }}&date_to={{ date_to }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        上一页
                    </a>
                    {% endif %}
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}&search={{ search_query }}&status={{ status }}&buyer={{ buyer_id }}&date_from={{ date_from }}&date_to={{ date_to }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        下一页
                    </a>
                    {% endif %}
                </div>
                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            显示第 <span class="font-medium">{{ page_obj.start_index }}</span>
                            到 <span class="font-medium">{{ page_obj.end_index }}</span>
                            条，共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                        </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                            {% if page_obj.has_previous %}
                            <a href="?page=1&search={{ search_query }}&status={{ status }}&buyer={{ buyer_id }}&date_from={{ date_from }}&date_to={{ date_to }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                            <a href="?page={{ page_obj.previous_page_number }}&search={{ search_query }}&status={{ status }}&buyer={{ buyer_id }}&date_from={{ date_from }}&date_to={{ date_to }}" class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <i class="fas fa-angle-left"></i>
                            </a>
                            {% endif %} <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                                {{ page_obj.number }}
                            </span> {% if page_obj.has_next %}
                            <a href="?page={{ page_obj.next_page_number }}&search={{ search_query }}&status={{ status }}&buyer={{ buyer_id }}&date_from={{ date_from }}&date_to={{ date_to }}" class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <i class="fas fa-angle-right"></i>
                            </a>
                            <a href="?page={{ page_obj.paginator.num_pages }}&search={{ search_query }}&status={{ status }}&buyer={{ buyer_id }}&date_from={{ date_from }}&date_to={{ date_to }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                            {% endif %}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        {% else %}
        <div class="text-center py-12">
            <i class="fas fa-inbox text-gray-400 text-5xl mb-4"></i>
            <p class="text-gray-500">暂无询价单数据</p>
            <a class="btn btn-primary" href="{% url 'purchase:inquiry_create' %}">
                <i class="fas fa-plus mr-2"></i>新建询价单
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
