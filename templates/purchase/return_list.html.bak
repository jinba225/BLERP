{% extends 'base.html' %}
{% block title %}退货单列表{% endblock %}
{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'purchase:order_list' %}" class="text-gray-500 hover:text-gray-700">采购管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">采购退货</span>
{% endblock %}
{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">退货单列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
    </div> <!-- 搜索筛选表单 -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">采购订单号</label>
                <input type="text" name="order_number" value="{{ order_number|default:'' }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="输入订单号">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="退货单号、供应商...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">退货状态</label>
                <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="">全部状态</option>
                    <option value="draft" {% if status == 'draft' %}selected{% endif %}>草稿</option>
                    <option value="pending" {% if status == 'pending' %}selected{% endif %}>待审核</option>
                    <option value="approved" {% if status == 'approved' %}selected{% endif %}>已审核</option>
                    <option value="completed" {% if status == 'completed' %}selected{% endif %}>已完成</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label>
                <input type="date" name="date_from" value="{{ date_from }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div class="flex items-end gap-2">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>搜索
                </button>
                <a href="{% url 'purchase:return_list' %}" class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </form>
    </div> <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">退货单号</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">采购订单</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">退货日期</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for return in page_obj %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4"><a href="{% url 'purchase:return_detail' return.pk %}" class="text-theme-600">{{ return.return_number }}</a></td>
                    <td class="px-6 py-4">{{ return.purchase_order.order_number }}</td>
                    <td class="px-6 py-4">{{ return.return_date|date:"Y-m-d" }}</td>
                    <td class="px-6 py-4">{{ return.get_status_display }}</td>
                    <td class="px-6 py-4 text-right">
                        <a href="{% url 'purchase:return_detail' return.pk %}" class="text-theme-600">查看</a>
                    </td>
                </tr>
                {% empty %}
                <tr><td colspan="5" class="px-6 py-12 text-center text-gray-500">暂无数据</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}