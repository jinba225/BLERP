{% extends 'base.html' %}
{% block title %}采购申请详情 - {{ request.request_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">采购管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'purchase:request_list' %}" class="text-gray-500 hover:text-gray-700">采购申请</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ request.request_number }}</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header with Actions -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ request.request_number }}</h3>
            <p class="text-sm text-gray-600 mt-1">
                <span class="px-2 py-1 text-xs font-semibold rounded
                    {% if request.status == 'draft' %}bg-gray-100 text-gray-800
                    {% elif request.status == 'pending' %}bg-yellow-100 text-yellow-800
                    {% elif request.status == 'approved' %}bg-green-100 text-green-800
                    {% elif request.status == 'rejected' %}bg-red-100 text-red-800
                    {% elif request.status == 'ordered' %}bg-theme-100 text-theme-800
                    {% endif %}">
                    {{ request.get_status_display }}
                </span>
                <span class="ml-2 px-2 py-1 text-xs font-semibold rounded
                    {% if request.priority == 'urgent' %}bg-red-100 text-red-800
                    {% else %}bg-gray-100 text-gray-800
                    {% endif %}">
                    {{ request.get_priority_display }}
                </span>
            </p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'purchase:request_list' %}"
               class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>返回
            </a> {% if can_edit %}
            <a class="btn btn-primary" href="{% url 'purchase:request_update' request.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            {% endif %} {% if can_approve %}
            <!-- 审核表单（隐藏） -->
            <form id="approveForm" method="post" action="{% url 'purchase:request_approve' request.pk %}" class="inline">
                {% csrf_token %}
                <!-- 自动选择首选供应商，如果没有则选择第一个供应商 -->
                <input type="hidden" name="supplier" value="{% if preferred_supplier %}{{ preferred_supplier.id }}{% else %}{{ suppliers.first.id }}{% endif %}">
                <button class="btn btn-primary" type="submit" onclick="return confirm('确认审核通过此采购申请？\n\n供应商: {% if preferred_supplier %}{{ preferred_supplier.name }}{% else %}{{ suppliers.first.name }}{% endif %}\n仓库: 主仓库（自动）');">
                    <i class="fas fa-check mr-2"></i>审核通过
                </button>
            </form>
            {% endif %} {% if request.status == 'approved' and not request.converted_order %}
            <a class="btn btn-primary" href="{% url 'purchase:request_convert_to_order' request.pk %}">
                <i class="fas fa-exchange-alt mr-2"></i>转采购订单
            </a>
            {% endif %}
        </div>
    </div> <!-- Request Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Basic Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">基本信息</h4>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">申请人：</dt>
                    <dd class="text-sm text-gray-900">{{ request.requester.get_full_name|default:request.requester.username }}</dd>
                </div>
                {% if request.department %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">申请部门：</dt>
                    <dd class="text-sm text-gray-900">{{ request.department.name }}</dd>
                </div>
                {% endif %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">申请日期：</dt>
                    <dd class="text-sm text-gray-900">{{ request.request_date }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">需求日期：</dt>
                    <dd class="text-sm text-gray-900">{{ request.required_date|default:"-" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">优先级：</dt>
                    <dd class="text-sm text-gray-900">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if request.priority == 'urgent' %}bg-red-100 text-red-800
                            {% else %}bg-gray-100 text-gray-800
                            {% endif %}">
                            {{ request.get_priority_display }}
                        </span>
                    </dd>
                </div>
            </dl>
        </div> <!-- Approval Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">审核信息</h4>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">当前状态：</dt>
                    <dd class="text-sm text-gray-900">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if request.status == 'draft' %}bg-gray-100 text-gray-800
                            {% elif request.status == 'pending' %}bg-yellow-100 text-yellow-800
                            {% elif request.status == 'approved' %}bg-green-100 text-green-800
                            {% elif request.status == 'rejected' %}bg-red-100 text-red-800
                            {% elif request.status == 'ordered' %}bg-theme-100 text-theme-800
                            {% endif %}">
                            {{ request.get_status_display }}
                        </span>
                    </dd>
                </div>
                {% if request.approved_by %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">审核人：</dt>
                    <dd class="text-sm text-gray-900">{{ request.approved_by.username }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">审核时间：</dt>
                    <dd class="text-sm text-gray-900">{{ request.approved_at|date:"Y-m-d H:i" }}</dd>
                </div>
                {% endif %}
                {% if request.converted_order %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">关联订单：</dt>
                    <dd class="text-sm">
                        <a href="{% url 'purchase:order_detail' request.converted_order.pk %}"
                           class="text-theme-600 hover:text-theme-700 font-medium">
                            {{ request.converted_order.order_number }}
                        </a>
                    </dd>
                </div>
                {% endif %}
                {% if request.rejection_reason %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">拒绝原因：</dt>
                    <dd class="text-sm text-red-600">{{ request.rejection_reason }}</dd>
                </div>
                {% endif %}
            </dl>
        </div>
    </div> <!-- Request Items -->
    <div class="bg-white rounded-lg shadow mb-6 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">申请明细</h4>

        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">#</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品编码</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品名称</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">单位</th>
                        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">申请数量</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">首选供应商</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">规格要求</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in items %}
                    <tr>
                        <td class="px-4 py-3 text-sm text-gray-900">{{ forloop.counter }}</td>
                        <td class="px-4 py-3 text-sm text-gray-900">{{ item.product.code }}</td>
                        <td class="px-4 py-3">
                            <div class="text-sm font-medium text-gray-900">{{ item.product.name }}</div>
                            {% if item.notes %}
                            <div class="text-xs text-gray-400 mt-1">{{ item.notes }}</div>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-sm text-center text-gray-900">{{ item.product.unit.symbol|default:"-" }}</td>
                        <td class="px-4 py-3 text-sm text-right text-gray-900">{{ item.quantity }}</td>
                        <td class="px-4 py-3 text-sm text-gray-900">{{ item.preferred_supplier.name|default:"-" }}</td>
                        <td class="px-4 py-3 text-sm text-gray-500">{{ item.specifications|default:"-" }}</td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="7" class="px-4 py-8 text-center text-gray-500 text-sm">暂无申请明细</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> <!-- Additional Information -->
    {% if request.justification %}
    <div class="bg-white rounded-lg shadow p-6 mt-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">其他信息</h4>
        <dl class="space-y-3">
            <div>
                <dt class="text-sm font-medium text-gray-500 mb-1">申请理由</dt>
                <dd class="text-sm text-gray-900 whitespace-pre-wrap">{{ request.justification }}</dd>
            </div>
        </dl>
    </div>
    {% endif %}
</div>

{% endblock %}
