{% extends 'base.html' %}
{% block title %}借用单详情 - {{ borrow.borrow_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">采购管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'purchase:borrow_list' %}" class="text-gray-500 hover:text-gray-700">借用单</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ borrow.borrow_number }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">借用单详情</h3>
            <p class="text-sm text-gray-600">{{ borrow.borrow_number }}</p>
        </div>
        <div class="flex space-x-3">
            {% if can_edit %}
            <a href="{% url 'purchase:borrow_update' borrow.pk %}" class="btn btn-primary">
                <svg x-data="heroicon('pencil')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑
            </a>
            {% endif %}

            {% if can_approve %}
            <a href="{% url 'purchase:borrow_approve' borrow.pk %}" class="btn btn-success"
               onclick="return confirm('确认审核该借用单吗？')">
                <svg x-data="heroicon('check')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>审核
            </a>
            {% endif %}

            {% if can_confirm_receipt %}
            <a href="{% url 'purchase:borrow_confirm_all_receipt' borrow.pk %}" class="btn btn-primary"
               onclick="return confirm('确认将所有剩余可借用数量的产品全部入库到借用仓吗？')">
                <svg x-data="heroicon('building')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>一键全部入库
            </a>
            {% endif %}

            {% if can_return %}
            <a href="{% url 'purchase:borrow_return' borrow.pk %}" class="btn btn-primary">
                <i class="fas fa-undo-alt mr-2"></i>处理归还
            </a>
            {% endif %}

            {% if can_request_conversion %}
            <a href="{% url 'purchase:borrow_request_conversion' borrow.pk %}" class="btn btn-primary">
                <i class="fas fa-exchange-alt mr-2"></i>转采购订单
            </a>
            {% endif %}
        </div>
    </div>

    <!-- Status Badge -->
    <div class="bg-white rounded-lg shadow p-6">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-600 mb-1">当前状态</p>
                {% if borrow.status == 'draft' %}
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                    <svg x-data="heroicon('document')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>草稿
                </span>
                {% elif borrow.status == 'approved' %}
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                    <i class="fas fa-check-double mr-2"></i>已审核
                </span>
                {% elif borrow.status == 'borrowed' %}
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-theme-100 text-theme-800">
                    <i class="fas fa-handshake mr-2"></i>借用中
                </span>
                {% elif borrow.status == 'completed' %}
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    <svg x-data="heroicon('check-circle')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>已完成
                </span>
                {% endif %}
            </div>

            {% if borrow.converted_orders.exists %}
            <div class="text-right">
                <p class="text-sm text-gray-600 mb-1">关联采购订单 ({{ borrow.converted_orders.count }}个)</p>
                <div class="space-x-2">
                    {% for order in borrow.converted_orders %}
                    <a href="{% url 'purchase:order_detail' order.pk %}" class="inline-flex items-center px-3 py-1 bg-theme-50 text-theme-700 rounded-lg text-sm font-medium hover:bg-theme-100 transition-colors">
                        {{ order.order_number }}
                        <svg x-data="heroicon('external-link')" class="ml-1 text-xs" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </a>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>

    <!-- Basic Information -->
    <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-900">基本信息</h4>
        </div>
        <div class="px-6 py-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div>
                    <p class="text-sm text-gray-600 mb-1">供应商</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.supplier.name }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">借用日期</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.borrow_date }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">预计归还日期</p>
                    <p class="text-sm font-medium text-gray-900">
                        {% if borrow.expected_return_date %}{{ borrow.expected_return_date }}{% else %}<span class="text-gray-400">未设置</span>{% endif %}
                    </p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">经办人</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.buyer.get_full_name|default:borrow.buyer.username }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">创建时间</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.created_at|date:"Y-m-d H:i" }}</p>
                </div>
                <div>
                    <p class="text-sm text-gray-600 mb-1">创建人</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.created_by.get_full_name|default:borrow.created_by.username }}</p>
                </div>
                {% if borrow.purpose %}
                <div class="md:col-span-3">
                    <p class="text-sm text-gray-600 mb-1">借用目的</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.purpose }}</p>
                </div>
                {% endif %}
                {% if borrow.notes %}
                <div class="md:col-span-3">
                    <p class="text-sm text-gray-600 mb-1">备注</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.notes }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Quantity Statistics -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-theme-50 rounded-lg p-4 border border-theme-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-theme-600 mb-1">总借用数量</p>
                    <p class="text-2xl font-bold text-theme-700">{{ borrow.total_borrowed_quantity|floatformat }}</p>
                </div>
                <svg x-data="heroicon('inbox')" class="text-theme-300 text-2xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            </div>
        </div>
        <div class="bg-green-50 rounded-lg p-4 border border-green-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-green-600 mb-1">已归还数量</p>
                    <p class="text-2xl font-bold text-green-700">{{ borrow.total_returned_quantity|floatformat }}</p>
                </div>
                <svg x-data="heroicon('check')" class="text-green-300 text-2xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            </div>
        </div>
        <div class="bg-orange-50 rounded-lg p-4 border border-orange-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-orange-600 mb-1">待归还数量</p>
                    <p class="text-2xl font-bold text-orange-700">{{ borrow.total_remaining_quantity|floatformat }}</p>
                </div>
                <svg x-data="heroicon('building')" class="text-orange-300 text-2xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            </div>
        </div>
    </div>

    <!-- Items Detail -->
    <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-900">借用明细</h4>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">借用数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">累计已借用</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">已归还</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">已转采购</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">待归还数量</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">批次号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">规格要求</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in items %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm text-gray-900">
                            <div class="font-medium">{{ item.product.name }}</div>
                            <div class="text-gray-500">{{ item.product.code }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900 font-medium">
                            {{ item.quantity|floatformat }} {{ item.product.unit }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-blue-600 font-medium">
                            {{ item.borrowed_quantity|floatformat }} {{ item.product.unit }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-green-600 font-medium">
                            {{ item.returned_quantity|floatformat }} {{ item.product.unit }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-orange-600 font-medium">
                            {{ item.conversion_quantity|floatformat }} {{ item.product.unit }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-theme-600 font-semibold">
                            {{ item.remaining_quantity|floatformat }} {{ item.product.unit }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {% if item.batch_number %}{{ item.batch_number }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {% if item.specifications %}{{ item.specifications }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center text-gray-400">
                            <svg x-data="heroicon('inbox')" class="text-3xl mb-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <p class="text-sm">暂无明细</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Conversion Information (if converting or completed) -->
    {% if borrow.status == 'converting' or borrow.status == 'completed' %}
    <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-900">转采购信息</h4>
        </div>
        <div class="px-6 py-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {% if borrow.conversion_approved_by %}
                <div>
                    <p class="text-sm text-gray-600 mb-1">审核人</p>
                    <p class="text-sm font-medium text-gray-900">
                        {{ borrow.conversion_approved_by.get_full_name|default:borrow.conversion_approved_by.username }}
                    </p>
                </div>
                {% endif %}
                {% if borrow.conversion_approved_at %}
                <div>
                    <p class="text-sm text-gray-600 mb-1">审核时间</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.conversion_approved_at|date:"Y-m-d H:i" }}</p>
                </div>
                {% endif %}
                {% if borrow.conversion_notes %}
                <div class="md:col-span-3">
                    <p class="text-sm text-gray-600 mb-1">转采购备注</p>
                    <p class="text-sm font-medium text-gray-900">{{ borrow.conversion_notes }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
