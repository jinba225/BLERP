{% extends 'base.html' %}
{% block title %}采购申请列表 - BetterLaser ERP{% endblock %}
{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">采购管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">采购申请</span>
{% endblock %}
{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">采购申请列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'purchase:request_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建申请
        </a>
    </div>
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">申请单号</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">申请部门</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">申请日期</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for request in page_obj %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4"><a href="{% url 'purchase:request_detail' request.pk %}" class="text-theme-600">{{ request.request_number }}</a></td>
                    <td class="px-6 py-4">{{ request.department.name }}</td>
                    <td class="px-6 py-4">{{ request.request_date|date:"Y-m-d" }}</td>
                    <td class="px-6 py-4">{{ request.get_status_display }}</td>
                    <td class="px-6 py-4 text-right">
                        <a href="{% url 'purchase:request_detail' request.pk %}" class="text-theme-600 hover:text-theme-900">查看</a>
                    </td>
                </tr>
                {% empty %}
                <tr><td colspan="5" class="px-6 py-12 text-center text-gray-500">暂无数据</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}