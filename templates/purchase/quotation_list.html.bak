{% extends 'base.html' %}
{% block title %}供应商报价列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">采购管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">供应商报价</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">供应商报价列表</h3>
            <p class="text-sm text-gray-600">共 {{ page_obj.paginator.count }} 条记录</p>
        </div>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search_query }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500" placeholder="报价单号、询价单号...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">供应商</label>
                <select name="supplier" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部供应商</option>
                    {% for sup in suppliers %}
                    <option value="{{ sup.id }}" {% if supplier_id|stringformat:"s" == sup.id|stringformat:"s" %}selected{% endif %}>
                        {{ sup.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部状态</option>
                    {% for status_key, status_label in quotation_statuses %}
                    <option value="{{ status_key }}" {% if status == status_key %}selected{% endif %}>{{ status_label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="flex items-end space-x-2">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>搜索
                </button>
                <a href="{% url 'purchase:quotation_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </form>
    </div> <!-- Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        {% if page_obj %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报价单号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">询价单号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">供应商</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报价日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">有效期至</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">报价总额</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for quotation in page_obj %}
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            {{ quotation.quotation_number }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            <a href="{% url 'purchase:inquiry_detail' quotation.inquiry.pk %}" class="text-theme-600 hover:text-theme-700">
                                {{ quotation.inquiry.inquiry_number }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ quotation.supplier.name }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ quotation.quotation_date }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ quotation.valid_until }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                            {% if quotation.status != 'pending' %}¥{{ quotation.total_amount|floatformat:2 }}{% else %}<span class="text-gray-400">待报价</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            <span class="px-2 py-1 text-xs font-semibold rounded
                                {% if quotation.status == 'pending' %}bg-gray-100 text-gray-800
                                {% elif quotation.status == 'submitted' %}bg-theme-100 text-theme-800
                                {% elif quotation.status == 'selected' %}bg-green-100 text-green-800
                                {% elif quotation.status == 'rejected' %}bg-red-100 text-red-800
                                {% elif quotation.status == 'expired' %}bg-gray-100 text-gray-600
                                {% endif %}">
                                {{ quotation.get_status_display }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="{% url 'purchase:quotation_detail' quotation.pk %}" class="text-theme-600 hover:text-theme-700" title="查看详情">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        显示第 <span class="font-medium">{{ page_obj.start_index }}</span>
                        到 <span class="font-medium">{{ page_obj.end_index }}</span>
                        条，共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                        {% if page_obj.has_previous %}
                        <a href="?page={{ page_obj.previous_page_number }}&search={{ search_query }}&supplier={{ supplier_id }}&status={{ status }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <i class="fas fa-angle-left"></i>
                        </a>
                        {% endif %}
                        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                            {{ page_obj.number }}
                        </span>
                        {% if page_obj.has_next %}
                        <a href="?page={{ page_obj.next_page_number }}&search={{ search_query }}&supplier={{ supplier_id }}&status={{ status }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <i class="fas fa-angle-right"></i>
                        </a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
        {% else %}
        <div class="text-center py-12">
            <i class="fas fa-inbox text-gray-400 text-5xl mb-4"></i>
            <p class="text-gray-500">暂无报价数据</p>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
