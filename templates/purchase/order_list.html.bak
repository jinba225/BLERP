{% extends 'base.html' %}
{% block title %}采购订单列表 - BetterLaser ERP{% endblock %}
{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'purchase:order_list' %}" class="text-gray-500 hover:text-gray-700">采购管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">采购订单</span>
{% endblock %}
{% block content %}
<div class="space-y-6">
<div class="flex justify-between items-center"><div><h3 class="text-lg font-semibold text-gray-900">采购订单列表</h3><p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p></div><a class="btn btn-primary" href="{% url 'purchase:order_create' %}"><i class="fas fa-plus mr-2"></i>新建采购订单</a></div>
<div class="bg-white rounded-lg shadow p-6"><form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4"><div><label class="block text-sm font-medium text-gray-700 mb-2">搜索</label><input type="text" name="search" value="{{ search }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="订单号、供应商..."></div><div><label class="block text-sm font-medium text-gray-700 mb-2">供应商</label><select name="supplier" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部供应商</option>{% for sup in suppliers %}<option value="{{ sup.id }}" {% if supplier_id|stringformat:"s" == sup.id|stringformat:"s" %}selected{% endif %}>{{ sup.name }}</option>{% endfor %}</select></div><div><label class="block text-sm font-medium text-gray-700 mb-2">订单状态</label><select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部</option><option value="draft" {% if status == 'draft' %}selected{% endif %}>草稿</option><option value="pending" {% if status == 'pending' %}selected{% endif %}>待审核</option><option value="approved" {% if status == 'approved' %}selected{% endif %}>已审核</option><option value="sent" {% if status == 'sent' %}selected{% endif %}>已发送</option><option value="confirmed" {% if status == 'confirmed' %}selected{% endif %}>已确认</option><option value="received" {% if status == 'received' %}selected{% endif %}>已收货</option><option value="completed" {% if status == 'completed' %}selected{% endif %}>已完成</option></select></div><div><label class="block text-sm font-medium text-gray-700 mb-2">付款状态</label><select name="payment_status" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部</option><option value="unpaid" {% if payment_status == 'unpaid' %}selected{% endif %}>未付款</option><option value="partial" {% if payment_status == 'partial' %}selected{% endif %}>部分付款</option><option value="paid" {% if payment_status == 'paid' %}selected{% endif %}>已付款</option><option value="overdue" {% if payment_status == 'overdue' %}selected{% endif %}>逾期</option></select></div><div><label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label><input type="date" name="date_from" value="{{ date_from }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg"></div><div class="flex items-end"><button class="btn btn-primary" type="submit"><i class="fas fa-search mr-2"></i>搜索</button></div></form></div>
<div class="bg-white rounded-lg shadow overflow-x-auto"><table class="min-w-full divide-y divide-gray-200"><thead class="bg-gray-50"><tr><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">采购单号</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">供应商</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">订单日期</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">要求交期</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">订单金额</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">订单状态</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">付款状态</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">采购员</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th></tr></thead><tbody class="bg-white divide-y divide-gray-200">{% for order in page_obj %}<tr class="hover:bg-gray-50"><td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ order.order_number }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ order.supplier.name }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ order.order_date }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ order.required_date|default:"-" }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">¥{{ order.total_amount }}</td><td class="px-6 py-4 whitespace-nowrap"><span class="px-2 py-1 text-xs font-semibold rounded {% if order.status == 'draft' %}bg-gray-100 text-gray-800{% elif order.status == 'approved' or order.status == 'confirmed' %}bg-theme-100 text-theme-800{% elif order.status == 'completed' %}bg-green-100 text-green-800{% elif order.status == 'cancelled' %}bg-red-100 text-red-800{% else %}bg-yellow-100 text-yellow-800{% endif %}">{{ order.get_status_display }}</span></td><td class="px-6 py-4 whitespace-nowrap"><span class="px-2 py-1 text-xs font-semibold rounded {% if order.payment_status == 'unpaid' or order.payment_status == 'overdue' %}bg-red-100 text-red-800{% elif order.payment_status == 'paid' %}bg-green-100 text-green-800{% else %}bg-yellow-100 text-yellow-800{% endif %}">{{ order.get_payment_status_display }}</span></td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ order.buyer.username|default:"-" }}</td><td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"><a href="{% url 'purchase:order_detail' order.pk %}" class="text-theme-600 hover:text-theme-700 mr-3"><i class="fas fa-eye"></i></a>{% if order.status == 'draft' %}<a href="{% url 'purchase:order_update' order.pk %}" class="text-green-600 hover:text-green-900"><i class="fas fa-edit"></i></a>{% endif %}</td></tr>{% empty %}<tr><td colspan="9" class="px-6 py-12 text-center text-gray-500"><i class="fas fa-inbox text-4xl mb-3"></i><p>暂无采购订单数据</p></td></tr>{% endfor %}</tbody></table>{% if page_obj.has_other_pages %}<div class="bg-white px-4 py-3 flex items-center justify-between border-t"><p class="text-sm text-gray-700">显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ page_obj.paginator.count }} 条</p></div>{% endif %}</div>
</div>
{% endblock %}
