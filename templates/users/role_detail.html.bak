{% extends 'base.html' %}

{% block title %}{{ role.name }} - 角色详情 - BetterLaser ERP{% endblock %}
{% block page_title %}角色详情{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'users:role_list' %}" class="text-gray-500 hover:text-gray-700">角色管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ role.name }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 角色基本信息卡片 -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">
                <i class="fas fa-user-tag mr-2 text-theme-600"></i>角色信息
            </h2>
            <div class="flex space-x-2">
                <a href="{% url 'users:role_permissions' role.pk %}"
                   class="px-4 py-2 border border-theme-600 text-theme-600 rounded-lg hover:bg-theme-50">
                    <i class="fas fa-shield-alt mr-2"></i>权限管理
                </a>
                <a href="{% url 'users:role_update' role.pk %}"
                   class="px-4 py-2 border border-theme-600 text-theme-600 rounded-lg hover:bg-theme-50">
                    <i class="fas fa-edit mr-2"></i>编辑
                </a>
                <a href="{% url 'users:role_delete' role.pk %}"
                   class="px-4 py-2 border border-red-600 text-red-600 rounded-lg hover:bg-red-50">
                    <i class="fas fa-trash mr-2"></i>删除
                </a>
            </div>
        </div> <div class="p-6">
            <div class="flex items-start space-x-6">
                <!-- 角色图标 -->
                <div class="flex-shrink-0">
                    <div class="h-24 w-24 rounded-lg bg-purple-100 flex items-center justify-center border-4 border-purple-200">
                        <i class="fas fa-user-tag text-purple-600 text-4xl"></i>
                    </div>
                </div> <!-- 基本信息 -->
                <div class="flex-1">
                    <div class="mb-4">
                        <h3 class="text-2xl font-bold text-gray-900">
                            {{ role.name }}
                            {% if role.is_active %}
                            <span class="ml-3 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-1"></i>启用
                            </span>
                            {% else %}
                            <span class="ml-3 inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                                <i class="fas fa-times-circle mr-1"></i>停用
                            </span>
                            {% endif %}
                        </h3>
                        <p class="text-gray-500 mt-1">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                <i class="fas fa-code mr-1"></i>{{ role.code }}
                            </span>
                        </p>
                    </div> <div class="mb-6">
                        <label class="text-sm font-medium text-gray-500">角色描述</label>
                        <p class="mt-1 text-gray-900">
                            {{ role.description|default:"暂无描述" }}
                        </p>
                    </div> <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="flex items-center">
                            <div class="bg-purple-100 rounded-lg p-3 mr-3">
                                <i class="fas fa-users text-purple-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">用户数量</p>
                                <p class="text-lg font-semibold text-gray-900">{{ user_count }} 人</p>
                            </div>
                        </div> <div class="flex items-center">
                            <div class="bg-theme-100 rounded-lg p-3 mr-3">
                                <i class="fas fa-calendar text-theme-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">创建时间</p>
                                <p class="text-sm font-medium text-gray-900">{{ role.created_at|date:"Y-m-d H:i" }}</p>
                            </div>
                        </div> <div class="flex items-center">
                            <div class="bg-green-100 rounded-lg p-3 mr-3">
                                <i class="fas fa-clock text-green-600"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500">更新时间</p>
                                <p class="text-sm font-medium text-gray-900">{{ role.updated_at|date:"Y-m-d H:i" }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- 创建和更新信息 -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- 创建信息 -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-plus-circle mr-2 text-theme-600"></i>创建信息
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="text-sm font-medium text-gray-500">创建人</label>
                    <p class="mt-1 text-gray-900">
                        {% if role.created_by %}
                        <i class="fas fa-user mr-2 text-gray-400"></i>
                        <a href="{% url 'users:user_detail' role.created_by.pk %}"
                           class="text-theme-600 hover:text-theme-800">
                            {{ role.created_by.get_full_name|default:role.created_by.username }}
                        </a>
                        {% else %}
                        <span class="text-gray-400">系统创建</span>
                        {% endif %}
                    </p>
                </div> <div>
                    <label class="text-sm font-medium text-gray-500">创建时间</label>
                    <p class="mt-1 text-gray-900">
                        <i class="fas fa-calendar-plus mr-2 text-gray-400"></i>
                        {{ role.created_at|date:"Y年m月d日 H:i:s" }}
                    </p>
                </div>
            </div>
        </div> <!-- 更新信息 -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-edit mr-2 text-theme-600"></i>更新信息
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <div>
                    <label class="text-sm font-medium text-gray-500">最后更新人</label>
                    <p class="mt-1 text-gray-900">
                        {% if role.updated_by %}
                        <i class="fas fa-user mr-2 text-gray-400"></i>
                        <a href="{% url 'users:user_detail' role.updated_by.pk %}"
                           class="text-theme-600 hover:text-theme-800">
                            {{ role.updated_by.get_full_name|default:role.updated_by.username }}
                        </a>
                        {% else %}
                        <span class="text-gray-400">未更新</span>
                        {% endif %}
                    </p>
                </div> <div>
                    <label class="text-sm font-medium text-gray-500">最后更新时间</label>
                    <p class="mt-1 text-gray-900">
                        <i class="fas fa-clock mr-2 text-gray-400"></i>
                        {{ role.updated_at|date:"Y年m月d日 H:i:s" }}
                    </p>
                </div>
            </div>
        </div>
    </div> <!-- 拥有此角色的用户列表 -->
    <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <div>
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-users mr-2 text-theme-600"></i>拥有此角色的用户
                </h3>
                <p class="text-sm text-gray-500 mt-1">
                    共 {{ user_count }} 个用户
                    {% if user_count > 20 %}
                    <span class="text-gray-400">（仅显示前20个）</span>
                    {% endif %}
                </p>
            </div>
            <a class="btn btn-primary" href="{% url 'users:role_assign_users' role.pk %}">
                <i class="fas fa-user-plus mr-2"></i>添加用户
            </a>
        </div> {% if user_roles %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            用户信息
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            员工编号
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            部门/职位
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            状态
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            分配时间
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for user_role in user_roles %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10">
                                    {% if user_role.user.avatar %}
                                    <img class="h-10 w-10 rounded-full" src="{{ user_role.user.avatar.url }}" alt="{{ user_role.user.username }}">
                                    {% else %}
                                    <div class="h-10 w-10 rounded-full bg-theme-100 flex items-center justify-center">
                                        <span class="text-theme-600 font-semibold text-lg">
                                            {{ user_role.user.username|first|upper }}
                                        </span>
                                    </div>
                                    {% endif %}
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">
                                        {{ user_role.user.username }}
                                        {% if user_role.user.is_staff %}
                                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                                            <i class="fas fa-user-shield mr-1"></i>管理员
                                        </span>
                                        {% endif %}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        <i class="fas fa-envelope mr-1"></i>{{ user_role.user.email }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{ user_role.user.employee_id|default:"-" }}</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900">
                                <i class="fas fa-building mr-1 text-gray-400"></i>
                                {{ user_role.user.department.name|default:"未分配" }}
                            </div>
                            <div class="text-sm text-gray-500">
                                <i class="fas fa-briefcase mr-1 text-gray-400"></i>
                                {{ user_role.user.position|default:"未设置" }}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if user_role.user.is_active %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <i class="fas fa-check-circle mr-1"></i>活跃
                            </span>
                            {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                <i class="fas fa-times-circle mr-1"></i>停用
                            </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <div>{{ user_role.created_at|date:"Y-m-d" }}</div>
                            <div class="text-xs text-gray-400">{{ user_role.created_at|date:"H:i" }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                            <a href="{% url 'users:user_detail' user_role.user.pk %}"
                               class="text-theme-600 hover:text-theme-900 mr-3"
                               title="查看用户">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="{% url 'users:role_remove_user' role.pk user_role.user.pk %}"
                               class="text-red-600 hover:text-red-900"
                               title="移除用户">
                                <i class="fas fa-user-minus"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> {% if user_count > 20 %}
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <p class="text-sm text-gray-600 text-center">
                <i class="fas fa-info-circle mr-1"></i>
                共有 {{ user_count }} 个用户拥有此角色，上方仅显示前 20 个用户
            </p>
        </div>
        {% endif %} {% else %}
        <div class="p-12 text-center text-gray-400">
            <i class="fas fa-users text-4xl mb-3"></i>
            <p class="text-lg">暂无用户拥有此角色</p>
            <p class="text-sm mt-2">可以在用户管理中为用户分配此角色</p>
        </div>
        {% endif %}
    </div> <!-- 返回和其他操作 -->
    <div class="flex justify-between">
        <a href="{% url 'users:role_list' %}"
           class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
            <i class="fas fa-arrow-left mr-2"></i>返回列表
        </a> <div class="flex space-x-2">
            {% if not role.is_active %}
            <div class="bg-yellow-50 border-l-4 border-yellow-400 p-3 rounded">
                <p class="text-sm text-yellow-700">
                    <i class="fas fa-exclamation-triangle mr-1"></i>
                    此角色已停用，拥有该角色的用户将无法获得相应权限
                </p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
