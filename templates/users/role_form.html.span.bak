{% extends 'base.html' %}

{% block title %}{% if action == 'create' %}新建角色{% else %}编辑角色{% endif %} - BetterLaser ERP{% endblock %}
{% block page_title %}{% if action == 'create' %}新建角色{% else %}编辑角色{% endif %}{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'users:role_list' %}" class="text-gray-500 hover:text-gray-700">角色管理</a>
<span class="mx-2 text-gray-400">/</span>
{% if action == 'update' %}
<a href="{% url 'users:role_detail' role.pk %}" class="text-gray-500 hover:text-gray-700">{{ role.name }}</a>
<span class="mx-2 text-gray-400">/</span>
{% endif %}
<span class="text-gray-900 font-semibold">{% if action == 'create' %}新建角色{% else %}编辑{% endif %}</span>
{% endblock %}

{% block content %}
<div class="max-w-3xl mx-auto">
    <form method="post" class="space-y-6">
        {% csrf_token %} <!-- 基本信息 -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <svg x-data="heroicon('user-shield')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>角色信息
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <!-- 角色名称 -->
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                        角色名称 <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="name" name="name"
                           value="{% if action == 'update' %}{{ role.name }}{% endif %}"
                           required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="例如：销售经理">
                    <p class="mt-1 text-xs text-gray-500">角色的显示名称，建议使用中文</p>
                </div> <!-- 角色代码 -->
                <div>
                    <label for="code" class="block text-sm font-medium text-gray-700 mb-2">
                        角色代码 <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="code" name="code"
                           value="{% if action == 'update' %}{{ role.code }}{% endif %}"
                           required
                           pattern="[A-Z_]+"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="例如：SALES_MANAGER"
                           oninput="this.value = this.value.toUpperCase()">
                    <p class="mt-1 text-xs text-gray-500">角色的唯一标识码，只能使用大写字母和下划线，必须唯一</p>
                </div> <!-- 角色描述 -->
                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                        角色描述
                    </label>
                    <textarea id="description" name="description" rows="4"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                              placeholder="请简要描述此角色的职责和权限范围">{% if action == 'update' %}{{ role.description }}{% endif %}</textarea>
                    <p class="mt-1 text-xs text-gray-500">详细描述角色的用途和权限范围，方便其他管理员理解</p>
                </div> <!-- 启用状态 -->
                <div>
                    <label class="flex items-center">
                        <input type="checkbox" name="is_active"
                               {% if action == 'create' or role.is_active %}checked{% endif %}
                               class="rounded border-gray-300 text-theme-600 focus:ring-theme-500 h-4 w-4">
                        <span class="ml-3">
                            <span class="text-sm font-medium text-gray-900">启用此角色</span>
                            <p class="text-xs text-gray-500">取消勾选将停用该角色，拥有此角色的用户将无法获得相应权限</p>
                        </span>
                    </label>
                </div>
            </div>
        </div> <!-- 提示信息 -->
        <div class="bg-theme-50 border-l-4 border-theme-400 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg x-data="heroicon('information-circle')" class="text-theme-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-theme-800">
                        <i class="fas fa-lightbulb mr-1"></i>角色命名建议
                    </h3>
                    <div class="mt-2 text-sm text-theme-700">
                        <ul class="list-disc list-inside space-y-1">
                            <li><strong>名称：</strong>使用清晰易懂的中文名称，例如"销售经理"、"仓库管理员"</li>
                            <li><strong>代码：</strong>使用大写字母和下划线，例如"SALES_MANAGER"、"WAREHOUSE_ADMIN"</li>
                            <li><strong>描述：</strong>详细说明角色的职责范围和权限边界</li>
                            <li><strong>唯一性：</strong>角色代码必须在系统中唯一，不能重复</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div> <!-- 角色管理说明 -->
        {% if action == 'create' %}
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg x-data="heroicon('exclamation-triangle')" class="text-yellow-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-yellow-800">
                        <i class="fas fa-shield-alt mr-1"></i>权限管理提示
                    </h3>
                    <div class="mt-2 text-sm text-yellow-700">
                        <p>创建角色后，您需要：</p>
                        <ol class="list-decimal list-inside space-y-1 mt-2">
                            <li>为角色分配具体的权限（功能开发中）</li>
                            <li>将角色分配给需要这些权限的用户</li>
                            <li>定期审查和更新角色权限，确保符合安全要求</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        {% endif %} {% if action == 'update' %}
        <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg x-data="heroicon('exclamation-triangle')" class="text-yellow-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-yellow-800">
                        <svg x-data="heroicon('pencil')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑角色注意事项
                    </h3>
                    <div class="mt-2 text-sm text-yellow-700">
                        <ul class="list-disc list-inside space-y-1">
                            <li>修改角色信息会立即影响所有拥有此角色的用户</li>
                            <li>停用角色会使该角色的权限暂时失效，但不会删除角色分配</li>
                            <li>角色代码修改后可能影响系统中的权限判断逻辑</li>
                            <li>建议在非工作时间进行重要角色的修改操作</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {% endif %} <!-- 操作按钮 -->
        <div class="flex justify-between items-center">
            <a href="{% if action == 'update' %}{% url 'users:role_detail' role.pk %}{% else %}{% url 'users:role_list' %}{% endif %}"
               class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <svg x-data="heroicon('x-mark')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>取消
            </a>
            <button class="btn btn-primary" type="submit">
                <svg x-data="heroicon('check')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                {% if action == 'create' %}创建角色{% else %}保存更改{% endif %}
            </button>
        </div>
    </form> <!-- 角色代码示例 -->
    {% if action == 'create' %}
    <div class="mt-6 bg-white rounded-lg shadow p-6">
        <h4 class="text-md font-semibold text-gray-900 mb-4">
            <i class="fas fa-code mr-2 text-theme-600"></i>常用角色代码示例
        </h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <span class="text-gray-700">管理员</span>
                <code class="px-2 py-1 bg-gray-200 rounded text-gray-800">ADMIN</code>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <span class="text-gray-700">销售经理</span>
                <code class="px-2 py-1 bg-gray-200 rounded text-gray-800">SALES_MANAGER</code>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <span class="text-gray-700">采购员</span>
                <code class="px-2 py-1 bg-gray-200 rounded text-gray-800">PURCHASER</code>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <span class="text-gray-700">仓库管理员</span>
                <code class="px-2 py-1 bg-gray-200 rounded text-gray-800">WAREHOUSE_ADMIN</code>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <span class="text-gray-700">财务主管</span>
                <code class="px-2 py-1 bg-gray-200 rounded text-gray-800">FINANCE_SUPERVISOR</code>
            </div>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded">
                <span class="text-gray-700">普通员工</span>
                <code class="px-2 py-1 bg-gray-200 rounded text-gray-800">EMPLOYEE</code>
            </div>
        </div>
    </div>
    {% endif %}
</div>

<script>
// 代码自动转大写
document.getElementById('code').addEventListener('input', function(e) {
    this.value = this.value.toUpperCase().replace(/[^A-Z_]/g, '');
});

// 表单提交前验证
document.querySelector('form').addEventListener('submit', function(e) {
    const code = document.getElementById('code').value; // 验证代码格式
    if (!/^[A-Z_]+$/.test(code)) {
        e.preventDefault();
        alert('角色代码只能包含大写字母和下划线！');
        return false;
    } // 验证代码长度
    if (code.length < 2) {
        e.preventDefault();
        alert('角色代码至少需要2个字符！');
        return false;
    }
});
</script>
{% endblock %}
