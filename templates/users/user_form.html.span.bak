{% extends 'base.html' %}

{% block title %}{% if action == 'create' %}新建用户{% else %}编辑用户{% endif %} - BetterLaser ERP{% endblock %}
{% block page_title %}{% if action == 'create' %}新建用户{% else %}编辑用户{% endif %}{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'users:user_list' %}" class="text-gray-500 hover:text-gray-700">用户管理</a>
<span class="mx-2 text-gray-400">/</span>
{% if action == 'update' %}
<a href="{% url 'users:user_detail' user.pk %}" class="text-gray-500 hover:text-gray-700">{{ user.username }}</a>
<span class="mx-2 text-gray-400">/</span>
{% endif %}
<span class="text-gray-900 font-semibold">{% if action == 'create' %}新建用户{% else %}编辑{% endif %}</span>
{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <form method="post" enctype="multipart/form-data" class="space-y-6">
        {% csrf_token %} <!-- 登录信息 -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <svg x-data="heroicon('key')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>登录信息
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- 用户名 -->
                    <div>
                        <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
                            用户名 <span class="text-red-500">*</span>
                        </label>
                        <input type="text" id="username" name="username"
                               value="{% if action == 'update' %}{{ user.username }}{% endif %}"
                               required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="请输入用户名">
                        <p class="mt-1 text-xs text-gray-500">用于登录系统，必须唯一</p>
                    </div> <!-- 邮箱 -->
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                            邮箱地址 <span class="text-red-500">*</span>
                        </label>
                        <input type="email" id="email" name="email"
                               value="{% if action == 'update' %}{{ user.email }}{% endif %}"
                               required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="请输入邮箱地址">
                        <p class="mt-1 text-xs text-gray-500">用于接收系统通知</p>
                    </div> <!-- 密码 -->
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                            密码 {% if action == 'create' %}<span class="text-red-500">*</span>{% endif %}
                        </label>
                        <input type="password" id="password" name="password"
                               {% if action == 'create' %}required{% endif %}
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="{% if action == 'create' %}请输入密码{% else %}留空则不修改密码{% endif %}">
                        <p class="mt-1 text-xs text-gray-500">
                            {% if action == 'create' %}至少8个字符，包含字母和数字{% else %}留空表示不修改密码{% endif %}
                        </p>
                    </div> <!-- 确认密码 -->
                    {% if action == 'create' %}
                    <div>
                        <label for="password_confirm" class="block text-sm font-medium text-gray-700 mb-2">
                            确认密码 <span class="text-red-500">*</span>
                        </label>
                        <input type="password" id="password_confirm" name="password_confirm" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="请再次输入密码">
                        <p class="mt-1 text-xs text-gray-500">请再次输入密码以确认</p>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div> <!-- 基本信息 -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <svg x-data="heroicon('user')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>基本信息
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- 姓 -->
                    <div>
                        <label for="last_name" class="block text-sm font-medium text-gray-700 mb-2">
                            姓
                        </label>
                        <input type="text" id="last_name" name="last_name"
                               value="{% if action == 'update' %}{{ user.last_name }}{% endif %}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="例如：张">
                    </div> <!-- 名 -->
                    <div>
                        <label for="first_name" class="block text-sm font-medium text-gray-700 mb-2">
                            名
                        </label>
                        <input type="text" id="first_name" name="first_name"
                               value="{% if action == 'update' %}{{ user.first_name }}{% endif %}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="例如：三">
                    </div> <!-- 员工编号 -->
                    <div>
                        <label for="employee_id" class="block text-sm font-medium text-gray-700 mb-2">
                            员工编号
                        </label>
                        <input type="text" id="employee_id" name="employee_id"
                               value="{% if action == 'update' %}{{ user.employee_id }}{% endif %}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="例如：EMP001">
                    </div> <!-- 手机号 -->
                    <div>
                        <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                            手机号
                        </label>
                        <input type="tel" id="phone" name="phone"
                               value="{% if action == 'update' %}{{ user.phone }}{% endif %}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="例如：13800138000">
                    </div> <!-- 性别 -->
                    <div>
                        <label for="gender" class="block text-sm font-medium text-gray-700 mb-2">
                            性别
                        </label>
                        <select id="gender" name="gender"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            <option value="">请选择性别</option>
                            {% for value, label in gender_choices %}
                            <option value="{{ value }}"
                                    {% if action == 'update' and user.gender == value %}selected{% endif %}>
                                {{ label }}
                            </option>
                            {% endfor %}
                        </select>
                    </div> <!-- 出生日期 -->
                    <div>
                        <label for="birth_date" class="block text-sm font-medium text-gray-700 mb-2">
                            出生日期
                        </label>
                        <input type="date" id="birth_date" name="birth_date"
                               value="{% if action == 'update' and user.birth_date %}{{ user.birth_date|date:'Y-m-d' }}{% endif %}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    </div>
                </div>
            </div>
        </div> <!-- 组织信息 -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <svg x-data="heroicon('building')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>组织信息
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <!-- 部门 -->
                    <div>
                        <label for="department" class="block text-sm font-medium text-gray-700 mb-2">
                            所属部门
                        </label>
                        <select id="department" name="department"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            <option value="">请选择部门</option>
                            {% for dept in departments %}
                            <option value="{{ dept.id }}"
                                    {% if action == 'update' and user.department_id == dept.id %}selected{% endif %}>
                                {{ dept.name }}
                            </option>
                            {% endfor %}
                        </select>
                    </div> <!-- 职位 -->
                    <div>
                        <label for="position" class="block text-sm font-medium text-gray-700 mb-2">
                            职位
                        </label>
                        <input type="text" id="position" name="position"
                               value="{% if action == 'update' %}{{ user.position }}{% endif %}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                               placeholder="例如：软件工程师">
                    </div> <!-- 直属上级 -->
                    <div>
                        <label for="manager" class="block text-sm font-medium text-gray-700 mb-2">
                            直属上级
                        </label>
                        <select id="manager" name="manager"
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                            <option value="">请选择直属上级</option>
                            {% for mgr in managers %}
                            <option value="{{ mgr.id }}"
                                    {% if action == 'update' and user.manager_id == mgr.id %}selected{% endif %}>
                                {{ mgr.get_full_name|default:mgr.username }}
                            </option>
                            {% endfor %}
                        </select>
                    </div> <!-- 入职日期 -->
                    <div>
                        <label for="hire_date" class="block text-sm font-medium text-gray-700 mb-2">
                            入职日期
                        </label>
                        <input type="date" id="hire_date" name="hire_date"
                               value="{% if action == 'update' and user.hire_date %}{{ user.hire_date|date:'Y-m-d' }}{% endif %}"
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    </div>
                </div>
            </div>
        </div> <!-- 权限设置 -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="fas fa-shield-alt mr-2 text-theme-600"></i>权限设置
                </h3>
            </div>
            <div class="p-6 space-y-4">
                <div class="space-y-3">
                    <!-- 活跃状态 -->
                    <label class="flex items-center">
                        <input type="checkbox" name="is_active"
                               {% if action == 'create' or user.is_active %}checked{% endif %}
                               class="rounded border-gray-300 text-theme-600 focus:ring-theme-500 h-4 w-4">
                        <span class="ml-3">
                            <span class="text-sm font-medium text-gray-900">活跃状态</span>
                            <p class="text-xs text-gray-500">取消勾选将禁止该用户登录系统</p>
                        </span>
                    </label> <!-- 管理员 -->
                    <label class="flex items-center">
                        <input type="checkbox" name="is_staff"
                               {% if action == 'update' and user.is_staff %}checked{% endif %}
                               class="rounded border-gray-300 text-theme-600 focus:ring-theme-500 h-4 w-4">
                        <span class="ml-3">
                            <span class="text-sm font-medium text-gray-900">管理员</span>
                            <p class="text-xs text-gray-500">管理员可以访问后台管理界面</p>
                        </span>
                    </label>
                </div> <!-- 角色信息提示 -->
                <div class="border-t border-gray-200 pt-4">
                    <div class="bg-theme-50 border-l-4 border-theme-400 p-4">
                        <div class="flex">
                            <div class="flex-shrink-0">
                                <svg x-data="heroicon('information-circle')" class="text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-sm font-medium text-theme-800 mb-1">
                                    <svg x-data="heroicon('user-shield')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>角色分配说明
                                </h3>
                                <p class="text-sm text-theme-700">
                                    角色分配已移至<strong>角色管理</strong>功能。请前往<a href="{% url 'users:role_list' %}" class="underline hover:text-theme-900 font-medium">角色管理页面</a>为用户批量分配角色和权限。
                                </p>
                                {% if action == 'update' %}
                                <div class="mt-2 pt-2 border-t border-theme-200">
                                    <p class="text-xs text-theme-600 font-medium mb-1">当前用户拥有的角色：</p>
                                    {% if current_role_ids %}
                                    <div class="flex flex-wrap gap-2">
                                        {% for role in roles %}
                                        {% if role.id in current_role_ids %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                                            <svg x-data="heroicon('user-shield')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>{{ role.name }}
                                        </span>
                                        {% endif %}
                                        {% endfor %}
                                    </div>
                                    {% else %}
                                    <p class="text-xs text-theme-600">暂无角色</p>
                                    {% endif %}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div> <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mt-4">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg x-data="heroicon('exclamation-triangle')" class="text-yellow-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">
                                <strong>提示：</strong>管理员权限需要谨慎授予。建议通过角色系统来精细化控制用户权限。
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div> <!-- 操作按钮 -->
        <div class="flex justify-between items-center">
            <a href="{% if action == 'update' %}{% url 'users:user_detail' user.pk %}{% else %}{% url 'users:user_list' %}{% endif %}"
               class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <svg x-data="heroicon('x-mark')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>取消
            </a>
            <button class="btn btn-primary" type="submit">
                <svg x-data="heroicon('check')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                {% if action == 'create' %}创建用户{% else %}保存更改{% endif %}
            </button>
        </div>
    </form>
</div>

{% if action == 'create' %}
<script>
// 密码确认验证
document.querySelector('form').addEventListener('submit', function(e) {
    const password = document.getElementById('password').value;
    const passwordConfirm = document.getElementById('password_confirm').value; if (password !== passwordConfirm) {
        e.preventDefault();
        alert('两次输入的密码不一致，请重新输入！');
        return false;
    } if (password.length < 8) {
        e.preventDefault();
        alert('密码长度至少为8个字符！');
        return false;
    }
});
</script>
{% endif %}
{% endblock %}
