{% extends 'base.html' %}

{% block title %}用户管理 - BetterLaser ERP{% endblock %}
{% block page_title %}用户管理{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">用户管理</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 统计卡片 -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">总用户数</p>
                    <p class="text-2xl font-bold text-gray-900 mt-1">{{ total_count }}</p>
                </div>
                <div class="bg-theme-100 rounded-full p-3">
                    <svg x-data="heroicon('users')" class="text-theme-600 text-xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">活跃用户</p>
                    <p class="text-2xl font-bold text-green-600 mt-1">{{ active_count }}</p>
                </div>
                <div class="bg-green-100 rounded-full p-3">
                    <i class="fas fa-user-check text-green-600 text-xl"></i>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">管理员</p>
                    <p class="text-2xl font-bold text-purple-600 mt-1">{{ staff_count }}</p>
                </div>
                <div class="bg-purple-100 rounded-full p-3">
                    <svg x-data="heroicon('user-shield')" class="text-purple-600 text-xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">停用用户</p>
                    <p class="text-2xl font-bold text-red-600 mt-1">{{ inactive_count }}</p>
                </div>
                <div class="bg-red-100 rounded-full p-3">
                    <i class="fas fa-user-slash text-red-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div> <!-- 搜索和过滤 -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <!-- 搜索框 -->
                <div class="md:col-span-2">
                    <label for="search" class="block text-sm font-medium text-gray-700 mb-2">
                        <svg x-data="heroicon('magnifying-glass')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                    </label>
                    <input type="text" id="search" name="search" value="{{ search }}"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="搜索用户名、邮箱、姓名、员工编号...">
                </div> <!-- 部门筛选 -->
                <div>
                    <label for="department" class="block text-sm font-medium text-gray-700 mb-2">
                        <svg x-data="heroicon('building')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>部门
                    </label>
                    <select id="department" name="department"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">全部部门</option>
                        {% for dept in departments %}
                        <option value="{{ dept.id }}" {% if department_id == dept.id|stringformat:"s" %}selected{% endif %}>
                            {{ dept.name }}
                        </option>
                        {% endfor %}
                    </select>
                </div> <!-- 状态筛选 -->
                <div>
                    <label for="is_active" class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-toggle-on mr-1"></i>状态
                    </label>
                    <select id="is_active" name="is_active"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">全部状态</option>
                        <option value="true" {% if is_active == 'true' %}selected{% endif %}>活跃</option>
                        <option value="false" {% if is_active == 'false' %}selected{% endif %}>停用</option>
                    </select>
                </div>
            </div> <div class="flex items-center justify-between pt-2">
                <div>
                    <label class="inline-flex items-center">
                        <input type="checkbox" name="is_staff" value="true"
                               {% if is_staff == 'true' %}checked{% endif %}
                               class="rounded border-gray-300 text-theme-600 focus:ring-theme-500">
                        <span class="ml-2 text-sm text-gray-700">
                            <svg x-data="heroicon('user-shield')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>仅显示管理员
                        </span>
                    </label>
                </div> <div class="flex space-x-3">
                    <a href="{% url 'users:user_list' %}"
                       class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                        <svg x-data="heroicon('arrow-path')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>重置
                    </a>
                    <button class="btn btn-primary" type="submit">
                        <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                    </button>
                </div>
            </div>
        </form>
    </div> <!-- 用户列表 -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">
                <svg x-data="heroicon('queue-list')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>用户列表
            </h2>
            <a class="btn btn-primary" href="{% url 'users:user_create' %}">
                <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建用户
            </a>
        </div> <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            用户信息
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            员工编号
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            部门/职位
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            状态
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            最后登录
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for user in page_obj %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10">
                                    {% if user.avatar %}
                                    <img class="h-10 w-10 rounded-full" src="{{ user.avatar.url }}" alt="{{ user.username }}">
                                    {% else %}
                                    <div class="h-10 w-10 rounded-full bg-theme-100 flex items-center justify-center">
                                        <span class="text-theme-600 font-semibold text-lg">
                                            {{ user.username|first|upper }}
                                        </span>
                                    </div>
                                    {% endif %}
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">
                                        {{ user.username }}
                                        {% if user.is_staff %}
                                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-purple-100 text-purple-800">
                                            <svg x-data="heroicon('user-shield')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>管理员
                                        </span>
                                        {% endif %}
                                        {% if user.is_superuser %}
                                        <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-100 text-red-800">
                                            <i class="fas fa-crown mr-1"></i>超级管理员
                                        </span>
                                        {% endif %}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        <svg x-data="heroicon('envelope')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>{{ user.email }}
                                    </div>
                                    {% if user.phone %}
                                    <div class="text-sm text-gray-500">
                                        <i class="fas fa-phone mr-1"></i>{{ user.phone }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">{{ user.employee_id|default:"-" }}</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900">
                                <svg x-data="heroicon('building')" class="mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                {{ user.department.name|default:"未分配" }}
                            </div>
                            <div class="text-sm text-gray-500">
                                <i class="fas fa-briefcase mr-1 text-gray-400"></i>
                                {{ user.position|default:"未设置" }}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if user.is_active %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                <svg x-data="heroicon('check-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>活跃
                            </span>
                            {% else %}
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                <svg x-data="heroicon('x-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>停用
                            </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {% if user.last_login %}
                            <div>{{ user.last_login|date:"Y-m-d H:i" }}</div>
                            {% else %}
                            <div class="text-gray-400">从未登录</div>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                            <a href="{% url 'users:user_detail' user.pk %}"
                               class="text-theme-600 hover:text-theme-900"
                               title="查看详情">
                                <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            <a href="{% url 'users:user_update' user.pk %}"
                               class="text-theme-600 hover:text-theme-900"
                               title="编辑">
                                <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            <a href="{% url 'users:user_toggle_status' user.pk %}"
                               class="{% if user.is_active %}text-orange-600 hover:text-orange-900{% else %}text-green-600 hover:text-green-900{% endif %}"
                               title="{% if user.is_active %}停用{% else %}启用{% endif %}"
                               onclick="return confirm('确定要{% if user.is_active %}停用{% else %}启用{% endif %}此用户吗？');">
                                <i class="fas fa-{% if user.is_active %}ban{% else %}check{% endif %}"></i>
                            </a>
                            <a href="{% url 'users:user_delete' user.pk %}"
                               class="text-red-600 hover:text-red-900"
                               title="删除">
                                <svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center">
                            <div class="text-gray-400">
                                <svg x-data="heroicon('inbox')" class="text-4xl mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                <p class="text-lg">暂无用户数据</p>
                                {% if search or department_id or is_active %}
                                <p class="text-sm mt-2">试试调整搜索条件</p>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- 分页 -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
                <div class="flex-1 flex justify-between sm:hidden">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}{% if is_staff %}&is_staff={{ is_staff }}{% endif %}"
                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        上一页
                    </a>
                    {% endif %}
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}{% if is_staff %}&is_staff={{ is_staff }}{% endif %}"
                       class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        下一页
                    </a>
                    {% endif %}
                </div>
                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            显示第
                            <span class="font-medium">{{ page_obj.start_index }}</span>
                            到
                            <span class="font-medium">{{ page_obj.end_index }}</span>
                            条，共
                            <span class="font-medium">{{ page_obj.paginator.count }}</span>
                            条记录
                        </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                            {% if page_obj.has_previous %}
                            <a href="?page=1{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}{% if is_staff %}&is_staff={{ is_staff }}{% endif %}"
                               class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                首页
                            </a>
                            <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}{% if is_staff %}&is_staff={{ is_staff }}{% endif %}"
                               class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <svg x-data="heroicon('chevron-left')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            {% endif %} <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                                {{ page_obj.number }} / {{ page_obj.paginator.num_pages }}
                            </span> {% if page_obj.has_next %}
                            <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}{% if is_staff %}&is_staff={{ is_staff }}{% endif %}"
                               class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <svg x-data="heroicon('chevron-right')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            <a href="?page={{ page_obj.paginator.num_pages }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}{% if is_staff %}&is_staff={{ is_staff }}{% endif %}"
                               class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                末页
                            </a>
                            {% endif %}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
