{% extends 'base.html' %}
{% block title %}供应商列表 - BetterLaser ERP{% endblock %}
{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="/purchase/orders/" class="text-gray-500 hover:text-gray-700">采购管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">供应商管理</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
<div class="flex justify-between items-center">
<div><h3 class="text-lg font-semibold text-gray-900">供应商列表</h3><p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p></div>
<a class="btn btn-primary" href="{% url 'suppliers:supplier_create' %}"><i class="fas fa-plus mr-2"></i>新建供应商</a>
</div>
<div class="bg-white rounded-lg shadow p-6">
<form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
<div><label class="block text-sm font-medium text-gray-700 mb-2">搜索</label><input type="text" name="search" value="{{ search }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="供应商名称、编码..."></div>
<div><label class="block text-sm font-medium text-gray-700 mb-2">供应商类型</label><select name="supplier_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部</option><option value="manufacturer" {% if supplier_type == 'manufacturer' %}selected{% endif %}>生产商</option><option value="distributor" {% if supplier_type == 'distributor' %}selected{% endif %}>经销商</option><option value="wholesaler" {% if supplier_type == 'wholesaler' %}selected{% endif %}>批发商</option><option value="service" {% if supplier_type == 'service' %}selected{% endif %}>服务商</option></select></div>
<div><label class="block text-sm font-medium text-gray-700 mb-2">供应商等级</label><select name="level" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部</option><option value="A" {% if level == 'A' %}selected{% endif %}>A级</option><option value="B" {% if level == 'B' %}selected{% endif %}>B级</option><option value="C" {% if level == 'C' %}selected{% endif %}>C级</option><option value="D" {% if level == 'D' %}selected{% endif %}>D级</option></select></div>
<div><label class="block text-sm font-medium text-gray-700 mb-2">审核状态</label><select name="is_approved" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部</option><option value="true" {% if is_approved == 'true' %}selected{% endif %}>已审核</option><option value="false" {% if is_approved == 'false' %}selected{% endif %}>未审核</option></select></div>
<div class="flex items-end"><button class="btn btn-primary" type="submit"><i class="fas fa-search mr-2"></i>搜索</button></div>
</form>
</div>
<div class="bg-white rounded-lg shadow overflow-x-auto">
<table class="min-w-full divide-y divide-gray-200">
<thead class="bg-gray-50">
<tr><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">编码</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">供应商名称</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">类型/等级</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">联系人/电话</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">采购员</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">综合评分</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th></tr>
</thead>
<tbody class="bg-white divide-y divide-gray-200">
{% for supplier in page_obj %}
<tr class="hover:bg-gray-50">
<td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ supplier.code }}</td>
<td class="px-6 py-4 whitespace-nowrap"><div class="text-sm font-medium text-gray-900">{{ supplier.name }}</div>{% if supplier.category %}<div class="text-xs text-gray-500">{{ supplier.category.name }}</div>{% endif %}</td>
<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><div>{{ supplier.get_supplier_type_display }}</div><div class="text-xs">{{ supplier.get_level_display }}</div></td>
<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
{% with primary_contact=supplier.contacts.all|first %}
{% if primary_contact %}
<div>{{ primary_contact.name|default:"-" }}</div>
<div class="text-xs">{{ primary_contact.phone|default:"-" }}</div>
{% else %}
<div>-</div>
<div class="text-xs">-</div>
{% endif %}
{% endwith %}
</td>
<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ supplier.buyer.username|default:"-" }}</td>
<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ supplier.average_rating|floatformat:1 }}/10</td>
<td class="px-6 py-4 whitespace-nowrap"><span class="px-2 py-1 text-xs font-semibold rounded {% if supplier.is_approved %}bg-green-100 text-green-800{% else %}bg-yellow-100 text-yellow-800{% endif %}">{% if supplier.is_approved %}已审核{% else %}待审核{% endif %}</span></td>
<td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
<a href="{% url 'suppliers:supplier_detail' supplier.pk %}" class="text-theme-600 hover:text-theme-700 mr-3"><i class="fas fa-eye"></i></a>
<a href="{% url 'suppliers:supplier_update' supplier.pk %}" class="text-green-600 hover:text-green-900 mr-3"><i class="fas fa-edit"></i></a>
<a href="{% url 'suppliers:supplier_delete' supplier.pk %}" class="text-red-600 hover:text-red-900"><i class="fas fa-trash"></i></a>
</td>
</tr>
{% empty %}
<tr><td colspan="8" class="px-6 py-12 text-center text-gray-500"><i class="fas fa-inbox text-4xl mb-3"></i><p>暂无供应商数据</p></td></tr>
{% endfor %}
</tbody>
</table>
{% if page_obj.has_other_pages %}
<div class="bg-white px-4 py-3 flex items-center justify-between border-t"><div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between"><p class="text-sm text-gray-700">显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ page_obj.paginator.count }} 条</p><nav class="relative z-0 inline-flex rounded-md shadow-sm">{% if page_obj.has_previous %}<a href="?page={{ page_obj.previous_page_number }}" class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">上一页</a>{% endif %}<span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">{{ page_obj.number }}</span>{% if page_obj.has_next %}<a href="?page={{ page_obj.next_page_number }}" class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">下一页</a>{% endif %}</nav></div></div>
{% endif %}
</div>
</div>
{% endblock %}
