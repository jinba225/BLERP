{% extends 'base.html' %}

{% block title %}供应商详情 - {{ supplier.name }} - BetterLaser ERP{% endblock %}
{% block page_title %}供应商详情{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="/purchase/orders/" class="text-gray-500 hover:text-gray-700">采购管理</a>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'suppliers:supplier_list' %}" class="text-gray-500 hover:text-gray-700">供应商管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ supplier.name }}</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ supplier.name }}</h3>
            <p class="text-sm text-gray-600 mt-1">
                <span class="px-2 py-1 text-xs font-semibold rounded {% if supplier.is_approved %}bg-green-100 text-green-800{% else %}bg-yellow-100 text-yellow-800{% endif %}">
                    {% if supplier.is_approved %}已审核{% else %}待审核{% endif %}
                </span>
                <span class="ml-2">{{ supplier.code }}</span>
                <span class="ml-2">{{ supplier.get_supplier_type_display }}</span>
                <span class="ml-2">{{ supplier.get_level_display }}</span>
            </p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'suppliers:supplier_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <i class="fas fa-arrow-left mr-2"></i>返回列表
            </a>
            <a class="btn btn-primary" href="{% url 'suppliers:supplier_update' supplier.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            <a class="btn btn-primary" href="{% url 'suppliers:supplier_delete' supplier.pk %}">
                <i class="fas fa-trash mr-2"></i>删除
            </a>
        </div>
    </div> <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Basic Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">基本信息</h4>
                <dl class="grid grid-cols-2 gap-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">供应商编码</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.code }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">供应商名称</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.name }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">供应商类型</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.get_supplier_type_display }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">供应商等级</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.get_level_display }}</dd>
                    </div>
                    {% if supplier.category %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">供应商分类</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.category.name }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div> <!-- Contact Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">联系信息</h4>
                <dl class="grid grid-cols-2 gap-4">
                    {% if supplier.contact_person %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">联系人</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.contact_person }}</dd>
                    </div>
                    {% endif %}
                    {% if supplier.phone %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">电话</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.phone }}</dd>
                    </div>
                    {% endif %}
                    {% if supplier.mobile %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">手机</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.mobile }}</dd>
                    </div>
                    {% endif %}
                    {% if supplier.email %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">邮箱</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.email }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div> {% if contacts %}
            <div class="bg-white rounded-lg shadow p-6">
                <div class="flex justify-between items-center mb-4 pb-2 border-b">
                    <h4 class="text-lg font-semibold text-gray-900">联系人列表</h4>
                </div>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">姓名</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">类型</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">职位</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">电话</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">手机</th>
                                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">邮箱</th>
                                <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">主联系人</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            {% for c in contacts %}
                            <tr>
                                <td class="px-4 py-3 text-sm text-gray-900">{{ c.name }}</td>
                                <td class="px-4 py-3 text-sm text-gray-900">{{ c.get_contact_type_display|default:'-' }}</td>
                                <td class="px-4 py-3 text-sm text-gray-900">{{ c.position|default:'-' }}</td>
                                <td class="px-4 py-3 text-sm text-gray-900">{{ c.phone|default:'-' }}</td>
                                <td class="px-4 py-3 text-sm text-gray-900">{{ c.mobile|default:'-' }}</td>
                                <td class="px-4 py-3 text-sm text-gray-900">{{ c.email|default:'-' }}</td>
                                <td class="px-4 py-3 text-sm text-center">{% if c.is_primary %}<span class="inline-flex items-center px-2 py-1 rounded bg-green-100 text-green-700 text-xs">主</span>{% else %}-{% endif %}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %} <!-- Address Information -->
            {% if supplier.address or supplier.city or supplier.province or supplier.country %}
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">地址信息</h4>
                <dl class="grid grid-cols-2 gap-4">
                    {% if supplier.address %}
                    <div class="col-span-2">
                        <dt class="text-sm font-medium text-gray-500">详细地址</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.address }}</dd>
                    </div>
                    {% endif %}
                    {% if supplier.city %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">城市</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.city }}</dd>
                    </div>
                    {% endif %}
                    {% if supplier.province %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">省份</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.province }}</dd>
                    </div>
                    {% endif %}
                    {% if supplier.country %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">国家</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.country }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div>
            {% endif %} {% if supplier.notes %}
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">备注</h4>
                <p class="text-sm text-gray-700 whitespace-pre-wrap">{{ supplier.notes }}</p>
            </div>
            {% endif %}
        </div> <!-- Sidebar -->
        <div class="space-y-6">
            <!-- Procurement Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">采购信息</h4>
                <dl class="space-y-3">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">采购员</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.buyer.username|default:"-" }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">交货周期</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.lead_time|default:"-" }} 天</dd>
                    </div>
                    {% if supplier.payment_terms %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">付款方式</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.get_payment_terms_display }}</dd>
                    </div>
                    {% endif %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">综合评分</dt>
                        <dd class="mt-1 text-sm font-semibold text-gray-900">{{ supplier.average_rating|floatformat:1 }}/10</dd>
                    </div>
                </dl>
            </div> <!-- System Information -->
            <div class="bg-white rounded-lg shadow p-6">
                <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">系统信息</h4>
                <dl class="space-y-3">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">创建人</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.created_by.username|default:"-" }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">创建时间</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.created_at|date:"Y-m-d H:i" }}</dd>
                    </div>
                    {% if supplier.updated_by %}
                    <div>
                        <dt class="text-sm font-medium text-gray-500">最后修改人</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.updated_by.username }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">最后修改时间</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ supplier.updated_at|date:"Y-m-d H:i" }}</dd>
                    </div>
                    {% endif %}
                </dl>
            </div>
        </div>
    </div>
</div>
{% endblock %}
