{% extends 'base.html' %}

{% block title %}库存预警报表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
</svg>
<a href="{% url 'inventory:inventory_order_report' %}" class="text-gray-500 hover:text-gray-700">库存报表</a>
<svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
</svg>
<span class="text-gray-500">库存预警</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">库存预警报表</h3>
            <p class="text-sm text-gray-600 mt-1">查看低于安全库存的产品，及时补货</p>
        </div>
    </div> <!-- Alert Banner -->
    {% if total_alerts > 0 %}
    <div class="bg-red-50 border-l-4 border-red-400 p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg x-data="heroicon('exclamation-triangle')" class="text-red-600 text-xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            </div>
            <div class="ml-3">
                <p class="text-sm text-red-800">
                    <strong class="font-semibold">库存预警：</strong>
                    当前有 <span class="font-bold">{{ total_alerts }}</span> 个产品库存低于安全库存线，
                    预估缺货价值约 <span class="font-bold">¥{{ total_shortage_value|floatformat:2 }}</span>，请及时补货！
                </p>
            </div>
        </div>
    </div>
    {% endif %} <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <input type="text" name="search" value="{{ search_query }}" placeholder="搜索产品名称/编码"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div>
            <div>
                <select name="warehouse" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">所有仓库</option>
                    {% for w in warehouses %}
                    <option value="{{ w.id }}" {% if warehouse_id == w.id|stringformat:"s" %}selected{% endif %}>
                        {{ w.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>
            <div class="flex space-x-2">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
                <a href="{% url 'inventory:report_stock_alert' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <svg x-data="heroicon('arrow-path')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </a>
            </div>
        </form>
    </div> <!-- Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        {% if stock_alerts %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">产品</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">仓库</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">库位</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">当前库存</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">安全库存</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">缺货数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">缺货率</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">预警等级</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for alert in stock_alerts %}
                    <tr class="hover:bg-gray-50 {% if alert.shortage_rate >= 80 %}bg-red-100{% elif alert.shortage_rate >= 50 %}bg-orange-50{% else %}bg-yellow-50{% endif %}">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ alert.stock.product.name }}</div>
                            <div class="text-xs text-gray-500">{{ alert.stock.product.code }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ alert.stock.warehouse.name }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {% if alert.stock.location %}{{ alert.stock.location.name }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-red-600">
                            {{ alert.stock.quantity }} {{ alert.stock.product.unit }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-500">
                            {{ alert.stock.product.safety_stock }} {{ alert.stock.product.unit }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-red-600">
                            {{ alert.shortage }} {{ alert.stock.product.unit }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold
                            {% if alert.shortage_rate >= 80 %}text-red-600
                            {% elif alert.shortage_rate >= 50 %}text-orange-600
                            {% else %}text-yellow-600{% endif %}">
                            {{ alert.shortage_rate|floatformat:1 }}%
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            {% if alert.shortage_rate >= 80 %}
                                <span class="px-2 py-1 text-xs font-semibold rounded bg-red-100 text-red-800">
                                    <svg x-data="heroicon('exclamation-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>严重
                                </span>
                            {% elif alert.shortage_rate >= 50 %}
                                <span class="px-2 py-1 text-xs font-semibold rounded bg-orange-100 text-orange-800">
                                    <svg x-data="heroicon('exclamation-triangle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>警告
                                </span>
                            {% else %}
                                <span class="px-2 py-1 text-xs font-semibold rounded bg-yellow-100 text-yellow-800">
                                    <svg x-data="heroicon('information-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>提醒
                                </span>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-12">
            <svg x-data="heroicon('check-circle')" class="text-green-400 text-5xl mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            <p class="text-gray-500">太好了！当前没有库存预警</p>
            <p class="text-sm text-gray-400 mt-2">所有产品库存均在安全库存线以上</p>
        </div>
        {% endif %}
    </div> <!-- Legend -->
    <div class="bg-white rounded-lg shadow p-4">
        <h5 class="text-sm font-semibold text-gray-900 mb-3">预警等级说明</h5>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
            <div class="flex items-center">
                <span class="px-2 py-1 text-xs font-semibold rounded bg-yellow-100 text-yellow-800 mr-2">
                    <svg x-data="heroicon('information-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>提醒
                </span>
                <span class="text-gray-600">缺货率 &lt; 50%</span>
            </div>
            <div class="flex items-center">
                <span class="px-2 py-1 text-xs font-semibold rounded bg-orange-100 text-orange-800 mr-2">
                    <svg x-data="heroicon('exclamation-triangle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>警告
                </span>
                <span class="text-gray-600">缺货率 50% - 80%</span>
            </div>
            <div class="flex items-center">
                <span class="px-2 py-1 text-xs font-semibold rounded bg-red-100 text-red-800 mr-2">
                    <svg x-data="heroicon('exclamation-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>严重
                </span>
                <span class="text-gray-600">缺货率 ≥ 80%</span>
            </div>
        </div>
    </div>
</div>
{% endblock %}
