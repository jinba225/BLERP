{% extends 'base.html' %}

{% block title %}库存调整单列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">库存管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">库存调整单</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">库存调整单列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'inventory:adjustment_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建调整单
        </a>
    </div> <!-- Filters -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text"
                       name="search"
                       value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent"
                       placeholder="调整单号、产品名称...">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">调整类型</label>
                <select name="adjustment_type"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                    <option value="">全部类型</option>
                    {% for type_code, type_name in adjustment_types %}
                    <option value="{{ type_code }}" {% if adjustment_type == type_code %}selected{% endif %}>
                        {{ type_name }}
                    </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">调整原因</label>
                <select name="reason"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                    <option value="">全部原因</option>
                    {% for reason_code, reason_name in adjustment_reasons %}
                    <option value="{{ reason_code }}" {% if reason == reason_code %}selected{% endif %}>
                        {{ reason_name }}
                    </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">仓库</label>
                <select name="warehouse"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                    <option value="">全部仓库</option>
                    {% for wh in warehouses %}
                    <option value="{{ wh.id }}" {% if warehouse_id|stringformat:"s" == wh.id|stringformat:"s" %}selected{% endif %}>
                        {{ wh.name }}
                    </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">审核状态</label>
                <select name="approval_status"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                    <option value="">全部状态</option>
                    <option value="pending" {% if approval_status == 'pending' %}selected{% endif %}>待审核</option>
                    <option value="approved" {% if approval_status == 'approved' %}selected{% endif %}>已审核</option>
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label>
                <input type="date"
                       name="date_from"
                       value="{{ date_from }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">结束日期</label>
                <input type="date"
                       name="date_to"
                       value="{{ date_to }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
            </div> <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <!-- Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        调整单号
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        产品
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        仓库
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        调整类型
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        原因
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        原数量
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        调整后数量
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        差异
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        审核状态
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        创建时间
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for adjustment in page_obj %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {{ adjustment.adjustment_number }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <div>{{ adjustment.product.name }}</div>
                        <div class="text-xs text-gray-500">{{ adjustment.product.code }}</div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ adjustment.warehouse.name }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if adjustment.adjustment_type == 'increase' %}bg-green-100 text-green-800
                            {% elif adjustment.adjustment_type == 'decrease' %}bg-red-100 text-red-800
                            {% else %}bg-theme-100 text-theme-800{% endif %}">
                            {{ adjustment.get_adjustment_type_display }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                        {{ adjustment.get_reason_display }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                        {{ adjustment.original_quantity }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                        {{ adjustment.adjusted_quantity }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium
                        {% if adjustment.difference > 0 %}text-green-600
                        {% elif adjustment.difference < 0 %}text-red-600
                        {% else %}text-gray-900{% endif %}">
                        {% if adjustment.difference > 0 %}+{% endif %}{{ adjustment.difference }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if adjustment.is_approved %}
                        <span class="px-2 py-1 text-xs font-semibold rounded bg-green-100 text-green-800">
                            <svg x-data="heroicon('check-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>已审核
                        </span>
                        {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded bg-yellow-100 text-yellow-800">
                            <svg x-data="heroicon('clock')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>待审核
                        </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ adjustment.created_at|date:"Y-m-d H:i" }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'inventory:adjustment_detail' adjustment.pk %}"
                           class="text-theme-600 hover:text-theme-700 mr-3"
                           title="查看详情">
                            <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% if not adjustment.is_approved %}
                        <a href="{% url 'inventory:adjustment_update' adjustment.pk %}"
                           class="text-green-600 hover:text-green-900 mr-3"
                           title="编辑">
                            <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        <a href="{% url 'inventory:adjustment_approve' adjustment.pk %}"
                           class="text-theme-600 hover:text-theme-900"
                           title="审核">
                            <svg x-data="heroicon('check')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% endif %}
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="11" class="px-6 py-12 text-center text-gray-500">
                        <svg x-data="heroicon('inbox')" class="text-4xl mb-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p>暂无调整单数据</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200">
            <div class="flex-1 flex justify-between sm:hidden">
                {% if page_obj.has_previous %}
                <a href="?page={{ page_obj.previous_page_number }}"
                   class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    上一页
                </a>
                {% endif %}
                {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}"
                   class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    下一页
                </a>
                {% endif %}
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到
                        <span class="font-medium">{{ page_obj.end_index }}</span> 条，
                        共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                        {% if page_obj.has_previous %}
                        <a href="?page={{ page_obj.previous_page_number }}"
                           class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <svg x-data="heroicon('chevron-left')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% endif %} {% for num in page_obj.paginator.page_range %}
                        {% if page_obj.number == num %}
                        <span class="relative inline-flex items-center px-4 py-2 border border-theme-500 bg-theme-50 text-sm font-medium text-theme-600">
                            {{ num }}
                        </span>
                        {% elif num > page_obj.number|add:'-3' and num < page_obj.number|add:'3' %}
                        <a href="?page={{ num }}"
                           class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                            {{ num }}
                        </a>
                        {% endif %}
                        {% endfor %} {% if page_obj.has_next %}
                        <a href="?page={{ page_obj.next_page_number }}"
                           class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <svg x-data="heroicon('chevron-right')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
