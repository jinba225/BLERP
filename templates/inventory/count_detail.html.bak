{% extends 'base.html' %}

{% block title %}盘点单详情 - {{ count.count_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">库存管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'inventory:count_list' %}" class="text-gray-500 hover:text-gray-700">库存盘点</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ count.count_number }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">盘点单详情</h3>
            <p class="text-sm text-gray-600">{{ count.count_number }}</p>
        </div>
        <div class="flex space-x-3">
            <a href="{% url 'inventory:count_list' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>返回列表
            </a>
            {% if can_edit %}
            <a class="btn btn-primary" href="{% url 'inventory:count_update' count.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            {% endif %}
            {% if can_start %}
            <a class="btn btn-primary" href="{% url 'inventory:count_start' count.pk %}">
                <i class="fas fa-play mr-2"></i>开始盘点
            </a>
            {% endif %}
            {% if can_complete %}
            <a class="btn btn-primary" href="{% url 'inventory:count_complete' count.pk %}">
                <i class="fas fa-check mr-2"></i>完成盘点
            </a>
            {% endif %}
            {% if can_cancel %}
            <a class="btn btn-primary" href="{% url 'inventory:count_cancel' count.pk %}">
                <i class="fas fa-times mr-2"></i>取消
            </a>
            {% endif %}
        </div>
    </div> <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500">总明细数</p>
                    <p class="mt-2 text-2xl font-bold text-gray-900">{{ total_items }}</p>
                </div>
                <div class="p-3 bg-theme-100 rounded-lg">
                    <i class="fas fa-list text-2xl text-theme-600"></i>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500">已盘点数</p>
                    <p class="mt-2 text-2xl font-bold text-green-600">{{ counted_items }}</p>
                </div>
                <div class="p-3 bg-green-100 rounded-lg">
                    <i class="fas fa-check-circle text-2xl text-green-600"></i>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500">差异项数</p>
                    <p class="mt-2 text-2xl font-bold text-red-600">{{ items_with_diff }}</p>
                </div>
                <div class="p-3 bg-red-100 rounded-lg">
                    <i class="fas fa-exclamation-triangle text-2xl text-red-600"></i>
                </div>
            </div>
        </div>
    </div> <!-- Basic Information -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">基本信息</h4>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">盘点单号</label>
                    <p class="text-sm font-semibold text-gray-900">{{ count.count_number }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">盘点类型</label>
                    <p class="text-sm text-gray-900">{{ count.get_count_type_display }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">仓库</label>
                    <p class="text-sm text-gray-900">{{ count.warehouse.name }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">状态</label>
                    <span class="px-2 py-1 text-xs font-semibold rounded
                        {% if count.status == 'completed' %}bg-green-100 text-green-800
                        {% elif count.status == 'in_progress' %}bg-theme-100 text-theme-800
                        {% elif count.status == 'planned' %}bg-yellow-100 text-yellow-800
                        {% elif count.status == 'cancelled' %}bg-red-100 text-red-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ count.get_status_display }}
                    </span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">计划日期</label>
                    <p class="text-sm text-gray-900">{{ count.planned_date }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">开始时间</label>
                    <p class="text-sm text-gray-900">{{ count.start_date|date:"Y-m-d H:i"|default:"-" }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">结束时间</label>
                    <p class="text-sm text-gray-900">{{ count.end_date|date:"Y-m-d H:i"|default:"-" }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">盘点主管</label>
                    <p class="text-sm text-gray-900">
                        {% if count.supervisor %}{{ count.supervisor.username }}{% else %}-{% endif %}
                    </p>
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500 mb-1">盘点员</label>
                    <p class="text-sm text-gray-900">
                        {% if count.counters.all %}
                            {% for counter in count.counters.all %}
                                {{ counter.username }}{% if not forloop.last %}, {% endif %}
                            {% endfor %}
                        {% else %}
                            -
                        {% endif %}
                    </p>
                </div>
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500 mb-1">备注</label>
                    <p class="text-sm text-gray-900 whitespace-pre-wrap">{{ count.notes|default:"-" }}</p>
                </div>
            </div>
        </div>
    </div> <!-- Items Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">盘点明细</h4>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">产品</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">库位</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">批次号</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">系统数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">盘点数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">差异</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">盘点员</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">盘点时间</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in count.items.all %}
                    <tr class="hover:bg-gray-50 transition-colors {% if item.difference != 0 %}bg-yellow-50{% endif %}">
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {{ item.product.name }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {% if item.location %}{{ item.location.name }}{% else %}-{% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {{ item.batch_number|default:"-" }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {{ item.system_quantity }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right {% if item.counted_quantity %}text-theme-600 font-semibold{% else %}text-gray-400{% endif %}">
                            {{ item.counted_quantity|default:"-" }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right font-semibold
                            {% if item.difference > 0 %}text-green-600
                            {% elif item.difference < 0 %}text-red-600
                            {% else %}text-gray-900{% endif %}">
                            {% if item.difference > 0 %}+{% endif %}{{ item.difference }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {% if item.counter %}{{ item.counter.username }}{% else %}-{% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {{ item.count_time|date:"Y-m-d H:i"|default:"-" }}
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                            <i class="fas fa-inbox text-4xl mb-3"></i>
                            <p>暂无盘点明细</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> <!-- Audit Information -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">审计信息</h4>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">创建人</label>
                    <p class="text-sm text-gray-900">
                        {% if count.created_by %}{{ count.created_by.username }}{% else %}-{% endif %}
                    </p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">创建时间</label>
                    <p class="text-sm text-gray-900">{{ count.created_at|date:"Y-m-d H:i" }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">更新人</label>
                    <p class="text-sm text-gray-900">
                        {% if count.updated_by %}{{ count.updated_by.username }}{% else %}-{% endif %}
                    </p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-1">更新时间</label>
                    <p class="text-sm text-gray-900">{{ count.updated_at|date:"Y-m-d H:i" }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
