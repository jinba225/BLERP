{% extends 'base.html' %}

{% block title %}库存盘点列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">库存管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">库存盘点</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">库存盘点列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'inventory:count_create' %}">
            <i class="fas fa-plus mr-2"></i>新建盘点单
        </a>
    </div> <!-- Filters -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text"
                       name="search"
                       value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent"
                       placeholder="盘点单号、仓库名称...">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="status"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                    <option value="">全部状态</option>
                    {% for status_code, status_name in count_statuses %}
                    <option value="{{ status_code }}" {% if status == status_code %}selected{% endif %}>
                        {{ status_name }}
                    </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">盘点类型</label>
                <select name="count_type"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                    <option value="">全部类型</option>
                    {% for type_code, type_name in count_types %}
                    <option value="{{ type_code }}" {% if count_type == type_code %}selected{% endif %}>
                        {{ type_name }}
                    </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">仓库</label>
                <select name="warehouse"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                    <option value="">全部仓库</option>
                    {% for w in warehouses %}
                    <option value="{{ w.id }}" {% if warehouse_id|stringformat:"s" == w.id|stringformat:"s" %}selected{% endif %}>
                        {{ w.name }}
                    </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">计划开始日期</label>
                <input type="date"
                       name="date_from"
                       value="{{ date_from }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">计划结束日期</label>
                <input type="date"
                       name="date_to"
                       value="{{ date_to }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
            </div> <div class="flex items-end col-span-2">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>搜索
                </button>
            </div>
        </form>
    </div> <!-- Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">盘点单号</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">盘点类型</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">仓库</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">计划日期</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">主管</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for count in page_obj %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        {{ count.count_number }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                        {{ count.get_count_type_display }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ count.warehouse.name }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ count.planned_date }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {% if count.supervisor %}{{ count.supervisor.username }}{% else %}-{% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if count.status == 'completed' %}bg-green-100 text-green-800
                            {% elif count.status == 'in_progress' %}bg-theme-100 text-theme-800
                            {% elif count.status == 'planned' %}bg-yellow-100 text-yellow-800
                            {% elif count.status == 'cancelled' %}bg-red-100 text-red-800
                            {% else %}bg-gray-100 text-gray-800{% endif %}">
                            {{ count.get_status_display }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'inventory:count_detail' count.pk %}"
                           class="text-theme-600 hover:text-theme-700 mr-3"
                           title="查看详情">
                            <i class="fas fa-eye"></i>
                        </a>
                        {% if count.status == 'planned' %}
                        <a href="{% url 'inventory:count_update' count.pk %}"
                           class="text-green-600 hover:text-green-900"
                           title="编辑">
                            <i class="fas fa-edit"></i>
                        </a>
                        {% endif %}
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                        <i class="fas fa-inbox text-4xl mb-3"></i>
                        <p>暂无盘点单数据</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200">
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到
                        <span class="font-medium">{{ page_obj.end_index }}</span> 条，
                        共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                    </p>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
