{% extends 'base.html' %}

{% block title %}导入与初始化 - BetterLaser ERP{% endblock %}
{% block page_title %}导入与初始化{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">基础设置</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">导入与初始化</span>
{% endblock %}

{% block content %}
<div class="space-y-6" x-data="importExportApp">
    <!-- 页面标题和说明 -->
    <div class="bg-theme-50 border-l-4 border-theme-400 p-4">
        <div class="flex">
            <div class="flex-shrink-0">
                <i class="fas fa-info-circle text-theme-400"></i>
            </div>
            <div class="ml-3">
                <h3 class="text-sm font-medium text-theme-800">导入导出说明</h3>
                <div class="mt-2 text-sm text-theme-700">
                    <ul class="list-disc list-inside space-y-1">
                        <li>支持批量导入和导出系统基础数据</li>
                        <li>支持的数据类型：产品、库位、计量单位、税率、客户、供应商</li>
                        <li>导出功能可用于数据备份和迁移</li>
                        <li>导入功能支持 Excel 文件（.xlsx、.xls）和 CSV 文件</li>
                    </ul>
                </div>
            </div>
        </div>
    </div> <!-- 数据类型选择卡片 -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 items-start">
        <!-- 产品 -->
        <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow flex flex-col" style="height: 220px;">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center" style="gap: 1.5rem;">
                    <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-box text-blue-600 text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold text-gray-900">产品</h4>
                        <p class="text-sm text-gray-500">Products</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2" style="min-height: 40px;">导入导出产品信息，包括编码、名称、规格、单位、品牌等</p>
            <div class="flex space-x-2 items-start mt-auto">
                <a href="{% url 'inventory:data_export' %}?type=products" class="flex-1 px-3 py-2 bg-theme-50 text-theme-700 rounded-lg hover:bg-theme-100 text-center text-sm">
                    <i class="fas fa-download mr-2"></i>导出
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-upload mr-2"></i>导入
                </button>
            </div>
        </div> <!-- 库位 -->
        <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow flex flex-col" style="height: 220px;">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center" style="gap: 1.5rem;">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-warehouse text-green-600 text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold text-gray-900">库位</h4>
                        <p class="text-sm text-gray-500">Locations</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2" style="min-height: 40px;">导入导出仓库和库位信息，支持多级库位结构</p>
            <div class="flex space-x-2 items-start mt-auto">
                <a href="{% url 'inventory:data_export' %}?type=locations" class="flex-1 px-3 py-2 bg-theme-50 text-theme-700 rounded-lg hover:bg-theme-100 text-center text-sm">
                    <i class="fas fa-download mr-2"></i>导出
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-upload mr-2"></i>导入
                </button>
            </div>
        </div> <!-- 计量单位 -->
        <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow flex flex-col" style="height: 220px;">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center" style="gap: 1.5rem;">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-balance-scale text-purple-600 text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold text-gray-900">计量单位</h4>
                        <p class="text-sm text-gray-500">Units</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2" style="min-height: 40px;">导入导出计量单位信息，包括名称、符号、换算关系</p>
            <div class="flex space-x-2 items-start mt-auto">
                <a href="{% url 'inventory:data_export' %}?type=units" class="flex-1 px-3 py-2 bg-theme-50 text-theme-700 rounded-lg hover:bg-theme-100 text-center text-sm">
                    <i class="fas fa-download mr-2"></i>导出
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-upload mr-2"></i>导入
                </button>
            </div>
        </div> <!-- 税率 -->
        <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow flex flex-col" style="height: 220px;">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center" style="gap: 1.5rem;">
                    <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-percent text-yellow-600 text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold text-gray-900">税率</h4>
                        <p class="text-sm text-gray-500">Tax Rates</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2" style="min-height: 40px;">导入导出税率配置信息，包括税率名称、百分比</p>
            <div class="flex space-x-2 items-start mt-auto">
                <a href="{% url 'inventory:data_export' %}?type=tax_rates" class="flex-1 px-3 py-2 bg-theme-50 text-theme-700 rounded-lg hover:bg-theme-100 text-center text-sm">
                    <i class="fas fa-download mr-2"></i>导出
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-upload mr-2"></i>导入
                </button>
            </div>
        </div> <!-- 客户 -->
        <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow flex flex-col" style="height: 220px;">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center" style="gap: 1.5rem;">
                    <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-user-tie text-red-600 text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold text-gray-900">客户</h4>
                        <p class="text-sm text-gray-500">Customers</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2" style="min-height: 40px;">导入导出客户信息，包括名称、联系人、地址等</p>
            <div class="flex space-x-2 items-start mt-auto">
                <a href="{% url 'inventory:data_export' %}?type=customers" class="flex-1 px-3 py-2 bg-theme-50 text-theme-700 rounded-lg hover:bg-theme-100 text-center text-sm">
                    <i class="fas fa-download mr-2"></i>导出
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-upload mr-2"></i>导入
                </button>
            </div>
        </div> <!-- 供应商 -->
        <div class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow flex flex-col" style="height: 220px;">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center" style="gap: 1.5rem;">
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center">
                        <i class="fas fa-truck text-indigo-600 text-xl"></i>
                    </div>
                    <div>
                        <h4 class="text-lg font-semibold text-gray-900">供应商</h4>
                        <p class="text-sm text-gray-500">Suppliers</p>
                    </div>
                </div>
            </div>
            <p class="text-sm text-gray-600 mb-4 line-clamp-2" style="min-height: 40px;">导入导出供应商信息，包括名称、联系人、地址等</p>
            <div class="flex space-x-2 items-start mt-auto">
                <a href="{% url 'inventory:data_export' %}?type=suppliers" class="flex-1 px-3 py-2 bg-theme-50 text-theme-700 rounded-lg hover:bg-theme-100 text-center text-sm">
                    <i class="fas fa-download mr-2"></i>导出
                </a>
                <button class="btn btn-primary">
                    <i class="fas fa-upload mr-2"></i>导入
                </button>
            </div>
        </div>
    </div> <!-- 库存导入（原功能） -->
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">
            <i class="fas fa-keyboard mr-2 text-theme-600"></i>库存手动导入
        </h3> <form method="post" action="{% url 'inventory:stock_import_submit' %}" class="space-y-4">
            {% csrf_token %}
            <input type="hidden" name="import_type" value="manual"> <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                    <label for="warehouse" class="block text-sm font-medium text-gray-700 mb-2">
                        选择仓库 <span class="text-red-500">*</span>
                    </label>
                    <select id="warehouse" name="warehouse" required
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">请选择仓库</option>
                        {% for warehouse in warehouses %}
                        <option value="{{ warehouse.id }}">{{ warehouse.name }}</option>
                        {% endfor %}
                    </select>
                </div> <div>
                    <label for="product" class="block text-sm font-medium text-gray-700 mb-2">
                        选择产品 <span class="text-red-500">*</span>
                    </label>
                    <select id="product" name="product" required
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">请选择产品</option>
                        {% for product in products %}
                        <option value="{{ product.id }}">{{ product.code }} - {{ product.name }}</option>
                        {% endfor %}
                    </select>
                    <p class="mt-1 text-xs text-gray-500">仅显示前100个产品，更多产品请使用搜索</p>
                </div> <div>
                    <label for="quantity" class="block text-sm font-medium text-gray-700 mb-2">
                        数量 <span class="text-red-500">*</span>
                    </label>
                    <input type="number" id="quantity" name="quantity" required min="1" step="1"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="请输入数量">
                </div>
            </div> <div class="flex justify-end pt-4">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-plus mr-2"></i>添加库存
                </button>
            </div>
        </form>
    </div> <!-- 导入模态框 -->
    <div x-show="importModalOpen" class="fixed inset-0 z-50 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div x-show="importModalOpen" class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" @click="importModalOpen = false"></div> <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span> <div x-show="importModalOpen" class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                    <div class="sm:flex sm:items-start">
                        <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left w-full">
                            <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                                导出数据
                            </h3>
                            <div class="mt-4">
                                <p class="text-sm text-gray-500 mb-4">选择要导入的数据类型，然后上传文件。</p> <!-- 数据类型信息 -->
                                <div class="mb-4 p-4 bg-gray-50 rounded-lg">
                                    <p class="text-sm font-medium text-gray-700 mb-2">
                                        <i class="fas fa-info-circle mr-1"></i>
                                        <span x-text="getDataTypeInfo(importDataType).label"></span>
                                    </p>
                                    <p class="text-xs text-gray-600" x-text="getDataTypeInfo(importDataType).description"></p>
                                </div> <!-- 文件上传 -->
                                <form method="post" action="{% url 'inventory:data_import' %}" enctype="multipart/form-data" class="space-y-4">
                                    {% csrf_token %}
                                    <input type="hidden" name="data_type" x-model="importDataType"> <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-2">
                                            选择文件 <span class="text-red-500">*</span>
                                        </label>
                                        <input type="file" name="file" required accept=".xlsx,.xls,.csv"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                                        <p class="mt-1 text-xs text-gray-500">支持格式：Excel (.xlsx, .xls) 和 CSV</p>
                                    </div> <div class="flex items-center mb-4">
                                        <input type="checkbox" id="skip_first_row" name="skip_first_row" value="1" checked
                                               class="rounded border-gray-300 text-theme-600 focus:ring-theme-500">
                                        <label for="skip_first_row" class="ml-2 text-sm text-gray-700">
                                            跳过第一行（如果是表头）
                                        </label>
                                    </div> <div class="flex justify-end space-x-3 pt-4">
                                        <button type="button" @click="importModalOpen = false"
                                                class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                                            取消
                                        </button>
                                        <button class="btn btn-primary" type="submit">
                                            <i class="fas fa-upload mr-2"></i>导入
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="absolute top-0 right-0 pt-4 pr-4">
                        <button type="button" @click="importModalOpen = false" class="bg-white rounded-md text-gray-400 hover:text-gray-500">
                            <span class="sr-only">关闭</span>
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function importExportApp() {
    return {
        importModalOpen: false,
        importDataType: 'products', showImportModal(dataType) {
            this.importDataType = dataType;
            this.importModalOpen = true;
        }, getDataTypeInfo(dataType) {
            const info = {
                products: {
                    label: '产品',
                    description: '包含产品编码、名称、规格、单位、品牌、分类、价格等信息'
                },
                locations: {
                    label: '库位',
                    description: '包含仓库名称、库位编码、库位名称、上级库位等信息'
                },
                units: {
                    label: '计量单位',
                    description: '包含单位名称、单位符号、换算关系等信息'
                },
                tax_rates: {
                    label: '税率',
                    description: '包含税率名称、税率百分比、描述等信息'
                },
                customers: {
                    label: '客户',
                    description: '包含客户名称、联系人、电话、邮箱、地址等信息'
                },
                suppliers: {
                    label: '供应商',
                    description: '包含供应商名称、联系人、电话、邮箱、地址等信息'
                }
            };
            return info[dataType] || { label: '', description: '' };
        }
    }
}
</script>
{% endblock %}
