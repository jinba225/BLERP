{% extends 'base.html' %}
{% load erp_filters %}
{% block title %}库存查询 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">库存管理</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
<div class="flex justify-between items-center">
    <div>
        <h3 class="text-lg font-semibold text-gray-900">库存查询</h3>
        <p class="text-sm text-gray-600">共 {{ total_count }} 条记录 | 库存总价值：¥{{ total_value|floatformat:2 }}</p>
    </div>
</div>
<div class="bg-white rounded-lg shadow p-6"><form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4"><div><label class="block text-sm font-medium text-gray-700 mb-2">搜索</label><input type="text" name="search" value="{{ search }}" class="w-full px-3 py-2 border border-gray-300 rounded-lg" placeholder="产品名称、编码、条码..."></div><div><label class="block text-sm font-medium text-gray-700 mb-2">仓库</label><select name="warehouse" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部仓库</option>{% for wh in warehouses %}<option value="{{ wh.id }}" {% if warehouse_id|stringformat:"s" == wh.id|stringformat:"s" %}selected{% endif %}>{{ wh.name }}</option>{% endfor %}</select></div><div><label class="block text-sm font-medium text-gray-700 mb-2">产品分类</label><select name="category" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部分类</option>{% for cat in categories %}<option value="{{ cat.id }}" {% if category_id|stringformat:"s" == cat.id|stringformat:"s" %}selected{% endif %}>{{ cat.name }}</option>{% endfor %}</select></div><div><label class="block text-sm font-medium text-gray-700 mb-2">库存状态</label><select name="stock_status" class="w-full px-3 py-2 border border-gray-300 rounded-lg"><option value="">全部</option><option value="normal" {% if stock_status == 'normal' %}selected{% endif %}>正常</option><option value="low" {% if stock_status == 'low' %}selected{% endif %}>低库存</option><option value="out" {% if stock_status == 'out' %}selected{% endif %}>缺货</option></select></div><div class="flex items-end"><button type="submit" class="btn btn-primary w-full"><svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索</button></div></form></div>
<div class="bg-white rounded-lg shadow overflow-x-auto"><table class="min-w-full divide-y divide-gray-200"><thead class="bg-gray-50"><tr><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品编码</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品名称</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">分类</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">仓库</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">库位</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">库存数量</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">可用数量</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">预留数量</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">成本价</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">库存价值</th><th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th><th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th></tr></thead><tbody class="bg-white divide-y divide-gray-200">{% for stock in page_obj %}<tr class="hover:bg-gray-50 {% if stock.is_low_stock %}bg-yellow-50{% endif %}"><td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ stock.product.code }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ stock.product.name }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ stock.product.category.name|default:"-" }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ stock.warehouse.name }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ stock.location.name|default:"-" }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">{{ stock.quantity }} {{ stock.product.unit.symbol|default:"" }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-right text-green-600 font-medium">{{ stock.available_quantity }} {{ stock.product.unit.symbol|default:"" }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-500">{{ stock.reserved_quantity }} {{ stock.product.unit.symbol|default:"" }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">¥{{ stock.cost_price }}</td><td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-theme-600">¥{{ stock.quantity|mul:stock.cost_price|floatformat:2 }}</td><td class="px-6 py-4 whitespace-nowrap">{% if stock.quantity == 0 %}<span class="px-2 py-1 text-xs font-semibold rounded bg-red-100 text-red-800">缺货</span>{% elif stock.is_low_stock %}<span class="px-2 py-1 text-xs font-semibold rounded bg-yellow-100 text-yellow-800">低库存</span>{% else %}<span class="px-2 py-1 text-xs font-semibold rounded bg-green-100 text-green-800">正常</span>{% endif %}</td><td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"><a href="{% url 'inventory:stock_detail' stock.pk %}" class="text-theme-600 hover:text-theme-700"><svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a></td></tr>{% empty %}<tr><td colspan="12" class="px-6 py-12 text-center text-gray-500"><svg x-data="heroicon('inbox')" class="text-4xl mb-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg><p>暂无库存数据</p></td></tr>{% endfor %}</tbody></table>{% if page_obj.has_other_pages %}<div class="bg-white px-4 py-3 flex items-center justify-between border-t"><p class="text-sm text-gray-700">显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ page_obj.paginator.count }} 条</p></div>{% endif %}</div>
</div>
{% endblock %}
