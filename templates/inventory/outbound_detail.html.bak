{% extends 'base.html' %}

{% block title %}{{ outbound.order_number }} - 出库单详情 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">库存管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'inventory:outbound_list' %}" class="text-gray-500 hover:text-gray-700">出库单</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ outbound.order_number }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-start">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">{{ outbound.order_number }}</h3>
            <p class="text-sm text-gray-600 mt-1">{{ outbound.get_order_type_display }} - {{ outbound.warehouse.name }}</p>
        </div>
        <div class="flex space-x-2">
            {% if outbound.status == 'draft' %}
            <a class="btn btn-primary" href="{% url 'inventory:outbound_update' outbound.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            <a class="btn btn-primary" href="{% url 'inventory:outbound_delete' outbound.pk %}">
                <i class="fas fa-trash mr-2"></i>删除
            </a>
            {% elif outbound.status == 'pending' %}
            <a class="btn btn-primary" href="{% url 'inventory:outbound_approve' outbound.pk %}">
                <i class="fas fa-check mr-2"></i>审核
            </a>
            <a class="btn btn-primary" href="{% url 'inventory:outbound_cancel' outbound.pk %}">
                <i class="fas fa-times mr-2"></i>取消
            </a>
            {% elif outbound.status == 'approved' %}
            <a class="btn btn-primary" href="{% url 'inventory:outbound_complete' outbound.pk %}">
                <i class="fas fa-check-circle mr-2"></i>完成出库
            </a>
            <a class="btn btn-primary" href="{% url 'inventory:outbound_cancel' outbound.pk %}">
                <i class="fas fa-times mr-2"></i>取消
            </a>
            {% endif %}
        </div>
    </div> <!-- Basic Information -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">基本信息</h4>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-500">出库单号</label>
                    <p class="mt-1 text-sm font-semibold text-gray-900">{{ outbound.order_number }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">出库类型</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.get_order_type_display }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">仓库</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.warehouse.name }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">出库日期</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.order_date }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">状态</label>
                    <span class="mt-1 inline-block px-2 py-1 text-xs font-semibold rounded
                        {% if outbound.status == 'completed' %}bg-green-100 text-green-800
                        {% elif outbound.status == 'approved' %}bg-purple-100 text-purple-800
                        {% elif outbound.status == 'pending' %}bg-yellow-100 text-yellow-800
                        {% elif outbound.status == 'draft' %}bg-gray-100 text-gray-800
                        {% elif outbound.status == 'cancelled' %}bg-red-100 text-red-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ outbound.get_status_display }}
                    </span>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">客户</label>
                    <p class="mt-1 text-sm text-gray-900">
                        {% if outbound.customer %}
                            {{ outbound.customer.name }}
                        {% else %}
                            <span class="text-gray-400">-</span>
                        {% endif %}
                    </p>
                </div>
                {% if outbound.reference_number %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">参考单号</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.reference_number }}</p>
                </div>
                {% endif %}
                {% if outbound.reference_type %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">参考类型</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.reference_type }}</p>
                </div>
                {% endif %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">创建人</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.created_by.username }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">创建时间</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.created_at|date:"Y-m-d H:i:s" }}</p>
                </div>
                {% if outbound.approved_by %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">审核人</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.approved_by.username }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">审核时间</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.approved_at|date:"Y-m-d H:i:s" }}</p>
                </div>
                {% endif %}
                {% if outbound.notes %}
                <div class="md:col-span-2 lg:col-span-3">
                    <label class="block text-sm font-medium text-gray-500">备注</label>
                    <p class="mt-1 text-sm text-gray-900">{{ outbound.notes }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div> <!-- Items Section -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h4 class="text-md font-semibold text-gray-900">出库明细</h4>
            <span class="text-sm text-gray-600">总数量: <span class="font-semibold">{{ total_quantity }}</span></span>
        </div>
        {% if items %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">产品</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">库位</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">出库数量</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">批次号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">过期日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">备注</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in items %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ item.product.name }}</div>
                            <div class="text-xs text-gray-500">{{ item.product.code }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {% if item.location %}{{ item.location.name }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-semibold text-gray-900">
                            {{ item.quantity }} {{ item.product.unit }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {% if item.batch_number %}{{ item.batch_number }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {% if item.expiry_date %}{{ item.expiry_date }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {% if item.notes %}{{ item.notes }}{% else %}<span class="text-gray-400">-</span>{% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="text-center py-8 text-gray-500">
            <i class="fas fa-inbox text-3xl mb-2"></i>
            <p>暂无明细数据</p>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
