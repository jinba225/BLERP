{% extends 'base.html' %}

{% block title %}出入库统计报表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
</svg>
<a href="{% url 'inventory:inventory_order_report' %}" class="text-gray-500 hover:text-gray-700">库存报表</a>
<svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
</svg>
<span class="text-gray-500">出入库统计</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">出入库统计报表</h3>
            <p class="text-sm text-gray-600 mt-1">按时间段统计出入库情况</p>
        </div>
    </div> <!-- Date Range Filter -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">开始日期</label>
                <input type="date" name="date_from" value="{{ date_from }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">结束日期</label>
                <input type="date" name="date_to" value="{{ date_to }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">仓库</label>
                <select name="warehouse" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">所有仓库</option>
                    {% for w in warehouses %}
                    <option value="{{ w.id }}" {% if warehouse_id == w.id|stringformat:"s" %}selected{% endif %}>
                        {{ w.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>
            <div class="flex items-end space-x-2">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>查询
                </button>
                <a href="{% url 'inventory:report_inbound_outbound_statistics' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                    <i class="fas fa-redo"></i>
                </a>
            </div>
        </form>
    </div> <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                    <i class="fas fa-arrow-down text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">入库单数</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ total_inbound_orders }}</dd>
                    </dl>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-theme-500 rounded-md p-3">
                    <i class="fas fa-cubes text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">入库数量</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ total_inbound_items }}</dd>
                    </dl>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-red-500 rounded-md p-3">
                    <i class="fas fa-arrow-up text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">出库单数</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ total_outbound_orders }}</dd>
                    </dl>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-purple-500 rounded-md p-3">
                    <i class="fas fa-box-open text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">出库数量</dt>
                        <dd class="text-2xl font-semibold text-gray-900">{{ total_outbound_items }}</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div> <!-- Statistics by Type -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Inbound by Type -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <h4 class="text-md font-semibold text-gray-900">
                    <i class="fas fa-arrow-down text-green-600 mr-2"></i>入库统计（按类型）
                </h4>
            </div>
            <div class="p-6">
                {% if inbound_by_type %}
                <div class="space-y-3">
                    {% for item in inbound_by_type %}
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-green-500 rounded-full mr-3"></div>
                            <span class="text-sm font-medium text-gray-900">
                                {% for type_code, type_name in inbound_order_types %}
                                    {% if type_code == item.order_type %}{{ type_name }}{% endif %}
                                {% endfor %}
                            </span>
                        </div>
                        <div class="text-right">
                            <div class="text-sm font-semibold text-gray-900">{{ item.count }} 单</div>
                            <div class="text-xs text-gray-500">{{ item.total_items }} 项明细</div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-8 text-gray-500">
                    <i class="fas fa-inbox text-3xl mb-2"></i>
                    <p>暂无入库数据</p>
                </div>
                {% endif %}
            </div>
        </div> <!-- Outbound by Type -->
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                <h4 class="text-md font-semibold text-gray-900">
                    <i class="fas fa-arrow-up text-red-600 mr-2"></i>出库统计（按类型）
                </h4>
            </div>
            <div class="p-6">
                {% if outbound_by_type %}
                <div class="space-y-3">
                    {% for item in outbound_by_type %}
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                        <div class="flex items-center">
                            <div class="w-2 h-2 bg-red-500 rounded-full mr-3"></div>
                            <span class="text-sm font-medium text-gray-900">
                                {% for type_code, type_name in outbound_order_types %}
                                    {% if type_code == item.order_type %}{{ type_name }}{% endif %}
                                {% endfor %}
                            </span>
                        </div>
                        <div class="text-right">
                            <div class="text-sm font-semibold text-gray-900">{{ item.count }} 单</div>
                            <div class="text-xs text-gray-500">{{ item.total_items }} 项明细</div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                {% else %}
                <div class="text-center py-8 text-gray-500">
                    <i class="fas fa-inbox text-3xl mb-2"></i>
                    <p>暂无出库数据</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div> <!-- Daily Trend -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">
                <i class="fas fa-chart-line mr-2"></i>每日趋势
            </h4>
        </div>
        <div class="p-6">
            {% if daily_inbound or daily_outbound %}
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日期</th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-arrow-down text-green-600 mr-1"></i>入库单数
                            </th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-arrow-up text-red-600 mr-1"></i>出库单数
                            </th>
                            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">净变化</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        {% for in_item in daily_inbound %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ in_item.date }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-green-600 font-semibold">
                                {{ in_item.count }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-center text-red-600 font-semibold">
                                {% for out_item in daily_outbound %}
                                    {% if out_item.date == in_item.date %}{{ out_item.count }}{% endif %}
                                {% endfor %}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-center font-semibold
                                {% if in_item.count > 0 %}text-green-600{% else %}text-gray-900{% endif %}">
                                {% for out_item in daily_outbound %}
                                    {% if out_item.date == in_item.date %}
                                        {% widthratio in_item.count 1 1 as in_c %}
                                        {% widthratio out_item.count 1 1 as out_c %}
                                        {{ in_c|add:"-"|add:out_c }}
                                    {% endif %}
                                {% endfor %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="text-center py-8 text-gray-500">
                <i class="fas fa-chart-line text-3xl mb-2"></i>
                <p>所选时间段内暂无数据</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
