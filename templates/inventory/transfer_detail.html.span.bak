{% extends 'base.html' %}

{% block title %}调拨单详情 - {{ transfer.transfer_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">库存管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'inventory:transfer_list' %}" class="text-gray-500 hover:text-gray-700">库存调拨单</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ transfer.transfer_number }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header with Actions -->
    <div class="flex justify-between items-start">
        <div>
            <div class="flex items-center space-x-3">
                <h3 class="text-lg font-semibold text-gray-900">库存调拨单详情</h3>
                <span class="px-3 py-1 text-sm font-semibold rounded-full
                    {% if transfer.status == 'draft' %}bg-gray-100 text-gray-800
                    {% elif transfer.status == 'pending' %}bg-yellow-100 text-yellow-800
                    {% elif transfer.status == 'approved' %}bg-theme-100 text-theme-800
                    {% elif transfer.status == 'in_transit' %}bg-purple-100 text-purple-800
                    {% elif transfer.status == 'completed' %}bg-green-100 text-green-800
                    {% elif transfer.status == 'cancelled' %}bg-red-100 text-red-800
                    {% endif %}">
                    {{ transfer.get_status_display }}
                </span>
            </div>
            <p class="text-sm text-gray-600 mt-1">调拨单号：{{ transfer.transfer_number }}</p>
            {% if is_auto_generated %}
            <div class="mt-2 inline-flex items-center px-3 py-1 rounded-lg bg-blue-50 border border-blue-200">
                <i class="fas fa-robot text-blue-600 mr-2"></i>
                <span class="text-sm text-blue-700 font-medium">系统自动生成</span>
            </div>
            {% endif %}
        </div>
        <div class="flex flex-wrap gap-2">
            <a href="{% url 'inventory:transfer_list' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                <svg x-data="heroicon('queue-list')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>返回列表
            </a>
            {% if can_edit %}
            <a href="{% url 'inventory:transfer_update' transfer.pk %}"
               class="px-4 py-2 border border-green-600 text-green-600 rounded-lg hover:bg-green-50 transition-colors">
                <svg x-data="heroicon('pencil')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑
            </a>
            {% endif %}
            {% if can_submit %}
            <a class="btn btn-primary" href="{% url 'inventory:transfer_submit' transfer.pk %}">
                <i class="fas fa-paper-plane mr-2"></i>提交审核
            </a>
            {% endif %}
            {% if can_approve %}
            <a class="btn btn-primary" href="{% url 'inventory:transfer_approve' transfer.pk %}">
                <svg x-data="heroicon('check')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>审核
            </a>
            {% endif %}
            {% if can_ship %}
            <a class="btn btn-primary" href="{% url 'inventory:transfer_ship' transfer.pk %}">
                <i class="fas fa-shipping-fast mr-2"></i>发货
            </a>
            {% endif %}
            {% if can_receive %}
            <a class="btn btn-primary" href="{% url 'inventory:transfer_receive' transfer.pk %}">
                <i class="fas fa-check-double mr-2"></i>收货
            </a>
            {% endif %}
            {% if can_cancel %}
            <a href="{% url 'inventory:transfer_cancel' transfer.pk %}"
               class="px-4 py-2 border border-red-600 text-red-600 rounded-lg hover:bg-red-50 transition-colors">
                <svg x-data="heroicon('x-mark')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>取消
            </a>
            {% endif %}
            {% if can_edit %}
            <a href="{% url 'inventory:transfer_delete' transfer.pk %}"
               class="px-4 py-2 border border-red-600 text-red-600 rounded-lg hover:bg-red-50 transition-colors">
                <svg x-data="heroicon('trash')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>删除
            </a>
            {% endif %}
        </div>
    </div> <!-- Status Flow -->
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-base font-semibold text-gray-900 mb-4">调拨流程</h4>
        <div class="flex items-center justify-between">
            <div class="flex-1 flex items-center">
                <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center
                        {% if transfer.status == 'draft' %}bg-theme-600 text-white
                        {% else %}bg-green-600 text-white{% endif %}">
                        <svg x-data="heroicon('document')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="text-xs mt-2 font-medium">草稿</span>
                </div>
                <div class="flex-1 h-1 mx-2 {% if transfer.status != 'draft' %}bg-green-600{% else %}bg-gray-300{% endif %}"></div>
            </div> <div class="flex-1 flex items-center">
                <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center
                        {% if transfer.status == 'pending' %}bg-yellow-600 text-white
                        {% elif transfer.status in 'approved,in_transit,completed' %}bg-green-600 text-white
                        {% else %}bg-gray-300 text-gray-600{% endif %}">
                        <svg x-data="heroicon('clock')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="text-xs mt-2 font-medium">待审核</span>
                </div>
                <div class="flex-1 h-1 mx-2 {% if transfer.status in 'approved,in_transit,completed' %}bg-green-600{% else %}bg-gray-300{% endif %}"></div>
            </div> <div class="flex-1 flex items-center">
                <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center
                        {% if transfer.status == 'approved' %}bg-theme-600 text-white
                        {% elif transfer.status in 'in_transit,completed' %}bg-green-600 text-white
                        {% else %}bg-gray-300 text-gray-600{% endif %}">
                        <svg x-data="heroicon('check')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="text-xs mt-2 font-medium">已审核</span>
                </div>
                <div class="flex-1 h-1 mx-2 {% if transfer.status in 'in_transit,completed' %}bg-green-600{% else %}bg-gray-300{% endif %}"></div>
            </div> <div class="flex-1 flex items-center">
                <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center
                        {% if transfer.status == 'in_transit' %}bg-purple-600 text-white
                        {% elif transfer.status == 'completed' %}bg-green-600 text-white
                        {% else %}bg-gray-300 text-gray-600{% endif %}">
                        <i class="fas fa-shipping-fast"></i>
                    </div>
                    <span class="text-xs mt-2 font-medium">在途</span>
                </div>
                <div class="flex-1 h-1 mx-2 {% if transfer.status == 'completed' %}bg-green-600{% else %}bg-gray-300{% endif %}"></div>
            </div> <div class="flex-1 flex items-center justify-end">
                <div class="flex flex-col items-center">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center
                        {% if transfer.status == 'completed' %}bg-green-600 text-white{% else %}bg-gray-300 text-gray-600{% endif %}">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <span class="text-xs mt-2 font-medium">已完成</span>
                </div>
            </div>
        </div>
    </div> <!-- Transfer Information -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-900">调拨信息</h4>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-3 gap-6">
                <div>
                    <label class="text-sm font-medium text-gray-500">源仓库</label>
                    <p class="mt-1 text-sm text-gray-900 font-medium">{{ transfer.from_warehouse.name }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500">目标仓库</label>
                    <p class="mt-1 text-sm text-gray-900 font-medium">{{ transfer.to_warehouse.name }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500">调拨日期</label>
                    <p class="mt-1 text-sm text-gray-900">{{ transfer.transfer_date }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500">预计到达日期</label>
                    <p class="mt-1 text-sm text-gray-900">{{ transfer.expected_arrival_date|default:"-" }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500">实际到达日期</label>
                    <p class="mt-1 text-sm text-gray-900">{{ transfer.actual_arrival_date|default:"-" }}</p>
                </div>
            </div> {% if transfer.notes %}
            <div class="mt-6 pt-6 border-t border-gray-200">
                <label class="text-sm font-medium text-gray-500">备注</label>
                <p class="mt-2 text-sm text-gray-900 whitespace-pre-wrap">{{ transfer.notes }}</p>
            </div>
            {% endif %}
        </div>
    </div> <!-- Transfer Items -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-900">调拨明细</h4>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">申请数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">发货数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">收货数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">单位成本</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">批次号</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in items %}
                    <tr>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            <div class="font-medium">{{ item.product.name }}</div>
                            <div class="text-xs text-gray-500">{{ item.product.code }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {{ item.requested_quantity }} {{ item.product.unit.name }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right {% if item.shipped_quantity > 0 %}text-purple-600 font-semibold{% else %}text-gray-500{% endif %}">
                            {{ item.shipped_quantity }} {{ item.product.unit.name }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right {% if item.received_quantity > 0 %}text-green-600 font-semibold{% else %}text-gray-500{% endif %}">
                            {{ item.received_quantity }} {{ item.product.unit.name }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            ¥{{ item.unit_cost }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">
                            {{ item.batch_number|default:"-" }}
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                            暂无明细数据
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> <!-- Approval Information -->
    {% if transfer.approved_by %}
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-theme-50 border-b border-theme-200">
            <h4 class="text-base font-semibold text-theme-900">
                <svg x-data="heroicon('check-circle')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>审核信息
            </h4>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-3 gap-6">
                <div>
                    <label class="text-sm font-medium text-gray-500">审核人</label>
                    <p class="mt-1 text-sm text-gray-900">{{ transfer.approved_by.username }}</p>
                </div>
                <div>
                    <label class="text-sm font-medium text-gray-500">审核时间</label>
                    <p class="mt-1 text-sm text-gray-900">{{ transfer.approved_at|date:"Y-m-d H:i:s" }}</p>
                </div>
            </div>
        </div>
    </div>
    {% endif %} <!-- System Information -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h4 class="text-base font-semibold text-gray-900">系统信息</h4>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-4 gap-6 text-sm">
                <div>
                    <label class="text-xs font-medium text-gray-500 uppercase">创建人</label>
                    <p class="mt-1 text-gray-900">{{ transfer.created_by.username }}</p>
                </div>
                <div>
                    <label class="text-xs font-medium text-gray-500 uppercase">创建时间</label>
                    <p class="mt-1 text-gray-900">{{ transfer.created_at|date:"Y-m-d H:i:s" }}</p>
                </div>
                {% if transfer.updated_by %}
                <div>
                    <label class="text-xs font-medium text-gray-500 uppercase">最后修改人</label>
                    <p class="mt-1 text-gray-900">{{ transfer.updated_by.username }}</p>
                </div>
                <div>
                    <label class="text-xs font-medium text-gray-500 uppercase">修改时间</label>
                    <p class="mt-1 text-gray-900">{{ transfer.updated_at|date:"Y-m-d H:i:s" }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
