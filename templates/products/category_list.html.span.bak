{% extends 'base.html' %}

{% block title %}产品分类管理 - BetterLaser ERP{% endblock %}
{% block page_title %}产品分类管理{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">基础设置</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">产品分类</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">产品分类列表</h3>
            <p class="text-sm text-gray-600">树形结构展示</p>
        </div>
        <a class="btn btn-primary" href="{% url 'products:category_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建分类
        </a>
    </div> <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                       placeholder="分类名称、代码...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="is_active" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="">全部</option>
                    <option value="true" {% if is_active == 'true' %}selected{% endif %}>启用</option>
                    <option value="false" {% if is_active == 'false' %}selected{% endif %}>停用</option>
                </select>
            </div>
            <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">分类代码</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">分类名称</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">完整路径</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">排序</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for category in categories %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ category.code }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <span style="padding-left: {{ category.level|add:0 }}rem;">
                            {% if category.level > 0 %}
                            <i class="fas fa-level-down-alt text-gray-400 mr-1"></i>
                            {% endif %}
                            {{ category.name }}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">{{ category.full_name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">{{ category.sort_order }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if category.is_active %}bg-green-100 text-green-800{% else %}bg-gray-100 text-gray-800{% endif %}">
                            {% if category.is_active %}启用{% else %}停用{% endif %}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'products:category_detail' category.pk %}" class="text-theme-600 hover:text-theme-700 mr-3"><svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                        <a href="{% url 'products:category_update' category.pk %}" class="text-green-600 hover:text-green-900 mr-3"><svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                        <a href="{% url 'products:category_delete' category.pk %}" class="text-red-600 hover:text-red-900"><svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <svg x-data="heroicon('inbox')" class="text-4xl mb-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p>暂无产品分类数据</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
