{% extends 'base.html' %}

{% block title %}{% if action == 'create' %}新建{% else %}编辑{% endif %}产品分类 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">基础设置</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'products:category_list' %}" class="text-gray-500 hover:text-gray-700">产品分类</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{% if action == 'create' %}新建{% else %}编辑{% endif %}</span>
{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">
            {% if action == 'create' %}新建产品分类{% else %}编辑产品分类{% endif %}
        </h3> <form method="post" class="space-y-6">
            {% csrf_token %} <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                        分类名称 <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="name" name="name" required
                           value="{% if category %}{{ category.name }}{% endif %}"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="例如：激光切割机、数控设备">
                </div> <div>
                    <label for="code" class="block text-sm font-medium text-gray-700 mb-2">
                        分类代码 <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="code" name="code" required
                           value="{% if category %}{{ category.code }}{% endif %}"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="例如：LASER、CNC">
                </div> <div>
                    <label for="parent" class="block text-sm font-medium text-gray-700 mb-2">
                        上级分类
                    </label>
                    <select id="parent" name="parent"
                            class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">无（顶级分类）</option>
                        {% for cat in all_categories %}
                        <option value="{{ cat.id }}"
                                {% if category and category.parent_id == cat.id %}selected{% endif %}
                                {% if category and cat.id == category.id %}disabled{% endif %}>
                            {{ cat.full_name }}
                        </option>
                        {% endfor %}
                    </select>
                    <p class="mt-1 text-xs text-gray-500">选择上级分类后，此分类将成为子分类</p>
                </div> <div>
                    <label for="sort_order" class="block text-sm font-medium text-gray-700 mb-2">
                        排序
                    </label>
                    <input type="number" id="sort_order" name="sort_order"
                           value="{% if category %}{{ category.sort_order }}{% else %}0{% endif %}"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="数字越小越靠前">
                </div> <div class="flex items-center md:col-span-2">
                    <input type="checkbox" id="is_active" name="is_active"
                           {% if not category or category.is_active %}checked{% endif %}
                           class="w-4 h-4 text-theme-600 border-gray-300 rounded focus:ring-theme-500">
                    <label for="is_active" class="ml-2 block text-sm text-gray-900">
                        启用此分类
                    </label>
                </div> <div class="md:col-span-2">
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                        分类描述
                    </label>
                    <textarea id="description" name="description" rows="3"
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                              placeholder="分类的详细描述...">{% if category %}{{ category.description }}{% endif %}</textarea>
                </div>
            </div> {% if category %}
            <div class="bg-theme-50 border-l-4 border-theme-400 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <i class="fas fa-info-circle text-theme-400"></i>
                    </div>
                    <div class="ml-3">
                        <p class="text-sm text-theme-700">
                            当前完整路径：<strong>{{ category.full_name }}</strong>
                        </p>
                        {% if category.get_descendants.count > 0 %}
                        <p class="text-sm text-theme-700 mt-1">
                            此分类包含 <strong>{{ category.get_descendants.count }}</strong> 个子分类
                        </p>
                        {% endif %}
                    </div>
                </div>
            </div>
            {% endif %} <div class="flex justify-end space-x-3 pt-6 border-t">
                <a href="{% url 'products:category_list' %}" class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    取消
                </a>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-save mr-2"></i>保存
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
