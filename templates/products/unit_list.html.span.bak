{% extends 'base.html' %}

{% block title %}计量单位管理 - BetterLaser ERP{% endblock %}
{% block page_title %}计量单位管理{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">基础设置</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">计量单位</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">计量单位列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'products:unit_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建单位
        </a>
    </div> <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                       placeholder="单位名称、符号...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">单位类型</label>
                <select name="unit_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="">全部</option>
                    {% for type_val, type_label in unit_types %}
                    <option value="{{ type_val }}" {% if unit_type == type_val %}selected{% endif %}>{{ type_label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="is_active" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="">全部</option>
                    <option value="true" {% if is_active == 'true' %}selected{% endif %}>启用</option>
                    <option value="false" {% if is_active == 'false' %}selected{% endif %}>停用</option>
                </select>
            </div>
            <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">单位名称</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">单位符号</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">单位类型</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">描述</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for unit in page_obj %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ unit.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ unit.symbol }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ unit.get_unit_type_display }}</td>
                    <td class="px-6 py-4 text-sm text-gray-500">{{ unit.description|default:"-"|truncatechars:50 }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if unit.is_active %}bg-green-100 text-green-800{% else %}bg-gray-100 text-gray-800{% endif %}">
                            {% if unit.is_active %}启用{% else %}停用{% endif %}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'products:unit_detail' unit.pk %}" class="text-theme-600 hover:text-theme-700 mr-3"><svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                        <a href="{% url 'products:unit_update' unit.pk %}" class="text-green-600 hover:text-green-900 mr-3"><svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                        <a href="{% url 'products:unit_delete' unit.pk %}" class="text-red-600 hover:text-red-900"><svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <svg x-data="heroicon('inbox')" class="text-4xl mb-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p>暂无计量单位数据</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t">
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <p class="text-sm text-gray-700">显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ page_obj.paginator.count }} 条</p>
                <nav class="relative z-0 inline-flex rounded-md shadow-sm">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}" class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">上一页</a>
                    {% endif %}
                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">{{ page_obj.number }}</span>
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}" class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">下一页</a>
                    {% endif %}
                </nav>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
