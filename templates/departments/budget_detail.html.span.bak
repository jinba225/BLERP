{% extends 'base.html' %}

{% block title %}预算详情 - BetterLaser ERP{% endblock %}
{% block page_title %}预算详情{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'departments:budget_list' %}" class="text-gray-500 hover:text-gray-700">部门预算</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">预算详情</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 预算基本信息 -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-900">
                <svg x-data="heroicon('information-circle')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>基本信息
            </h3>
            <div class="flex space-x-2">
                <a class="btn btn-primary" href="/admin/departments/departmentbudget/{{ budget.pk }}/change/">
                    <svg x-data="heroicon('pencil')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑
                </a>
            </div>
        </div>
        <div class="px-6 py-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="block text-sm font-medium text-gray-500">部门</label>
                    <p class="mt-1 text-lg text-gray-900">
                        <a href="{% url 'departments:department_detail' budget.department.pk %}"
                           class="text-theme-600 hover:text-theme-900">
                            {{ budget.department.name }}
                        </a>
                    </p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">预算类型</label>
                    <p class="mt-1 text-lg text-gray-900">{{ budget.get_budget_type_display }}</p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">预算期间</label>
                    <p class="mt-1 text-lg text-gray-900">
                        {{ budget.year }}年
                        {% if budget.quarter %}第{{ budget.quarter }}季度{% endif %}
                        {% if budget.month %}{{ budget.month }}月{% endif %}
                    </p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">批准状态</label>
                    <p class="mt-1">
                        {% if budget.is_approved %}
                            <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">
                                已批准
                            </span>
                        {% else %}
                            <span class="px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                待批准
                            </span>
                        {% endif %}
                    </p>
                </div>
                {% if budget.is_approved %}
                <div>
                    <label class="block text-sm font-medium text-gray-500">批准人</label>
                    <p class="mt-1 text-lg text-gray-900">
                        {{ budget.approved_by.get_full_name|default:budget.approved_by.username }}
                    </p>
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500">批准时间</label>
                    <p class="mt-1 text-lg text-gray-900">
                        {{ budget.approved_at|date:"Y-m-d H:i" }}
                    </p>
                </div>
                {% endif %}
                {% if budget.notes %}
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-500">备注</label>
                    <p class="mt-1 text-gray-900">{{ budget.notes }}</p>
                </div>
                {% endif %}
            </div>
        </div>
    </div> <!-- 预算明细 -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">
                <svg x-data="heroicon('chart-bar')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>预算明细
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            项目
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            预算金额
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            实际支出
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            差异
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            执行率
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">人员预算</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.personnel_budget|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.personnel_actual|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right">
                            {% with variance=budget.personnel_actual|add:budget.personnel_budget|floatformat:0|add:"0"|add:"-"|add:budget.personnel_budget|floatformat:0 %}
                                {% if budget.personnel_actual > budget.personnel_budget %}
                                    <span class="text-red-600">+¥{{ budget.personnel_actual|floatformat:2 }}</span>
                                {% else %}
                                    <span class="text-green-600">-¥{{ budget.personnel_budget|floatformat:2 }}</span>
                                {% endif %}
                            {% endwith %}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {% if budget.personnel_budget > 0 %}
                                {{ budget.personnel_actual|floatformat:0|add:"0"|floatformat:0 }}%
                            {% else %}
                                0%
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">运营预算</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.operational_budget|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.operational_actual|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right">
                            {% if budget.operational_actual > budget.operational_budget %}
                                <span class="text-red-600">+¥{{ budget.operational_actual|floatformat:2 }}</span>
                            {% else %}
                                <span class="text-green-600">-¥{{ budget.operational_budget|floatformat:2 }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {% if budget.operational_budget > 0 %}
                                {{ budget.operational_actual|floatformat:0 }}%
                            {% else %}
                                0%
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">设备预算</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.equipment_budget|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.equipment_actual|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right">
                            {% if budget.equipment_actual > budget.equipment_budget %}
                                <span class="text-red-600">+¥{{ budget.equipment_actual|floatformat:2 }}</span>
                            {% else %}
                                <span class="text-green-600">-¥{{ budget.equipment_budget|floatformat:2 }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {% if budget.equipment_budget > 0 %}
                                {{ budget.equipment_actual|floatformat:0 }}%
                            {% else %}
                                0%
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 text-sm font-medium text-gray-900">其他预算</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.other_budget|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.other_actual|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right">
                            {% if budget.other_actual > budget.other_budget %}
                                <span class="text-red-600">+¥{{ budget.other_actual|floatformat:2 }}</span>
                            {% else %}
                                <span class="text-green-600">-¥{{ budget.other_budget|floatformat:2 }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {% if budget.other_budget > 0 %}
                                {{ budget.other_actual|floatformat:0 }}%
                            {% else %}
                                0%
                            {% endif %}
                        </td>
                    </tr>
                    <tr class="bg-gray-100 font-semibold">
                        <td class="px-6 py-4 text-sm text-gray-900">合计</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.total_budget|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ budget.total_actual|floatformat:2 }}</td>
                        <td class="px-6 py-4 text-sm text-right">
                            {% if budget.variance >= 0 %}
                                <span class="text-red-600">+¥{{ budget.variance|floatformat:2 }}</span>
                            {% else %}
                                <span class="text-green-600">¥{{ budget.variance|floatformat:2 }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            {% if budget.total_budget > 0 %}
                                {{ budget.variance_percentage|floatformat:1 }}%
                            {% else %}
                                0%
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div> <!-- 返回按钮 -->
    <div class="flex justify-end">
        <a href="{% url 'departments:budget_list' %}"
           class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
            <svg x-data="heroicon('arrow-left')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>返回列表
        </a>
    </div>
</div>
{% endblock %}
