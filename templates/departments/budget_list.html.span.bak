{% extends 'base.html' %}

{% block title %}部门预算 - BetterLaser ERP{% endblock %}
{% block page_title %}部门预算{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">部门预算</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 顶部操作栏 -->
    <div class="flex justify-between items-center">
        <div class="flex space-x-3">
            <a href="{% url 'departments:budget_summary' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                <i class="fas fa-chart-pie mr-2"></i>预算汇总
            </a>
        </div>
        <div class="flex space-x-3">
            <a class="btn btn-primary" href="/admin/departments/departmentbudget/add/">
                <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建预算
            </a>
        </div>
    </div> <!-- 搜索和筛选 -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </label>
                <input type="text" name="search" value="{{ search }}"
                       placeholder="部门名称或备注"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <svg x-data="heroicon('building')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>部门
                </label>
                <select name="department" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    {% for dept in departments %}
                        <option value="{{ dept.id }}" {% if department_id == dept.id|stringformat:"s" %}selected{% endif %}>
                            {{ dept.name }}
                        </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <svg x-data="heroicon('calendar-days')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>年份
                </label>
                <input type="number" name="year" value="{{ year }}" placeholder="年份"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-tag mr-1"></i>预算类型
                </label>
                <select name="budget_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    <option value="annual" {% if budget_type == 'annual' %}selected{% endif %}>年度预算</option>
                    <option value="quarterly" {% if budget_type == 'quarterly' %}selected{% endif %}>季度预算</option>
                    <option value="monthly" {% if budget_type == 'monthly' %}selected{% endif %}>月度预算</option>
                    <option value="project" {% if budget_type == 'project' %}selected{% endif %}>项目预算</option>
                </select>
            </div> <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <!-- 预算列表 -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-900">
                <i class="fas fa-coins mr-2 text-theme-600"></i>预算列表 (共 {{ total_count }} 条)
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            部门
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            预算期间
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            预算总额
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            实际支出
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            差异
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            状态
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for budget in page_obj %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <a href="{% url 'departments:department_detail' budget.department.pk %}"
                               class="text-sm font-medium text-theme-600 hover:text-theme-900">
                                {{ budget.department.name }}
                            </a>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900">{{ budget.get_budget_type_display }}</div>
                            <div class="text-sm text-gray-500">
                                {{ budget.year }}年
                                {% if budget.quarter %}Q{{ budget.quarter }}{% endif %}
                                {% if budget.month %}{{ budget.month }}月{% endif %}
                            </div>
                        </td>
                        <td class="px-6 py-4 text-right text-sm text-gray-900">
                            ¥{{ budget.total_budget|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 text-right text-sm text-gray-900">
                            ¥{{ budget.total_actual|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 text-right text-sm">
                            {% if budget.variance >= 0 %}
                                <span class="text-red-600">+¥{{ budget.variance|floatformat:2 }}</span>
                            {% else %}
                                <span class="text-green-600">¥{{ budget.variance|floatformat:2 }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            {% if budget.is_approved %}
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                    已批准
                                </span>
                            {% else %}
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                    待批准
                                </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-right text-sm font-medium space-x-2">
                            <a href="{% url 'departments:budget_detail' budget.pk %}"
                               class="text-theme-600 hover:text-theme-900">
                                <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg> 查看
                            </a>
                            <a href="/admin/departments/departmentbudget/{{ budget.pk }}/change/"
                               class="text-theme-600 hover:text-theme-900">
                                <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg> 编辑
                            </a>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                            <svg x-data="heroicon('inbox')" class="text-4xl mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <p>暂无预算数据</p>
                            <a class="btn btn-primary" href="/admin/departments/departmentbudget/add/">
                                <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>创建第一个预算
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- 分页 -->
        {% if page_obj.has_other_pages %}
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ page_obj.paginator.count }} 条
                </div>
                <div class="flex space-x-2">
                    {% if page_obj.has_previous %}
                        <a href="?page=1{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">首页</a>
                        <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">上一页</a>
                    {% endif %} <span class="px-3 py-1 border border-gray-300 rounded text-sm bg-theme-600 text-white">
                        {{ page_obj.number }}
                    </span> {% if page_obj.has_next %}
                        <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">下一页</a>
                        <a href="?page={{ page_obj.paginator.num_pages }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">末页</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
