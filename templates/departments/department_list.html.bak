{% extends 'base.html' %}

{% block title %}部门管理 - BetterLaser ERP{% endblock %}
{% block page_title %}部门管理{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">部门管理</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 顶部操作栏 -->
    <div class="flex justify-between items-center">
        <div class="flex space-x-3">
            <a href="{% url 'departments:department_tree' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                <i class="fas fa-sitemap mr-2"></i>组织架构图
            </a>
            <a href="{% url 'departments:organization_chart' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                <i class="fas fa-project-diagram mr-2"></i>组织结构树
            </a>
        </div>
        <div class="flex space-x-3">
            <a class="btn btn-primary" href="/admin/departments/department/add/">
                <i class="fas fa-plus mr-2"></i>新建部门
            </a>
        </div>
    </div> <!-- 搜索和筛选 -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-search mr-1"></i>搜索
                </label>
                <input type="text" name="search" value="{{ search }}"
                       placeholder="部门名称、代码或描述"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-toggle-on mr-1"></i>状态
                </label>
                <select name="is_active" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    <option value="true" {% if is_active == 'true' %}selected{% endif %}>启用</option>
                    <option value="false" {% if is_active == 'false' %}selected{% endif %}>停用</option>
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-filter mr-1"></i>层级
                </label>
                <select name="root_only" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    <option value="true" {% if show_root_only == 'true' %}selected{% endif %}>仅显示顶级部门</option>
                </select>
            </div> <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>搜索
                </button>
            </div>
        </form>
    </div> <!-- 部门列表 -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        部门信息
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        部门经理
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        联系方式
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        人员数量
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        状态
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for department in departments %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">
                        <div class="flex items-center">
                            {% for i in department.get_ancestors %}
                                <span class="text-gray-400 mr-2">→</span>
                            {% endfor %}
                            <div>
                                <div class="text-sm font-medium text-gray-900">
                                    {{ department.name }}
                                </div>
                                <div class="text-sm text-gray-500">
                                    {{ department.code }}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        {% if department.manager %}
                            <div class="text-sm text-gray-900">{{ department.manager.get_full_name|default:department.manager.username }}</div>
                        {% else %}
                            <span class="text-sm text-gray-400">未分配</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        <div class="text-sm text-gray-900">
                            {% if department.phone %}
                                <div><i class="fas fa-phone text-gray-400 mr-1"></i>{{ department.phone }}</div>
                            {% endif %}
                            {% if department.email %}
                                <div><i class="fas fa-envelope text-gray-400 mr-1"></i>{{ department.email }}</div>
                            {% endif %}
                            {% if not department.phone and not department.email %}
                                <span class="text-gray-400">-</span>
                            {% endif %}
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        <span class="text-sm text-gray-900">
                            <i class="fas fa-users text-gray-400 mr-1"></i>{{ department.get_employee_count }} 人
                        </span>
                    </td>
                    <td class="px-6 py-4">
                        {% if department.is_active %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                启用
                            </span>
                        {% else %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                停用
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-right text-sm font-medium space-x-2">
                        <a href="{% url 'departments:department_detail' department.pk %}"
                           class="text-theme-600 hover:text-theme-900">
                            <i class="fas fa-eye"></i> 查看
                        </a>
                        <a href="/admin/departments/department/{{ department.pk }}/change/"
                           class="text-theme-600 hover:text-theme-900">
                            <i class="fas fa-edit"></i> 编辑
                        </a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <i class="fas fa-inbox text-4xl mb-4 text-gray-300"></i>
                        <p>暂无部门数据</p>
                        <a class="btn btn-primary" href="/admin/departments/department/add/">
                            <i class="fas fa-plus mr-2"></i>创建第一个部门
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div> <!-- 快捷导航 -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <a href="{% url 'departments:position_list' %}"
           class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-user-tie text-4xl text-theme-600"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">职位管理</h3>
                    <p class="text-sm text-gray-500">管理部门职位和岗位信息</p>
                </div>
            </div>
        </a> <a href="{% url 'departments:budget_list' %}"
           class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-coins text-4xl text-green-600"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">部门预算</h3>
                    <p class="text-sm text-gray-500">查看和管理部门预算</p>
                </div>
            </div>
        </a> <a href="{% url 'departments:organization_chart' %}"
           class="bg-white rounded-lg shadow p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-sitemap text-4xl text-purple-600"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-semibold text-gray-900">组织架构</h3>
                    <p class="text-sm text-gray-500">查看组织架构图</p>
                </div>
            </div>
        </a>
    </div>
</div>
{% endblock %}
