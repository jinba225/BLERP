{% extends 'base.html' %}

{% block title %}预算汇总 - BetterLaser ERP{% endblock %}
{% block page_title %}预算汇总{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'departments:budget_list' %}" class="text-gray-500 hover:text-gray-700">部门预算</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">预算汇总</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 筛选条件 -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-calendar-alt mr-1"></i>年份
                </label>
                <input type="number" name="year" value="{{ year }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-tag mr-1"></i>预算类型
                </label>
                <select name="budget_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="annual" {% if budget_type == 'annual' %}selected{% endif %}>年度预算</option>
                    <option value="quarterly" {% if budget_type == 'quarterly' %}selected{% endif %}>季度预算</option>
                    <option value="monthly" {% if budget_type == 'monthly' %}selected{% endif %}>月度预算</option>
                    <option value="project" {% if budget_type == 'project' %}selected{% endif %}>项目预算</option>
                </select>
            </div> <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-filter mr-2"></i>筛选
                </button>
            </div>
        </form>
    </div> <!-- 总体概览 -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-wallet text-3xl text-theme-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">人员预算总计</p>
                    <p class="text-2xl font-semibold text-gray-900">
                        ¥{{ overall_totals.total_personnel_budget|default:0|floatformat:0 }}
                    </p>
                    <p class="text-xs text-gray-500 mt-1">
                        实际: ¥{{ overall_totals.total_personnel_actual|default:0|floatformat:0 }}
                    </p>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-chart-line text-3xl text-green-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">运营预算总计</p>
                    <p class="text-2xl font-semibold text-gray-900">
                        ¥{{ overall_totals.total_operational_budget|default:0|floatformat:0 }}
                    </p>
                    <p class="text-xs text-gray-500 mt-1">
                        实际: ¥{{ overall_totals.total_operational_actual|default:0|floatformat:0 }}
                    </p>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-tools text-3xl text-purple-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">设备预算总计</p>
                    <p class="text-2xl font-semibold text-gray-900">
                        ¥{{ overall_totals.total_equipment_budget|default:0|floatformat:0 }}
                    </p>
                    <p class="text-xs text-gray-500 mt-1">
                        实际: ¥{{ overall_totals.total_equipment_actual|default:0|floatformat:0 }}
                    </p>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <i class="fas fa-ellipsis-h text-3xl text-orange-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">其他预算总计</p>
                    <p class="text-2xl font-semibold text-gray-900">
                        ¥{{ overall_totals.total_other_budget|default:0|floatformat:0 }}
                    </p>
                    <p class="text-xs text-gray-500 mt-1">
                        实际: ¥{{ overall_totals.total_other_actual|default:0|floatformat:0 }}
                    </p>
                </div>
            </div>
        </div>
    </div> <!-- 各部门预算对比 -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">
                <i class="fas fa-building mr-2 text-theme-600"></i>各部门预算对比
            </h3>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            部门
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            人员预算
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            运营预算
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            设备预算
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            其他预算
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            预算总计
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            实际总计
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                            操作
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for budget in budgets %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <a href="{% url 'departments:department_detail' budget.department.pk %}"
                               class="text-sm font-medium text-theme-600 hover:text-theme-900">
                                {{ budget.department.name }}
                            </a>
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            <div>¥{{ budget.personnel_budget|floatformat:0 }}</div>
                            <div class="text-xs text-gray-500">¥{{ budget.personnel_actual|floatformat:0 }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            <div>¥{{ budget.operational_budget|floatformat:0 }}</div>
                            <div class="text-xs text-gray-500">¥{{ budget.operational_actual|floatformat:0 }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            <div>¥{{ budget.equipment_budget|floatformat:0 }}</div>
                            <div class="text-xs text-gray-500">¥{{ budget.equipment_actual|floatformat:0 }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-right text-gray-900">
                            <div>¥{{ budget.other_budget|floatformat:0 }}</div>
                            <div class="text-xs text-gray-500">¥{{ budget.other_actual|floatformat:0 }}</div>
                        </td>
                        <td class="px-6 py-4 text-sm text-right font-semibold text-gray-900">
                            ¥{{ budget.total_budget|floatformat:0 }}
                        </td>
                        <td class="px-6 py-4 text-sm text-right font-semibold text-gray-900">
                            ¥{{ budget.total_actual|floatformat:0 }}
                        </td>
                        <td class="px-6 py-4 text-right text-sm">
                            <a href="{% url 'departments:budget_detail' budget.pk %}"
                               class="text-theme-600 hover:text-theme-900">
                                查看详情
                            </a>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                            <i class="fas fa-inbox text-4xl mb-4 text-gray-300"></i>
                            <p>暂无预算数据</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> <!-- 返回按钮 -->
    <div class="flex justify-end">
        <a href="{% url 'departments:budget_list' %}"
           class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
            <i class="fas fa-arrow-left mr-2"></i>返回预算列表
        </a>
    </div>
</div>
{% endblock %}
