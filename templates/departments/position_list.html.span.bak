{% extends 'base.html' %}

{% block title %}职位管理 - BetterLaser ERP{% endblock %}
{% block page_title %}职位管理{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">职位管理</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 顶部操作栏 -->
    <div class="flex justify-end">
        <a class="btn btn-primary" href="/admin/departments/position/add/">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建职位
        </a>
    </div> <!-- 搜索和筛选 -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </label>
                <input type="text" name="search" value="{{ search }}"
                       placeholder="职位名称或代码"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <svg x-data="heroicon('building')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>部门
                </label>
                <select name="department" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    {% for dept in departments %}
                        <option value="{{ dept.id }}" {% if department_id == dept.id|stringformat:"s" %}selected{% endif %}>
                            {{ dept.name }}
                        </option>
                    {% endfor %}
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-layer-group mr-1"></i>职位级别
                </label>
                <select name="level" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    <option value="junior" {% if level == 'junior' %}selected{% endif %}>初级</option>
                    <option value="intermediate" {% if level == 'intermediate' %}selected{% endif %}>中级</option>
                    <option value="senior" {% if level == 'senior' %}selected{% endif %}>高级</option>
                    <option value="expert" {% if level == 'expert' %}selected{% endif %}>专家</option>
                    <option value="manager" {% if level == 'manager' %}selected{% endif %}>经理</option>
                    <option value="director" {% if level == 'director' %}selected{% endif %}>总监</option>
                    <option value="vp" {% if level == 'vp' %}selected{% endif %}>副总裁</option>
                    <option value="president" {% if level == 'president' %}selected{% endif %}>总裁</option>
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-toggle-on mr-1"></i>状态
                </label>
                <select name="is_active" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部</option>
                    <option value="true" {% if is_active == 'true' %}selected{% endif %}>启用</option>
                    <option value="false" {% if is_active == 'false' %}selected{% endif %}>停用</option>
                </select>
            </div> <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <!-- 职位列表 -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="px-6 py-4 bg-gray-50 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg font-semibold text-gray-900">
                <svg x-data="heroicon('user')" class="mr-2 text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>职位列表 (共 {{ total_count }} 条)
            </h3>
        </div>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        职位信息
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        所属部门
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        职位级别
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        薪资范围
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        状态
                    </th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                        操作
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for position in page_obj %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">
                        <div class="text-sm font-medium text-gray-900">{{ position.name }}</div>
                        <div class="text-sm text-gray-500">{{ position.code }}</div>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        <a href="{% url 'departments:department_detail' position.department.pk %}"
                           class="text-theme-600 hover:text-theme-900">
                            {{ position.department.name }}
                        </a>
                    </td>
                    <td class="px-6 py-4">
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-theme-100 text-theme-800">
                            {{ position.get_level_display }}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        {% if position.min_salary and position.max_salary %}
                            ¥{{ position.min_salary|floatformat:0 }} - ¥{{ position.max_salary|floatformat:0 }}
                        {% else %}
                            <span class="text-gray-400">未设置</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        {% if position.is_active %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                                启用
                            </span>
                        {% else %}
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                                停用
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-right text-sm font-medium space-x-2">
                        <a href="{% url 'departments:position_detail' position.pk %}"
                           class="text-theme-600 hover:text-theme-900">
                            <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg> 查看
                        </a>
                        <a href="/admin/departments/position/{{ position.pk }}/change/"
                           class="text-theme-600 hover:text-theme-900">
                            <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg> 编辑
                        </a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <svg x-data="heroicon('inbox')" class="text-4xl mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p>暂无职位数据</p>
                        <a class="btn btn-primary" href="/admin/departments/position/add/">
                            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>创建第一个职位
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> <!-- 分页 -->
        {% if page_obj.has_other_pages %}
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ page_obj.paginator.count }} 条
                </div>
                <div class="flex space-x-2">
                    {% if page_obj.has_previous %}
                        <a href="?page=1{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if level %}&level={{ level }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">首页</a>
                        <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if level %}&level={{ level }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">上一页</a>
                    {% endif %} <span class="px-3 py-1 border border-gray-300 rounded text-sm bg-theme-600 text-white">
                        {{ page_obj.number }}
                    </span> {% if page_obj.has_next %}
                        <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if level %}&level={{ level }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">下一页</a>
                        <a href="?page={{ page_obj.paginator.num_pages }}{% if search %}&search={{ search }}{% endif %}{% if department_id %}&department={{ department_id }}{% endif %}{% if level %}&level={{ level }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                           class="px-3 py-1 border border-gray-300 rounded text-sm hover:bg-gray-50">末页</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
