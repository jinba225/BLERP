{% extends 'base.html' %}

{% block title %}组织结构图 - BetterLaser ERP{% endblock %}
{% block page_title %}组织结构图{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'departments:department_list' %}" class="text-gray-500 hover:text-gray-700">部门管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">组织结构图</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- 顶部操作栏 -->
    <div class="flex justify-between items-center">
        <div class="flex space-x-3">
            <a href="{% url 'departments:department_list' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                <svg x-data="heroicon('queue-list')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>列表视图
            </a>
            <a href="{% url 'departments:department_tree' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                <i class="fas fa-sitemap mr-2"></i>树形视图
            </a>
        </div>
    </div> <!-- 组织结构图 -->
    <div class="bg-white rounded-lg shadow p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">
            <i class="fas fa-project-diagram mr-2 text-theme-600"></i>组织结构图
        </h3> <div class="bg-theme-50 border-l-4 border-theme-400 p-4 mb-6">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg x-data="heroicon('information-circle')" class="text-theme-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
                <div class="ml-3">
                    <p class="text-sm text-theme-700">
                        组织结构图功能正在开发中。您可以使用树形视图查看组织架构，或使用列表视图管理部门信息。
                    </p>
                </div>
            </div>
        </div> {% if root_departments %}
            <div class="overflow-x-auto">
                <div class="inline-block min-w-full align-middle">
                    <div class="space-y-8">
                        {% for department in root_departments %}
                        <div class="border-2 border-gray-300 rounded-lg p-6 bg-gray-50">
                            <div class="text-center mb-4">
                                <div class="inline-block bg-theme-600 text-white px-6 py-3 rounded-lg">
                                    <div class="font-bold text-lg">{{ department.name }}</div>
                                    <div class="text-sm opacity-90">{{ department.manager.get_full_name|default:"无负责人" }}</div>
                                </div>
                            </div> {% if department.children.all %}
                            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                                {% for child in department.children.all %}
                                <div class="border border-gray-300 rounded-lg p-4 bg-white hover:shadow-lg transition-shadow">
                                    <div class="text-center">
                                        <div class="font-semibold text-gray-900">{{ child.name }}</div>
                                        <div class="text-sm text-gray-500 mt-1">
                                            {{ child.manager.get_full_name|default:"无负责人" }}
                                        </div>
                                        <div class="text-xs text-gray-400 mt-2">
                                            <svg x-data="heroicon('users')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>{{ child.get_employee_count }} 人
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-12 text-gray-500">
                <svg x-data="heroicon('inbox')" class="text-4xl mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                <p>暂无部门数据</p>
                <a class="btn btn-primary" href="/admin/departments/department/add/">
                    <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>创建第一个部门
                </a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
