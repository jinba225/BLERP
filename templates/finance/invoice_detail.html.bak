{% extends 'base.html' %}

{% block title %}发票详情 - {{ invoice.invoice_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">财务管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:invoice_list' %}" class="text-gray-500 hover:text-gray-700">发票管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ invoice.invoice_number }}</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header with Actions -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ invoice.invoice_number }}</h3>
            {% if invoice.invoice_code %}
            <p class="text-sm text-gray-600">发票代码: {{ invoice.invoice_code }}</p>
            {% endif %}
            <p class="text-sm text-gray-600 mt-1">
                {% if invoice.invoice_type == 'purchase' %}
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-theme-100 text-theme-800">
                    <i class="fas fa-shopping-cart mr-1"></i>采购发票
                </span>
                {% else %}
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    <i class="fas fa-file-invoice-dollar mr-1"></i>销售发票
                </span>
                {% endif %} <span class="ml-2 px-2 py-1 text-xs font-semibold rounded
                    {% if invoice.status == 'draft' %}bg-gray-100 text-gray-800
                    {% elif invoice.status == 'issued' %}bg-theme-100 text-theme-800
                    {% elif invoice.status == 'received' %}bg-yellow-100 text-yellow-800
                    {% elif invoice.status == 'verified' %}bg-green-100 text-green-800
                    {% elif invoice.status == 'cancelled' %}bg-red-100 text-red-800
                    {% endif %}">
                    {{ invoice.get_status_display }}
                </span>
            </p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'finance:invoice_list' %}"
               class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>返回
            </a> {% if invoice.status in 'issued,received' %}
            <a class="btn btn-primary" href="{% url 'finance:invoice_verify' invoice.pk %}">
                <i class="fas fa-check-circle mr-2"></i>
                {% if invoice.invoice_type == 'purchase' %}认证发票{% else %}确认开具{% endif %}
            </a>
            {% endif %} {% if invoice.status == 'draft' %}
            <a class="btn btn-primary" href="{% url 'finance:invoice_edit' invoice.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            <a class="btn btn-primary" href="{% url 'finance:invoice_delete' invoice.pk %}" onclick="return confirm('确认要删除此发票吗？');">
                <i class="fas fa-trash mr-2"></i>删除
            </a>
            {% endif %} {% if invoice.attachment %}
            <a class="btn btn-primary" href="{{ invoice.attachment.url }}">
                <i class="fas fa-file-pdf mr-2"></i>查看附件
            </a>
            {% endif %}
        </div>
    </div> <!-- Invoice and Party Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Party Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">
                {% if invoice.invoice_type == 'purchase' %}供应商信息{% else %}客户信息{% endif %}
            </h4>
            <dl class="space-y-2">
                {% if invoice.invoice_type == 'purchase' and invoice.supplier %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">供应商名称：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.supplier.name }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">联系人：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.supplier.contact|default:"-" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">联系电话：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.supplier.phone|default:"-" }}</dd>
                </div>
                {% elif invoice.invoice_type == 'sales' and invoice.customer %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">客户名称：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.customer.name }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">联系人：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.customer.contact|default:"-" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">联系电话：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.customer.phone|default:"-" }}</dd>
                </div>
                {% else %}
                <div class="text-sm text-gray-500">- 暂无信息 -</div>
                {% endif %}
            </dl>
        </div> <!-- Invoice Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">发票信息</h4>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">开票日期：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.invoice_date|date:"Y-m-d" }}</dd>
                </div>
                {% if invoice.tax_date %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">税务日期：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.tax_date|date:"Y-m-d" }}</dd>
                </div>
                {% endif %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">税率：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.tax_rate }}%</dd>
                </div>
                {% if invoice.reference_number %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">关联单据：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.reference_number }}</dd>
                </div>
                {% endif %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">创建人：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.created_by.username|default:"-" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">创建时间：</dt>
                    <dd class="text-sm text-gray-900">{{ invoice.created_at|date:"Y-m-d H:i" }}</dd>
                </div>
            </dl>
        </div>
    </div> <!-- Invoice Items -->
    <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-4 border-b">
            <h4 class="text-lg font-semibold text-gray-900">发票明细</h4>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">序号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">品名</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">规格型号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">单位</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">单价</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">金额</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">税率</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">税额</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in invoice.items.all %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ forloop.counter }}</td>
                        <td class="px-6 py-4 text-sm text-gray-900">{{ item.description }}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">{{ item.specification|default:"-" }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ item.unit|default:"-" }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">{{ item.quantity }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">¥{{ item.unit_price|floatformat:2 }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">¥{{ item.amount|floatformat:2 }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 text-right">{{ item.tax_rate }}%</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">¥{{ item.tax_amount|floatformat:2 }}</td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="9" class="px-6 py-4 text-center text-sm text-gray-500">暂无明细</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> <!-- Invoice Summary -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">不含税金额</div>
            <div class="text-2xl font-bold text-gray-900">¥{{ invoice.amount_excluding_tax|floatformat:2 }}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">税额</div>
            <div class="text-2xl font-bold text-gray-900">¥{{ invoice.tax_amount|floatformat:2 }}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">价税合计</div>
            <div class="text-2xl font-bold text-theme-600">¥{{ invoice.total_amount|floatformat:2 }}</div>
        </div>
    </div> <!-- Remark -->
    {% if invoice.remark %}
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">备注</h4>
        <p class="text-sm text-gray-700 whitespace-pre-wrap">{{ invoice.remark }}</p>
    </div>
    {% endif %}
</div>
{% endblock %}
