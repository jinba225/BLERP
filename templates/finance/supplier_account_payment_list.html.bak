{% extends 'base.html' %}
{% block title %}供应商应付账款 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">财务管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:supplier_account_payment_list' %}" class="text-gray-500 hover:text-gray-700">供应商应付账款</a>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">供应商应付账款（按明细核销）</h3>
            <p class="text-sm text-gray-600">管理供应商应付账款，支持按明细分批核销</p>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div class="bg-white rounded-lg shadow p-4">
            <div class="text-sm text-gray-500">应付单数</div>
            <div class="text-2xl font-bold text-gray-900">{{ stats.total_count }}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <div class="text-sm text-gray-500">实际应付总额</div>
            <div class="text-2xl font-bold text-blue-600">¥{{ stats.total_invoice_amount|floatformat:2 }}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <div class="text-sm text-gray-500">已核销金额</div>
            <div class="text-2xl font-bold text-green-600">¥{{ stats.total_paid_amount|floatformat:2 }}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <div class="text-sm text-gray-500">未付余额</div>
            <div class="text-2xl font-bold text-orange-600">¥{{ stats.total_balance|floatformat:2 }}</div>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="bg-white rounded-lg shadow">
        <form method="get" class="p-4">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">搜索</label>
                    <input type="text" name="search" value="{{ search }}"
                           class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                           placeholder="应付单号/供应商/订单号">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">状态</label>
                    <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">全部状态</option>
                        <option value="pending" {% if status == 'pending' %}selected{% endif %}>待付款</option>
                        <option value="partially_paid" {% if status == 'partially_paid' %}selected{% endif %}>部分付款</option>
                        <option value="paid" {% if status == 'paid' %}selected{% endif %}>已付清</option>
                        <option value="overdue" {% if status == 'overdue' %}selected{% endif %}>已逾期</option>
                    </select>
                </div>
                <div class="flex items-end">
                    <button type="submit" class="btn btn-primary w-full">
                        <i class="fas fa-search mr-2"></i>查询
                    </button>
                </div>
                <div class="flex items-end">
                    <a href="{% url 'finance:supplier_account_payment_list' %}" class="btn btn-outline w-full">
                        <i class="fas fa-redo mr-2"></i>重置
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Account List -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">应付单号</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">供应商</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">采购订单</th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">实际应付</th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">已核销</th>
                    <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">未付余额</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">明细数</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">状态</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for account in page_obj %}
                <tr>
                    <td class="px-4 py-3 text-sm text-gray-900">{{ account.invoice_number }}</td>
                    <td class="px-4 py-3 text-sm text-gray-900">{{ account.supplier.name }}</td>
                    <td class="px-4 py-3 text-sm text-gray-600">
                        {% if account.purchase_order %}
                        {{ account.purchase_order.order_number }}
                        {% else %}
                        -
                        {% endif %}
                    </td>
                    <td class="px-4 py-3 text-sm text-right text-gray-900">
                        ¥{{ account.invoice_amount|floatformat:2 }}
                        <div class="text-xs text-gray-500">
                            正:¥{{ account.total_positive|floatformat:2 }} + 负:¥{{ account.total_negative|floatformat:2 }}
                        </div>
                    </td>
                    <td class="px-4 py-3 text-sm text-right text-green-600">¥{{ account.paid_amount|floatformat:2 }}</td>
                    <td class="px-4 py-3 text-sm text-right font-medium {% if account.balance > 0 %}text-orange-600{% else %}text-green-600{% endif %}">
                        ¥{{ account.balance|floatformat:2 }}
                    </td>
                    <td class="px-4 py-3 text-sm text-center text-gray-600">
                        {{ account.detail_count }} <span class="text-xs text-gray-400">({{ account.pending_details }}待核销)</span>
                    </td>
                    <td class="px-4 py-3 text-center">
                        {% if account.status == 'paid' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">已付清</span>
                        {% elif account.status == 'partially_paid' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">部分付款</span>
                        {% elif account.status == 'overdue' %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">已逾期</span>
                        {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">待付款</span>
                        {% endif %}
                    </td>
                    <td class="px-4 py-3 text-center">
                        <a href="{% url 'finance:supplier_account_payment_allocate' account.pk %}"
                           class="text-theme-600 hover:text-theme-900 font-medium">
                            <i class="fas fa-credit-card mr-1"></i>核销
                        </a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="9" class="px-4 py-8 text-center text-gray-500">
                        暂无应付账款记录
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>

        <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到
                    <span class="font-medium">{{ page_obj.end_index }}</span> 条，
                    共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                </div>
                <div class="flex space-x-2">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}&search={{ search }}&status={{ status }}"
                       class="px-3 py-1 border border-gray-300 rounded text-sm text-gray-700 hover:bg-gray-50">上一页</a>
                    {% endif %}
                    <span class="px-3 py-1 text-sm text-gray-700">
                        第 {{ page_obj.number }} / {{ page_obj.paginator.num_pages }} 页
                    </span>
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}&search={{ search }}&status={{ status }}"
                       class="px-3 py-1 border border-gray-300 rounded text-sm text-gray-700 hover:bg-gray-50">下一页</a>
                    {% endif %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
