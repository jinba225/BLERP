{% extends 'base.html' %}

{% block title %}{{ tax_rate.name }} - 税率详情{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">基础设置</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:tax_rate_list' %}" class="text-gray-500 hover:text-gray-700">税率设置</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ tax_rate.name }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <h3 class="text-lg font-semibold text-gray-900">税率详情</h3>
        <div class="space-x-2">
            <a class="btn btn-primary" href="{% url 'finance:tax_rate_update' tax_rate.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            <a class="btn btn-primary" href="{% url 'finance:tax_rate_delete' tax_rate.pk %}">
                <i class="fas fa-trash mr-2"></i>删除
            </a>
        </div>
    </div> <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">基本信息</h4>
        </div>
        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">税率代码</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.code }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">税率名称</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.name }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">税种</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.get_tax_type_display }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">税率</dt>
                    <dd class="mt-1 text-sm font-bold text-theme-600 text-xl">{{ tax_rate.rate_percent }}%</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">排序</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.sort_order }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">是否默认</dt>
                    <dd class="mt-1">
                        {% if tax_rate.is_default %}
                        <span class="px-2 py-1 text-xs font-semibold rounded bg-theme-100 text-theme-800">
                            <i class="fas fa-star mr-1"></i>默认税率
                        </span>
                        {% else %}
                        <span class="text-gray-400">否</span>
                        {% endif %}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">状态</dt>
                    <dd class="mt-1">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if tax_rate.is_active %}bg-green-100 text-green-800{% else %}bg-gray-100 text-gray-800{% endif %}">
                            {% if tax_rate.is_active %}启用{% else %}停用{% endif %}
                        </span>
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">生效日期</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.effective_date|date:"Y-m-d"|default:"-" }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">失效日期</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.expiry_date|date:"Y-m-d"|default:"-" }}</dd>
                </div>
                <div class="md:col-span-2">
                    <dt class="text-sm font-medium text-gray-500">适用说明</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.description|default:"-" }}</dd>
                </div>
            </dl>
        </div>
    </div> <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">系统信息</h4>
        </div>
        <div class="p-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">创建时间</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.created_at|date:"Y-m-d H:i:s" }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">创建人</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.created_by.username|default:"-" }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">最后更新</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.updated_at|date:"Y-m-d H:i:s" }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">更新人</dt>
                    <dd class="mt-1 text-sm text-gray-900">{{ tax_rate.updated_by.username|default:"-" }}</dd>
                </div>
            </dl>
        </div>
    </div>
</div>
{% endblock %}
