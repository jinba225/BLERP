{% extends 'base.html' %}

{% block title %}应付账款详情 - {{ account.supplier.name }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">往来款项</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:supplier_account_list' %}" class="text-gray-500 hover:text-gray-700">供应商账款</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">账款详情</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto space-y-6">
    <!-- Header with Actions -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ account.supplier.name }} - 应付账款</h3>
            <p class="text-sm text-gray-600 mt-1">
                <span class="px-2 py-1 text-xs font-semibold rounded
                    {% if account.status == 'pending' %}bg-yellow-100 text-yellow-800
                    {% elif account.status == 'partially_paid' %}bg-theme-100 text-theme-800
                    {% elif account.status == 'paid' %}bg-green-100 text-green-800
                    {% elif account.status == 'overdue' %}bg-red-100 text-red-800
                    {% endif %}">
                    {{ account.get_status_display }}
                </span>
                {% if account.is_overdue %}
                <span class="ml-2 px-2 py-1 text-xs font-semibold rounded bg-red-100 text-red-800">
                    <i class="fas fa-exclamation-triangle mr-1"></i>已逾期
                </span>
                {% endif %}
            </p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'finance:supplier_account_list' %}"
               class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>返回列表
            </a>
            {% if account.balance > 0 %}
            <button class="btn btn-primary" type="button" onclick="alert('付款功能即将上线！')">
                <i class="fas fa-money-bill-wave mr-2"></i>记录付款
            </button>
            {% endif %}
        </div>
    </div> <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">应付金额</div>
            <div class="text-2xl font-bold text-gray-900">¥{{ account.invoice_amount|floatformat:2 }}</div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">已付金额</div>
            <div class="text-2xl font-bold text-green-600">¥{{ account.paid_amount|floatformat:2 }}</div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">未付余额</div>
            <div class="text-2xl font-bold text-red-600">¥{{ account.balance|floatformat:2 }}</div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">付款进度</div>
            <div class="text-2xl font-bold text-theme-600">{{ account.payment_ratio|floatformat:1 }}%</div>
            <div class="w-full bg-gray-200 rounded-full h-2 mt-2">
                <div class="bg-theme-600 h-2 rounded-full" style="width: {{ account.payment_ratio }}%"></div>
            </div>
        </div>
    </div> <!-- Account Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">基本信息</h4>
            <dl class="space-y-3">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">供应商：</dt>
                    <dd class="text-sm text-gray-900">{{ account.supplier.name }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">发票号：</dt>
                    <dd class="text-sm text-gray-900">
                        {% if account.invoice %}
                        <a href="{% url 'finance:invoice_detail' account.invoice.pk %}"
                           class="text-theme-600 hover:text-theme-700">
                            {{ account.invoice_number }}
                        </a>
                        {% else %}
                        {{ account.invoice_number }}
                        {% endif %}
                    </dd>
                </div>
                {% if account.purchase_order %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">采购订单：</dt>
                    <dd class="text-sm text-gray-900">
                        <a href="{% url 'purchase:order_detail' account.purchase_order.pk %}"
                           class="text-theme-600 hover:text-theme-700">
                            {{ account.purchase_order.order_number }}
                        </a>
                    </dd>
                </div>
                {% endif %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">币种：</dt>
                    <dd class="text-sm text-gray-900">{{ account.currency }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">创建时间：</dt>
                    <dd class="text-sm text-gray-900">{{ account.created_at|date:"Y-m-d H:i" }}</dd>
                </div>
                {% if account.created_by %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">创建人：</dt>
                    <dd class="text-sm text-gray-900">{{ account.created_by.username }}</dd>
                </div>
                {% endif %}
            </dl>
        </div> <!-- Date Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">日期信息</h4>
            <dl class="space-y-3">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">发票日期：</dt>
                    <dd class="text-sm text-gray-900">{{ account.invoice_date|date:"Y-m-d" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">到期日期：</dt>
                    <dd class="text-sm">
                        {% if account.is_overdue %}
                        <span class="text-red-600 font-medium">
                            <i class="fas fa-exclamation-triangle mr-1"></i>
                            {{ account.due_date|date:"Y-m-d" }}
                            (已逾期)
                        </span>
                        {% else %}
                        <span class="text-gray-900">{{ account.due_date|date:"Y-m-d" }}</span>
                        {% endif %}
                    </dd>
                </div>
                {% if account.due_date %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">剩余天数：</dt>
                    <dd class="text-sm">
                        {% load erp_filters %}
                        {% with days=account.due_date|days_until %}
                        {% if days < 0 %}
                        <span class="text-red-600 font-medium">逾期 {{ days|abs }} 天</span>
                        {% elif days == 0 %}
                        <span class="text-yellow-600 font-medium">今天到期</span>
                        {% elif days <= 7 %}
                        <span class="text-orange-600 font-medium">还剩 {{ days }} 天</span>
                        {% else %}
                        <span class="text-gray-900">还剩 {{ days }} 天</span>
                        {% endif %}
                        {% endwith %}
                    </dd>
                </div>
                {% endif %}
            </dl>
        </div>
    </div> <!-- Related Invoice -->
    {% if account.invoice %}
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b flex justify-between items-center">
            <span>关联发票</span>
            <a href="{% url 'finance:invoice_detail' account.invoice.pk %}"
               class="text-sm font-normal text-theme-600 hover:text-theme-700">
                查看完整发票 <i class="fas fa-external-link-alt ml-1"></i>
            </a>
        </h4> <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
            <div>
                <div class="text-sm text-gray-500">发票号码</div>
                <div class="text-sm font-medium text-gray-900">{{ account.invoice.invoice_number }}</div>
            </div>
            <div>
                <div class="text-sm text-gray-500">发票代码</div>
                <div class="text-sm font-medium text-gray-900">{{ account.invoice.invoice_code|default:"-" }}</div>
            </div>
            <div>
                <div class="text-sm text-gray-500">开票日期</div>
                <div class="text-sm font-medium text-gray-900">{{ account.invoice.invoice_date|date:"Y-m-d" }}</div>
            </div>
            <div>
                <div class="text-sm text-gray-500">状态</div>
                <span class="px-2 py-1 text-xs font-semibold rounded
                    {% if account.invoice.status == 'draft' %}bg-gray-100 text-gray-800
                    {% elif account.invoice.status == 'issued' %}bg-theme-100 text-theme-800
                    {% elif account.invoice.status == 'received' %}bg-yellow-100 text-yellow-800
                    {% elif account.invoice.status == 'verified' %}bg-green-100 text-green-800
                    {% elif account.invoice.status == 'cancelled' %}bg-red-100 text-red-800
                    {% endif %}">
                    {{ account.invoice.get_status_display }}
                </span>
            </div>
        </div> <div class="grid grid-cols-3 gap-4 pt-4 border-t">
            <div class="text-center">
                <div class="text-sm text-gray-500">不含税金额</div>
                <div class="text-lg font-semibold text-gray-900">¥{{ account.invoice.amount_excluding_tax|floatformat:2 }}</div>
            </div>
            <div class="text-center">
                <div class="text-sm text-gray-500">税额</div>
                <div class="text-lg font-semibold text-gray-900">¥{{ account.invoice.tax_amount|floatformat:2 }}</div>
            </div>
            <div class="text-center">
                <div class="text-sm text-gray-500">价税合计</div>
                <div class="text-lg font-semibold text-theme-600">¥{{ account.invoice.total_amount|floatformat:2 }}</div>
            </div>
        </div>
    </div>
    {% endif %} <!-- Payment History -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-lg font-semibold text-gray-900">付款记录</h4>
        </div> {% if related_payments %}
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">付款单号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">付款日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">付款方式</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">付款金额</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for payment in related_payments %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            {{ payment.payment_number }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ payment.payment_date|date:"Y-m-d" }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {{ payment.get_payment_method_display }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                            ¥{{ payment.amount|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 text-xs font-semibold rounded
                                {% if payment.status == 'pending' %}bg-yellow-100 text-yellow-800
                                {% elif payment.status == 'completed' %}bg-green-100 text-green-800
                                {% elif payment.status == 'cancelled' %}bg-red-100 text-red-800
                                {% elif payment.status == 'failed' %}bg-red-100 text-red-800
                                {% endif %}">
                                {{ payment.get_status_display }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                            <a href="{% url 'finance:payment_detail' payment.pk %}"
                               class="text-theme-600 hover:text-theme-700 font-medium">
                                查看详情
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% else %}
        <div class="px-6 py-12 text-center text-gray-500">
            <i class="fas fa-inbox text-4xl text-gray-300 mb-4"></i>
            <p>暂无付款记录</p>
        </div>
        {% endif %}
    </div> <!-- Notes -->
    {% if account.notes %}
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">备注</h4>
        <p class="text-sm text-gray-700 whitespace-pre-wrap">{{ account.notes }}</p>
    </div>
    {% endif %}
</div>
{% endblock %}
