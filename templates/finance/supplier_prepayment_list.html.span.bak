{% extends 'base.html' %}

{% block title %}预付款 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:dashboard' %}" class="text-gray-500 hover:text-gray-700">往来款项</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">预付款</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">供应商预付款</h3>
            <p class="text-sm text-gray-600">共 {{ page_obj.paginator.count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'finance:supplier_prepayment_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建预付款
        </a>
    </div> <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">供应商</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">金额</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">余额</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">付款日期</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">备注</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            {% for prepay in page_obj %}
            <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 text-sm text-gray-900">{{ prepay.supplier.name }}</td>
                <td class="px-6 py-4 text-sm text-right text-gray-900">¥{{ prepay.amount|floatformat:2 }}</td>
                <td class="px-6 py-4 text-sm text-right font-semibold {% if prepay.balance > 0 %}text-theme-600{% else %}text-green-600{% endif %}">¥{{ prepay.balance|floatformat:2 }}</td>
                <td class="px-6 py-4 text-sm text-gray-500">{{ prepay.paid_date }}</td>
                <td class="px-6 py-4 text-sm text-gray-500">{{ prepay.notes|default:"-" }}</td>
            </tr>
            {% empty %}
            <tr><td colspan="5" class="px-6 py-6 text-center text-gray-500">暂无预付款记录</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div> <div class="flex justify-between items-center">
        <div class="text-sm text-gray-600">第 {{ page_obj.number }} / {{ page_obj.paginator.num_pages }} 页</div>
        <div class="space-x-2">
            {% if page_obj.has_previous %}
            <a href="?page={{ page_obj.previous_page_number }}" class="px-3 py-1 border rounded">上一页</a>
            {% endif %}
            {% if page_obj.has_next %}
            <a href="?page={{ page_obj.next_page_number }}" class="px-3 py-1 border rounded">下一页</a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}