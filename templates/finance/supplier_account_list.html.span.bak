{% extends 'base.html' %}

{% block title %}供应商账款管理 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">往来款项</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">供应商账款</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">供应商账款管理</h3>
            <p class="text-sm text-gray-600 mt-1">管理和跟踪供应商应付账款</p>
        </div>
    </div> <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-theme-100 rounded-lg p-3">
                    <i class="fas fa-file-invoice-dollar text-theme-600 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">应付总额</p>
                    <p class="text-2xl font-bold text-gray-900">¥{{ totals.total_invoice|floatformat:2|default:"0.00" }}
                    </p>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-green-100 rounded-lg p-3">
                    <svg x-data="heroicon('check-circle')" class="text-green-600 text-2xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">已付金额</p>
                    <p class="text-2xl font-bold text-gray-900">¥{{ totals.total_paid|floatformat:2|default:"0.00" }}
                    </p>
                </div>
            </div>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-red-100 rounded-lg p-3">
                    <svg x-data="heroicon('exclamation-circle')" class="text-red-600 text-2xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500">未付余额</p>
                    <p class="text-2xl font-bold text-red-600">¥{{ totals.total_balance|floatformat:2|default:"0.00" }}
                    </p>
                </div>
            </div>
        </div>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="md:col-span-2">
                    <label class="block text-sm font-medium text-gray-700 mb-1">搜索</label>
                    <input type="text" name="search" value="{{ search }}" placeholder="供应商名称、发票号..."
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                </div> <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">状态</label>
                    <select name="status"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-transparent">
                        <option value="">全部状态</option>
                        {% for value, label in status_choices %}
                        <option value="{{ value }}" {% if status == value %}selected{% endif %}>{{ label }}</option>
                        {% endfor %}
                    </select>
                </div> <div class="flex items-end md:col-span-3">
                    <button class="btn btn-primary" type="submit">
                        <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                    </button>
                </div>
            </div>
        </form>
    </div> <!-- Accounts Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h4 class="text-lg font-semibold text-gray-900">
                应付账款列表
                <span class="text-sm font-normal text-gray-600">(共 {{ total_count }} 条记录)</span>
            </h4>
        </div> <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">供应商
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">发票号
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">订单日期
                        </th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">应付金额
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">已付金额
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">未付余额
                        </th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for account in page_obj %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm font-medium text-gray-900">{{ account.supplier.name }}</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-900">
                                {% if account.invoice %}
                                <a href="{% url 'finance:invoice_detail' account.invoice.pk %}"
                                    class="text-theme-600 hover:text-theme-700">
                                    {{ account.invoice.invoice_number }}
                                </a>
                                {% elif account.invoice_number and account.invoice_number|slice:":3" == "INV" %}
                                {{ account.invoice_number }}
                                {% else %}
                                <span class="text-gray-400">-</span>
                                {% endif %}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {% if account.purchase_order %}
                            {{ account.purchase_order.order_date|date:"Y-m-d" }}
                            {% else %}
                            <span class="text-gray-400">-</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="px-2 py-1 text-xs font-semibold rounded
                                {% if account.status == 'pending' %}bg-yellow-100 text-yellow-800
                                {% elif account.status == 'partially_paid' %}bg-theme-100 text-theme-800
                                {% elif account.status == 'paid' %}bg-green-100 text-green-800
                                {% elif account.status == 'overdue' %}bg-red-100 text-red-800
                                {% endif %}">
                                {{ account.get_status_display }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                            ¥{{ account.invoice_amount|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right">
                            ¥{{ account.paid_amount|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right">
                            <span
                                class="font-bold {% if account.balance > 0 %}text-red-600{% else %}text-green-600{% endif %}">
                                ¥{{ account.balance|floatformat:2 }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm space-x-2">
                            <a href="{% url 'finance:supplier_account_detail' account.pk %}"
                                class="text-theme-600 hover:text-theme-700 font-medium">
                                查看详情
                            </a>
                            {% if account.balance > 0 %}
                            <a class="btn btn-primary" href="{% url 'finance:supplier_account_writeoff' account.pk %}">
                                <svg x-data="heroicon('currency-dollar')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>手动核销
                            </a>
                            {% endif %}
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                            <svg x-data="heroicon('inbox')" class="text-4xl text-gray-300 mb-4 mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <p>暂无应付账款记录</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="px-6 py-4 border-t border-gray-200">
            <nav class="flex items-center justify-between">
                <div class="flex-1 flex justify-between sm:hidden">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}&search={{ search }}&status={{ status }}"
                        class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        上一页
                    </a>
                    {% endif %}
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}&search={{ search }}&status={{ status }}"
                        class="ml-3 px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                        下一页
                    </a>
                    {% endif %}
                </div>
                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            显示第
                            <span class="font-medium">{{ page_obj.start_index }}</span>
                            到
                            <span class="font-medium">{{ page_obj.end_index }}</span>
                            条，共
                            <span class="font-medium">{{ total_count }}</span>
                            条记录
                        </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                            {% if page_obj.has_previous %}
                            <a href="?page=1&search={{ search }}&status={{ status }}"
                                class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <i class="fas fa-angle-double-left"></i>
                            </a>
                            <a href="?page={{ page_obj.previous_page_number }}&search={{ search }}&status={{ status }}"
                                class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <svg x-data="heroicon('chevron-left')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            {% endif %} <span
                                class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                                第 {{ page_obj.number }} / {{ page_obj.paginator.num_pages }} 页
                            </span> {% if page_obj.has_next %}
                            <a href="?page={{ page_obj.next_page_number }}&search={{ search }}&status={{ status }}"
                                class="relative inline-flex items-center px-2 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <svg x-data="heroicon('chevron-right')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                            <a href="?page={{ page_obj.paginator.num_pages }}&search={{ search }}&status={{ status }}"
                                class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                <i class="fas fa-angle-double-right"></i>
                            </a>
                            {% endif %}
                        </nav>
                    </div>
                </div>
            </nav>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}