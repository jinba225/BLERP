{% extends 'base.html' %}
{% load erp_filters %}

{% block title %}科目余额表 - {{ report.start_date|date:"Y-m-d" }} 至 {{ report.end_date|date:"Y-m-d" }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">财务管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:report_list' %}" class="text-gray-500 hover:text-gray-700">财务报表</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">科目余额表</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">科目余额表</h3>
            <p class="text-sm text-gray-600">报表期间：{{ report.start_date|date:"Y年m月d日" }} 至 {{ report.end_date|date:"Y年m月d日" }}</p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'finance:report_list' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                <svg x-data="heroicon('queue-list')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>返回列表
            </a>
            <button class="btn btn-primary" onclick="window.print()">
                <svg x-data="heroicon('printer')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>打印
            </button>
        </div>
    </div> <!-- Report Content -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="w-full text-sm">
            <thead class="bg-gray-50 border-b-2 border-gray-300">
                <tr>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase" rowspan="2">科目代码</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase" rowspan="2">科目名称</th>
                    <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase" rowspan="2">类型</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase border-l border-gray-300" colspan="2">期初余额</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase border-l border-gray-300" colspan="2">本期发生额</th>
                    <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase border-l border-gray-300" colspan="2">期末余额</th>
                </tr>
                <tr>
                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase border-l border-gray-300">借方</th>
                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">贷方</th>
                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase border-l border-gray-300">借方</th>
                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">贷方</th>
                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase border-l border-gray-300">借方</th>
                    <th class="px-4 py-2 text-right text-xs font-medium text-gray-500 uppercase">贷方</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {% for item in report.report_data.items %}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-3 text-gray-900">{{ item.code }}</td>
                    <td class="px-4 py-3 text-gray-900">{{ item.name }}</td>
                    <td class="px-4 py-3 text-gray-600 text-xs">{{ item.account_type }}</td>
                    <td class="px-4 py-3 text-right text-gray-900 border-l border-gray-200">
                        {% if item.opening_debit > 0 %}¥{{ item.opening_debit|floatformat:2 }}{% else %}-{% endif %}
                    </td>
                    <td class="px-4 py-3 text-right text-gray-900">
                        {% if item.opening_credit > 0 %}¥{{ item.opening_credit|floatformat:2 }}{% else %}-{% endif %}
                    </td>
                    <td class="px-4 py-3 text-right text-theme-600 border-l border-gray-200">
                        {% if item.debit > 0 %}¥{{ item.debit|floatformat:2 }}{% else %}-{% endif %}
                    </td>
                    <td class="px-4 py-3 text-right text-red-600">
                        {% if item.credit > 0 %}¥{{ item.credit|floatformat:2 }}{% else %}-{% endif %}
                    </td>
                    <td class="px-4 py-3 text-right text-gray-900 font-semibold border-l border-gray-200">
                        {% if item.ending_debit > 0 %}¥{{ item.ending_debit|floatformat:2 }}{% else %}-{% endif %}
                    </td>
                    <td class="px-4 py-3 text-right text-gray-900 font-semibold">
                        {% if item.ending_credit > 0 %}¥{{ item.ending_credit|floatformat:2 }}{% else %}-{% endif %}
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot class="bg-gray-50 border-t-2 border-gray-300">
                <tr class="font-bold">
                    <td class="px-4 py-3 text-gray-900" colspan="3">合计</td>
                    <td class="px-4 py-3 text-right text-gray-900 border-l border-gray-200">
                        ¥{{ report.report_data.totals.opening_debit|floatformat:2 }}
                    </td>
                    <td class="px-4 py-3 text-right text-gray-900">
                        ¥{{ report.report_data.totals.opening_credit|floatformat:2 }}
                    </td>
                    <td class="px-4 py-3 text-right text-theme-700 border-l border-gray-200">
                        ¥{{ report.report_data.totals.debit|floatformat:2 }}
                    </td>
                    <td class="px-4 py-3 text-right text-red-700">
                        ¥{{ report.report_data.totals.credit|floatformat:2 }}
                    </td>
                    <td class="px-4 py-3 text-right text-gray-900 border-l border-gray-200">
                        ¥{{ report.report_data.totals.ending_debit|floatformat:2 }}
                    </td>
                    <td class="px-4 py-3 text-right text-gray-900">
                        ¥{{ report.report_data.totals.ending_credit|floatformat:2 }}
                    </td>
                </tr>
            </tfoot>
        </table>
    </div> <!-- Balance Check -->
    <div class="bg-green-50 border-l-4 border-green-400 p-4">
        <div class="flex">
            <svg x-data="heroicon('check-circle')" class="text-green-400 mt-0.5 mr-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            <div class="text-sm text-green-700">
                <p class="font-semibold">借贷平衡验证</p>
                <div class="grid grid-cols-3 gap-4 mt-2">
                    <div>
                        <span class="text-xs text-green-600">期初借方 = 期初贷方</span><br>
                        <span class="font-mono">{{ report.report_data.totals.opening_debit|floatformat:2 }} = {{ report.report_data.totals.opening_credit|floatformat:2 }}</span>
                    </div>
                    <div>
                        <span class="text-xs text-green-600">本期借方 = 本期贷方</span><br>
                        <span class="font-mono">{{ report.report_data.totals.debit|floatformat:2 }} = {{ report.report_data.totals.credit|floatformat:2 }}</span>
                    </div>
                    <div>
                        <span class="text-xs text-green-600">期末借方 = 期末贷方</span><br>
                        <span class="font-mono">{{ report.report_data.totals.ending_debit|floatformat:2 }} = {{ report.report_data.totals.ending_credit|floatformat:2 }}</span>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- Report Metadata -->
    <div class="bg-white rounded-lg shadow p-6">
        <div class="grid grid-cols-4 gap-4 text-sm">
            <div>
                <span class="text-gray-500">生成时间：</span>
                <span class="text-gray-900">{{ report.generated_at|date:"Y-m-d H:i:s" }}</span>
            </div>
            <div>
                <span class="text-gray-500">生成人：</span>
                <span class="text-gray-900">{% if report.generated_by %}{{ report.generated_by.username }}{% else %}-{% endif %}</span>
            </div>
            <div>
                <span class="text-gray-500">科目数量：</span>
                <span class="text-gray-900">{{ report.report_data.items|length }} 个</span>
            </div>
            <div>
                <span class="text-gray-500">报表ID：</span>
                <span class="text-gray-900">#{{ report.id }}</span>
            </div>
        </div>
    </div>
</div>

<style>
@media print {
    .no-print {
        display: none !important;
    }
    body {
        background: white;
    }
    table {
        font-size: 10pt;
    }
}
</style>
{% endblock %}
