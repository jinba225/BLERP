{% extends 'base.html' %}

{% block title %}{% if is_edit %}编辑费用{% else %}新建费用{% endif %} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">财务管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:expense_list' %}" class="text-gray-500 hover:text-gray-700">费用管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{% if is_edit %}编辑费用{% else %}新建费用{% endif %}</span>
{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">{% if is_edit %}编辑费用{% else %}新建费用{% endif %}</h3>
            {% if expense %}
            <p class="text-sm text-gray-600">费用单号：{{ expense.expense_number }}</p>
            {% endif %}
        </div>
        <a href="{% if expense %}{% url 'finance:expense_detail' expense.pk %}{% else %}{% url 'finance:expense_list' %}{% endif %}"
           class="btn btn-outline">
            <svg x-data="heroicon('arrow-left')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>返回
        </a>
    </div>

    <!-- Form -->
    <form method="post" class="bg-white rounded-lg shadow">
        {% csrf_token %}

        <div class="p-6 space-y-6">
            <!-- 基本信息 -->
            <div>
                <h4 class="text-base font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">
                    <svg x-data="heroicon('information-circle')" class="text-theme-600 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>基本信息
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            费用日期 <span class="text-red-500">*</span>
                        </label>
                        <input type="date" name="expense_date" required
                               value="{% if expense %}{{ expense.expense_date|date:'Y-m-d' }}{% else %}{{ default_date|date:'Y-m-d' }}{% endif %}"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            申请部门
                        </label>
                        <select name="department"
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                            <option value="">-- 请选择 --</option>
                            <!-- TODO: 需要从后端传入部门列表 -->
                        </select>
                    </div>
                </div>
            </div>

            <!-- 费用信息 -->
            <div>
                <h4 class="text-base font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">
                    <svg x-data="heroicon('currency-dollar')" class="text-theme-600 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>费用信息
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            费用类别 <span class="text-red-500">*</span>
                        </label>
                        <select name="category" required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                            <option value="">-- 请选择 --</option>
                            {% for value, label in category_choices %}
                            <option value="{{ value }}" {% if expense and expense.category == value %}selected{% endif %}>{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            费用金额 (¥) <span class="text-red-500">*</span>
                        </label>
                        <input type="number" name="amount" step="0.01" min="0.01" required
                               value="{% if expense %}{{ expense.amount }}{% endif %}"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                               placeholder="0.00">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            支付方式 <span class="text-red-500">*</span>
                        </label>
                        <select name="payment_method" required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                            {% for value, label in payment_method_choices %}
                            <option value="{{ value }}" {% if expense and expense.payment_method == value %}selected{% elif not expense and value == 'personal_advance' %}selected{% endif %}>{{ label }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            费用说明 <span class="text-red-500">*</span>
                        </label>
                        <textarea name="description" required rows="3"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                                  placeholder="详细说明费用用途和明细">{% if expense %}{{ expense.description }}{% endif %}</textarea>
                    </div>
                </div>
            </div>

            <!-- 关联信息 -->
            <div>
                <h4 class="text-base font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">
                    <i class="fas fa-link text-theme-600 mr-2"></i>关联信息 (可选)
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">关联项目</label>
                        <input type="text" name="project"
                               value="{% if expense %}{{ expense.project }}{% endif %}"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                               placeholder="费用关联的项目名称">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">参考单号</label>
                        <input type="text" name="reference_number"
                               value="{% if expense %}{{ expense.reference_number }}{% endif %}"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                               placeholder="关联的其他单据号">
                    </div>
                </div>
            </div>

            <!-- 备注 -->
            <div>
                <h4 class="text-base font-semibold text-gray-900 mb-4 pb-2 border-b border-gray-200">
                    <i class="fas fa-comment text-theme-600 mr-2"></i>备注
                </h4>
                <div>
                    <textarea name="notes" rows="3"
                              class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                              placeholder="备注信息">{% if expense %}{{ expense.notes }}{% endif %}</textarea>
                </div>
            </div>
        </div>

        <!-- Form Actions -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 rounded-b-lg flex justify-end space-x-3">
            <a href="{% if expense %}{% url 'finance:expense_detail' expense.pk %}{% else %}{% url 'finance:expense_list' %}{% endif %}"
               class="btn btn-outline">
                取消
            </a>
            <button type="submit"
                    class="btn btn-primary">
                <svg x-data="heroicon('check')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>{% if is_edit %}保存修改{% else %}保存费用{% endif %}
            </button>
        </div>
    </form>
</div>
{% endblock %}
