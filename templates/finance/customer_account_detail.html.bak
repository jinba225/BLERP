{% extends 'base.html' %}
{% block title %}客户账户详情 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:dashboard' %}" class="text-gray-500 hover:text-gray-700">往来款项</a>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:customer_account_list' %}" class="text-gray-500 hover:text-gray-700">应收账款</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ account.customer.name }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">客户应收账款详情</h3>
            <p class="text-sm text-gray-600 mt-1">{{ account.customer.name }}</p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'finance:customer_account_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <i class="fas fa-arrow-left mr-2"></i>返回列表
            </a>
        </div>
    </div>

    <!-- Account Summary -->
    <div class="bg-white rounded-lg shadow p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div>
                <p class="text-sm text-gray-600 mb-1">客户名称</p>
                <p class="text-lg font-semibold text-gray-900">{{ account.customer.name }}</p>
                {% if account.customer.code %}
                <p class="text-xs text-gray-500 mt-1">编号: {{ account.customer.code }}</p>
                {% endif %}
            </div>
            <div>
                <p class="text-sm text-gray-600 mb-1">发票金额</p>
                <p class="text-2xl font-bold text-theme-600">¥{{ account.invoice_amount|floatformat:2 }}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600 mb-1">已收金额</p>
                <p class="text-2xl font-bold text-green-600">¥{{ account.paid_amount|floatformat:2 }}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600 mb-1">应收余额</p>
                <p class="text-2xl font-bold text-red-600">¥{{ account.balance|floatformat:2 }}</p>
            </div>
        </div>

        <div class="mt-6 pt-6 border-t border-gray-200 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <p class="text-sm text-gray-600 mb-1">发票日期</p>
                <p class="text-sm font-semibold text-gray-900">{{ account.invoice_date }}</p>
            </div>
            <div>
                <p class="text-sm text-gray-600 mb-1">到期日期</p>
                <p class="text-sm font-semibold text-gray-900">{{ account.due_date }}</p>
                {% if account.due_date < today and account.balance > 0 %}
                <p class="text-xs text-red-500 mt-1">
                    <i class="fas fa-exclamation-triangle mr-1"></i>已逾期
                </p>
                {% endif %}
            </div>
            <div>
                <p class="text-sm text-gray-600 mb-1">账户状态</p>
                <div class="mt-1">
                    {% if account.status == 'pending' %}
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">待收款</span>
                    {% elif account.status == 'partial' %}
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-theme-100 text-theme-800">部分收款</span>
                    {% elif account.status == 'paid' %}
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-green-100 text-green-800">已结清</span>
                    {% elif account.status == 'overdue' %}
                    <span class="px-3 py-1 text-sm font-semibold rounded-full bg-red-100 text-red-800">逾期</span>
                    {% endif %}
                </div>
            </div>
        </div>

        {% if account.sales_order %}
        <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-2">关联销售订单</p>
            <a href="{% url 'sales:order_detail' account.sales_order.pk %}" class="inline-flex items-center text-theme-600 hover:text-theme-700">
                <span class="font-semibold">{{ account.sales_order.order_number }}</span>
                <i class="fas fa-external-link-alt ml-2 text-xs"></i>
            </a>
        </div>
        {% endif %}

        {% if account.invoice_number %}
        <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-2">发票号码</p>
            <p class="text-sm font-semibold text-gray-900">{{ account.invoice_number }}</p>
        </div>
        {% endif %}

        {% if account.notes %}
        <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-sm text-gray-600 mb-2">备注</p>
            <p class="text-sm text-gray-700">{{ account.notes }}</p>
        </div>
        {% endif %}
    </div>

    <!-- Payment Records -->
    {% if payments %}
    <div class="bg-white rounded-lg shadow">
        <div class="px-6 py-4 border-b border-gray-200">
            <h4 class="text-md font-semibold text-gray-900">
                <i class="fas fa-list text-theme-600 mr-2"></i>收款记录
            </h4>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">收款单号</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">付款方式</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">收款金额</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">状态</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for payment in payments %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ payment.payment_date }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <a href="{% url 'finance:payment_receipt_detail' payment.pk %}" class="font-medium text-theme-600 hover:text-theme-700">
                                {{ payment.payment_number }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            {{ payment.get_payment_method_display }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-semibold text-green-600">
                            ¥{{ payment.amount|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            {% if payment.status == 'pending' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">待处理</span>
                            {% elif payment.status == 'completed' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">已完成</span>
                            {% elif payment.status == 'cancelled' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">已取消</span>
                            {% elif payment.status == 'failed' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">失败</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                            <a href="{% url 'finance:payment_receipt_detail' payment.pk %}" class="text-theme-600 hover:text-theme-700">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% else %}
    <div class="bg-white rounded-lg shadow p-12 text-center">
        <i class="fas fa-inbox text-gray-300 text-5xl mb-4"></i>
        <p class="text-gray-500">暂无收款记录</p>
    </div>
    {% endif %}

    <!-- Timeline -->
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-md font-semibold text-gray-900 mb-4">
            <i class="fas fa-history text-theme-600 mr-2"></i>操作记录
        </h4>
        <div class="space-y-4">
            <div class="flex items-start">
                <div class="flex-shrink-0 w-24 text-sm text-gray-600">创建</div>
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">{{ account.created_by.username }}</p>
                    <p class="text-xs text-gray-500">{{ account.created_at|date:"Y-m-d H:i" }}</p>
                </div>
            </div>
            {% if account.updated_by and account.updated_at != account.created_at %}
            <div class="flex items-start">
                <div class="flex-shrink-0 w-24 text-sm text-gray-600">最后更新</div>
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">{{ account.updated_by.username }}</p>
                    <p class="text-xs text-gray-500">{{ account.updated_at|date:"Y-m-d H:i" }}</p>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
