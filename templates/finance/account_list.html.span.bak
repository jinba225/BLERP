{% extends 'base.html' %}
{% block title %}会计科目 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:dashboard' %}" class="text-gray-500 hover:text-gray-700">财务管理</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">会计科目</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">会计科目</h3>
            <p class="text-sm text-gray-600 mt-1">科目体系管理</p>
        </div>
        <div class="flex space-x-2">
            <button onclick="window.print()" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <svg x-data="heroicon('printer')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>打印
            </button>
        </div>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="flex flex-wrap gap-4">
            <div class="flex-1 min-w-[200px]">
                <input type="text" name="search" value="{{ search }}" placeholder="搜索科目编号、名称..."
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
            </div>
            <div class="w-48">
                <select name="account_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部类型</option>
                    <option value="asset" {% if account_type == 'asset' %}selected{% endif %}>资产</option>
                    <option value="liability" {% if account_type == 'liability' %}selected{% endif %}>负债</option>
                    <option value="equity" {% if account_type == 'equity' %}selected{% endif %}>所有者权益</option>
                    <option value="revenue" {% if account_type == 'revenue' %}selected{% endif %}>收入</option>
                    <option value="expense" {% if account_type == 'expense' %}selected{% endif %}>费用</option>
                </select>
            </div>
            <div class="w-48">
                <select name="is_active" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                    <option value="">全部状态</option>
                    <option value="true" {% if is_active == 'true' %}selected{% endif %}>启用</option>
                    <option value="false" {% if is_active == 'false' %}selected{% endif %}>停用</option>
                </select>
            </div>
            <button class="btn btn-primary" type="submit">
                <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
            </button>
            {% if search or account_type or is_active %}
            <a href="{% url 'finance:account_list' %}" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <svg x-data="heroicon('x-mark')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>清空
            </a>
            {% endif %}
        </form>
    </div> <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">资产类科目</p>
            <p class="text-2xl font-bold text-theme-600 mt-2">{{ stats.asset_count|default:0 }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">负债类科目</p>
            <p class="text-2xl font-bold text-red-600 mt-2">{{ stats.liability_count|default:0 }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">权益类科目</p>
            <p class="text-2xl font-bold text-green-600 mt-2">{{ stats.equity_count|default:0 }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">收入类科目</p>
            <p class="text-2xl font-bold text-purple-600 mt-2">{{ stats.revenue_count|default:0 }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">费用类科目</p>
            <p class="text-2xl font-bold text-yellow-600 mt-2">{{ stats.expense_count|default:0 }}</p>
        </div>
    </div> <!-- Accounts List -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">科目编号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">科目名称</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">科目类型</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">上级科目</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">余额方向</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">当前余额</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for account in page_obj %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="text-sm font-mono font-semibold text-gray-900">{{ account.code }}</span>
                        </td>
                        <td class="px-6 py-4">
                            <a href="{% url 'finance:account_detail' account.pk %}" class="text-sm font-medium text-theme-600 hover:text-theme-700">
                                {{ account.name }}
                            </a>
                            {% if account.description %}
                            <p class="text-xs text-gray-500 mt-1">{{ account.description|truncatewords:10 }}</p>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if account.account_type == 'asset' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-theme-100 text-theme-800">资产</span>
                            {% elif account.account_type == 'liability' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">负债</span>
                            {% elif account.account_type == 'equity' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">权益</span>
                            {% elif account.account_type == 'revenue' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800">收入</span>
                            {% elif account.account_type == 'expense' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">费用</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {% if account.parent %}
                            <a href="{% url 'finance:account_detail' account.parent.pk %}" class="text-theme-600 hover:text-theme-700">
                                {{ account.parent.code }} {{ account.parent.name }}
                            </a>
                            {% else %}
                            <span class="text-gray-400">-</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-900">
                            {% if account.balance_side == 'debit' %}
                            <svg x-data="heroicon('arrow-left')" class="text-theme-600 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>借
                            {% else %}
                            <svg x-data="heroicon('arrow-right')" class="text-red-600 mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>贷
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-semibold text-gray-900">
                            ¥{{ account.balance|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            {% if account.is_active %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                <svg x-data="heroicon('check-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>启用
                            </span>
                            {% else %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                                <i class="fas fa-ban mr-1"></i>停用
                            </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                            <a href="{% url 'finance:account_detail' account.pk %}" class="text-theme-600 hover:text-theme-700">
                                <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center">
                            <svg x-data="heroicon('inbox')" class="text-gray-300 text-5xl mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <p class="text-gray-500">暂无会计科目数据</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-700">
                显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ total_count }} 条
            </div>
            <div class="flex space-x-2">
                {% if page_obj.has_previous %}
                <a href="?page=1{% if search %}&search={{ search }}{% endif %}{% if account_type %}&account_type={{ account_type }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">首页</a>
                <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if account_type %}&account_type={{ account_type }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">上一页</a>
                {% endif %} <span class="px-3 py-2 border border-theme-500 bg-theme-50 text-theme-700 rounded-lg">
                    第 {{ page_obj.number }} 页
                </span> {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if account_type %}&account_type={{ account_type }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">下一页</a>
                <a href="?page={{ page_obj.paginator.num_pages }}{% if search %}&search={{ search }}{% endif %}{% if account_type %}&account_type={{ account_type }}{% endif %}{% if is_active %}&is_active={{ is_active }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">末页</a>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
