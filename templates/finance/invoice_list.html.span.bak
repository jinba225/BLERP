{% extends 'base.html' %}

{% block title %}发票列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">财务管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">发票管理</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">发票列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'finance:invoice_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建发票
        </a>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                       placeholder="发票号、发票代码...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">发票类型</label>
                <select name="invoice_type"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                    <option value="">全部</option>
                    {% for value, label in invoice_type_choices %}
                    <option value="{{ value }}" {% if invoice_type == value %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">发票状态</label>
                <select name="status"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                    <option value="">全部</option>
                    {% for value, label in status_choices %}
                    <option value="{{ value }}" {% if status == value %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label>
                <input type="date" name="date_from" value="{{ date_from }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">结束日期</label>
                <input type="date" name="date_to" value="{{ date_to }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <!-- Statistics -->
    {% if totals %}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">不含税金额合计</div>
            <div class="text-2xl font-bold text-gray-900">¥{{ totals.total_excluding_tax|floatformat:2|default:"0.00" }}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">税额合计</div>
            <div class="text-2xl font-bold text-gray-900">¥{{ totals.total_tax|floatformat:2|default:"0.00" }}</div>
        </div>
        <div class="bg-white rounded-lg shadow p-6">
            <div class="text-sm font-medium text-gray-500 mb-2">价税合计</div>
            <div class="text-2xl font-bold text-theme-600">¥{{ totals.total_amount|floatformat:2|default:"0.00" }}</div>
        </div>
    </div>
    {% endif %} <!-- Invoices Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">发票号码</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">类型</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">客户/供应商</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">开票日期</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">价税合计</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for invoice in page_obj %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <a href="{% url 'finance:invoice_detail' invoice.pk %}" class="text-theme-600 hover:text-theme-700">
                            {{ invoice.invoice_number }}
                        </a>
                        {% if invoice.invoice_code %}
                        <div class="text-xs text-gray-500">{{ invoice.invoice_code }}</div>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {% if invoice.invoice_type == 'purchase' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-theme-100 text-theme-800">
                            <svg x-data="heroicon('shopping-cart')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>采购发票
                        </span>
                        {% else %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <i class="fas fa-file-invoice-dollar mr-1"></i>销售发票
                        </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {% if invoice.invoice_type == 'purchase' %}
                            {{ invoice.supplier.name|default:"-" }}
                        {% else %}
                            {{ invoice.customer.name|default:"-" }}
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ invoice.invoice_date|date:"Y-m-d" }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 text-right font-medium">
                        ¥{{ invoice.total_amount|floatformat:2 }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if invoice.status == 'draft' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            草稿
                        </span>
                        {% elif invoice.status == 'issued' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-theme-100 text-theme-800">
                            已开具
                        </span>
                        {% elif invoice.status == 'received' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            已收到
                        </span>
                        {% elif invoice.status == 'verified' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            已认证
                        </span>
                        {% elif invoice.status == 'cancelled' %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                            已作废
                        </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'finance:invoice_detail' invoice.pk %}"
                           class="text-theme-600 hover:text-theme-700 mr-3">
                            <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% if invoice.status == 'draft' %}
                        <a href="{% url 'finance:invoice_edit' invoice.pk %}"
                           class="text-yellow-600 hover:text-yellow-700 mr-3">
                            <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        <a href="{% url 'finance:invoice_delete' invoice.pk %}"
                           class="text-red-600 hover:text-red-700">
                            <svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        </a>
                        {% endif %}
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="7" class="px-6 py-12 text-center text-sm text-gray-500">
                        <svg x-data="heroicon('inbox')" class="text-4xl mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p>暂无发票记录</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div> <!-- Pagination -->
    {% if page_obj.has_other_pages %}
    <div class="flex items-center justify-between bg-white px-6 py-4 rounded-lg shadow">
        <div class="text-sm text-gray-700">
            显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到
            <span class="font-medium">{{ page_obj.end_index }}</span> 条，
            共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
        </div>
        <div class="flex space-x-2">
            {% if page_obj.has_previous %}
            <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if invoice_type %}&invoice_type={{ invoice_type }}{% endif %}{% if status %}&status={{ status }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
               class="px-3 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50">
                上一页
            </a>
            {% endif %}
            <span class="px-3 py-2 bg-theme-50 border border-theme-200 rounded-lg text-sm font-medium text-theme-600">
                {{ page_obj.number }}
            </span>
            {% if page_obj.has_next %}
            <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if invoice_type %}&invoice_type={{ invoice_type }}{% endif %}{% if status %}&status={{ status }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
               class="px-3 py-2 bg-white border border-gray-300 rounded-lg text-sm font-medium text-gray-700 hover:bg-gray-50">
                下一页
            </a>
            {% endif %}
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
