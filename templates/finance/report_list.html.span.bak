{% extends 'base.html' %}

{% block title %}财务报表列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
</svg>
<span class="text-gray-500">往来款项</span>
<svg class="w-4 h-4 text-gray-400 mx-2" fill="currentColor" viewBox="0 0 20 20">
    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
</svg>
<span class="text-gray-500">财务报表</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">财务报表列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'finance:report_generator' %}">
            <svg x-data="heroicon('chart-bar')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>生成报表
        </a>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                       placeholder="搜索备注...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">报表类型</label>
                <select name="report_type"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                    <option value="">全部</option>
                    {% for value, label in report_type_choices %}
                    <option value="{{ value }}" {% if report_type == value %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label>
                <input type="date" name="date_from" value="{{ date_from }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">结束日期</label>
                <input type="date" name="date_to" value="{{ date_to }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <!-- Reports Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报表类型</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报表日期</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">期间</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">摘要信息</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">生成人</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">生成时间</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for report in page_obj %}
                <tr class="hover:bg-gray-50 cursor-pointer" onclick="window.location='{% url 'finance:report_detail' report.pk %}'">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <svg x-data="heroicon('document')" class="text-theme-600 mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <span class="text-sm font-medium text-gray-900">{{ report.get_report_type_display }}</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ report.report_date|date:"Y-m-d" }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                        {% if report.start_date and report.end_date %}
                        {{ report.start_date|date:"Y-m-d" }} ~ {{ report.end_date|date:"Y-m-d" }}
                        {% else %}
                        -
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        {% if report.report_type == 'balance_sheet' %}
                            资产：<span class="font-semibold">¥{{ report.total_assets|floatformat:2 }}</span>
                        {% elif report.report_type == 'income_statement' %}
                            净利润：<span class="font-semibold {% if report.net_profit >= 0 %}text-green-600{% else %}text-red-600{% endif %}">¥{{ report.net_profit|floatformat:2 }}</span>
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                        {% if report.generated_by %}{{ report.generated_by.username }}{% else %}-{% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                        {{ report.generated_at|date:"Y-m-d H:i" }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'finance:report_detail' report.pk %}"
                           class="text-theme-600 hover:text-theme-900 mr-3"
                           onclick="event.stopPropagation()">
                            查看详情
                        </a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="7" class="px-6 py-12 text-center">
                        <div class="flex flex-col items-center">
                            <svg x-data="heroicon('inbox')" class="text-gray-300 text-5xl mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <p class="text-gray-500 text-sm">暂无报表记录</p>
                            <a class="btn btn-primary" href="{% url 'finance:report_generator' %}">
                                生成第一份报表
                            </a>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div> <!-- Pagination -->
    {% if page_obj.has_other_pages %}
    <div class="bg-white rounded-lg shadow p-4">
        <div class="flex items-center justify-between">
            <div class="text-sm text-gray-700">
                显示第 <span class="font-semibold">{{ page_obj.start_index }}</span> 到
                <span class="font-semibold">{{ page_obj.end_index }}</span> 条，
                共 <span class="font-semibold">{{ page_obj.paginator.count }}</span> 条
            </div>
            <div class="flex space-x-2">
                {% if page_obj.has_previous %}
                <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if report_type %}&report_type={{ report_type }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-gray-700 hover:bg-gray-50">
                    上一页
                </a>
                {% endif %}
                <span class="px-3 py-2 border border-gray-300 rounded-lg text-sm bg-gray-50">
                    第 {{ page_obj.number }} / {{ page_obj.paginator.num_pages }} 页
                </span>
                {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if report_type %}&report_type={{ report_type }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 rounded-lg text-sm text-gray-700 hover:bg-gray-50">
                    下一页
                </a>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
