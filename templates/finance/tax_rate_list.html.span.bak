{% extends 'base.html' %}

{% block title %}税率设置 - BetterLaser ERP{% endblock %}
{% block page_title %}税率设置{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">基础设置</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">税率设置</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">税率列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'finance:tax_rate_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建税率
        </a>
    </div> <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500"
                       placeholder="税率名称、代码...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">税种</label>
                <select name="tax_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="">全部</option>
                    {% for type_value, type_label in tax_types %}
                    <option value="{{ type_value }}" {% if tax_type == type_value %}selected{% endif %}>{{ type_label }}</option>
                    {% endfor %}
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="is_active" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
                    <option value="">全部</option>
                    <option value="true" {% if is_active == 'true' %}selected{% endif %}>启用</option>
                    <option value="false" {% if is_active == 'false' %}selected{% endif %}>停用</option>
                </select>
            </div>
            <div class="flex items-end md:col-span-3">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
                <a href="{% url 'finance:tax_rate_list' %}" class="ml-2 px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    <svg x-data="heroicon('arrow-path')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>重置
                </a>
            </div>
        </form>
    </div> <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">税率代码</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">税率名称</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">税种</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">税率</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase">默认</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for tax_rate in page_obj %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{ tax_rate.code }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ tax_rate.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ tax_rate.get_tax_type_display }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium text-theme-600">{{ tax_rate.rate_percent }}%</td>
                    <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                        {% if tax_rate.is_default %}
                        <span class="px-2 py-1 text-xs font-semibold rounded bg-theme-100 text-theme-800">
                            <svg x-data="heroicon('star')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>默认
                        </span>
                        {% else %}
                        <span class="text-gray-400">-</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if tax_rate.is_active %}bg-green-100 text-green-800{% else %}bg-gray-100 text-gray-800{% endif %}">
                            {% if tax_rate.is_active %}启用{% else %}停用{% endif %}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'finance:tax_rate_detail' tax_rate.pk %}" class="text-theme-600 hover:text-theme-700 mr-3"><svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                        <a href="{% url 'finance:tax_rate_update' tax_rate.pk %}" class="text-green-600 hover:text-green-900 mr-3"><svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                        <a href="{% url 'finance:tax_rate_delete' tax_rate.pk %}" class="text-red-600 hover:text-red-900"><svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg></a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                        <svg x-data="heroicon('inbox')" class="text-4xl mb-3" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p>暂无税率数据</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到
                    <span class="font-medium">{{ page_obj.end_index }}</span> 条，
                    共 <span class="font-medium">{{ total_count }}</span> 条记录
                </div>
                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}&search={{ search }}&tax_type={{ tax_type }}&is_active={{ is_active }}"
                       class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <svg x-data="heroicon('chevron-left')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </a>
                    {% endif %} {% for num in page_obj.paginator.page_range %}
                    {% if page_obj.number == num %}
                    <span class="relative inline-flex items-center px-4 py-2 border border-theme-500 bg-theme-50 text-sm font-medium text-theme-600">
                        {{ num }}
                    </span>
                    {% elif num > page_obj.number|add:'-3' and num < page_obj.number|add:'3' %}
                    <a href="?page={{ num }}&search={{ search }}&tax_type={{ tax_type }}&is_active={{ is_active }}"
                       class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        {{ num }}
                    </a>
                    {% endif %}
                    {% endfor %} {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}&search={{ search }}&tax_type={{ tax_type }}&is_active={{ is_active }}"
                       class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                        <svg x-data="heroicon('chevron-right')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </a>
                    {% endif %}
                </nav>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
