{% extends 'base.html' %}
{% block title %}收付款查询 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'finance:dashboard' %}" class="text-gray-500 hover:text-gray-700">往来款项</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">收付款查询</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">收付款查询</h3>
            <p class="text-sm text-gray-600 mt-1">统一查询所有收款和付款记录</p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'finance:payment_receipt_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <i class="fas fa-hand-holding-usd mr-2"></i>收款单
            </a>
            <a href="{% url 'finance:payment_payment_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                <svg x-data="heroicon('currency-dollar')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>付款单
            </a>
        </div>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-4">
        <form method="get" class="space-y-4">
            <div class="flex flex-wrap gap-4">
                <div class="flex-1 min-w-[200px]">
                    <input type="text" name="search" value="{{ search }}" placeholder="搜索单号、参考号..."
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                </div>
                <div class="w-48">
                    <select name="payment_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">全部类型</option>
                        <option value="receipt" {% if payment_type == 'receipt' %}selected{% endif %}>收款</option>
                        <option value="payment" {% if payment_type == 'payment' %}selected{% endif %}>付款</option>
                    </select>
                </div>
                <div class="w-48">
                    <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">全部状态</option>
                        <option value="draft" {% if status == 'draft' %}selected{% endif %}>草稿</option>
                        <option value="confirmed" {% if status == 'confirmed' %}selected{% endif %}>已确认</option>
                        <option value="cancelled" {% if status == 'cancelled' %}selected{% endif %}>已取消</option>
                    </select>
                </div>
                <div class="w-48">
                    <select name="payment_method" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                        <option value="">全部方式</option>
                        <option value="cash" {% if payment_method == 'cash' %}selected{% endif %}>现金</option>
                        <option value="bank_transfer" {% if payment_method == 'bank_transfer' %}selected{% endif %}>银行转账</option>
                        <option value="check" {% if payment_method == 'check' %}selected{% endif %}>支票</option>
                        <option value="credit_card" {% if payment_method == 'credit_card' %}selected{% endif %}>信用卡</option>
                        <option value="other" {% if payment_method == 'other' %}selected{% endif %}>其他</option>
                    </select>
                </div>
            </div>
            <div class="flex flex-wrap gap-4 items-end">
                <div class="flex-1 min-w-[150px]">
                    <label class="block text-sm font-medium text-gray-700 mb-1">开始日期</label>
                    <input type="date" name="date_from" value="{{ date_from }}"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                </div>
                <div class="flex-1 min-w-[150px]">
                    <label class="block text-sm font-medium text-gray-700 mb-1">结束日期</label>
                    <input type="date" name="date_to" value="{{ date_to }}"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500">
                </div>
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
                {% if search or payment_type or status or payment_method or date_from or date_to %}
                <a href="{% url 'finance:payment_list' %}" class="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">
                    <svg x-data="heroicon('x-mark')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>清空
                </a>
                {% endif %}
            </div>
        </form>
    </div> <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">记录总数</p>
            <p class="text-2xl font-bold text-gray-900 mt-2">{{ total_count }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">收款总额</p>
            <p class="text-2xl font-bold text-green-600 mt-2">¥{{ totals.receipt_amount|floatformat:2|default:"0.00" }}</p>
        </div>
        <div class="bg-white rounded-lg shadow p-4">
            <p class="text-sm text-gray-600">付款总额</p>
            <p class="text-2xl font-bold text-red-600 mt-2">¥{{ totals.payment_amount|floatformat:2|default:"0.00" }}</p>
        </div>
    </div> <!-- Payments List -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">单号</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">类型</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">对方单位</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">付款方式</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">金额</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">处理人</th>
                        <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for payment in page_obj %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            {{ payment.payment_date }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <a href="{% url 'finance:payment_detail' payment.pk %}" class="text-sm font-medium text-theme-600 hover:text-theme-700">
                                {{ payment.payment_number }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            {% if payment.payment_type == 'receipt' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                <i class="fas fa-arrow-down mr-1"></i>收款
                            </span>
                            {% else %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-theme-100 text-theme-800">
                                <svg x-data="heroicon('arrow-up')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>付款
                            </span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {% if payment.customer %}
                            <a href="{% url 'customers:customer_detail' payment.customer.pk %}" class="text-theme-600 hover:text-theme-700">
                                {{ payment.customer.name }}
                            </a>
                            {% elif payment.supplier %}
                            <a href="{% url 'suppliers:supplier_detail' payment.supplier.pk %}" class="text-theme-600 hover:text-theme-700">
                                {{ payment.supplier.name }}
                            </a>
                            {% else %}
                            <span class="text-gray-400">-</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            {{ payment.get_payment_method_display }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-semibold">
                            {% if payment.payment_type == 'receipt' %}
                            <span class="text-green-600">+¥{{ payment.amount|floatformat:2 }}</span>
                            {% else %}
                            <span class="text-red-600">-¥{{ payment.amount|floatformat:2 }}</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center">
                            {% if payment.status == 'draft' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">草稿</span>
                            {% elif payment.status == 'confirmed' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">已确认</span>
                            {% elif payment.status == 'cancelled' %}
                            <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">已取消</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm text-gray-500">
                            {% if payment.processed_by %}
                            {{ payment.processed_by.username }}
                            {% else %}
                            <span class="text-gray-400">-</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-center text-sm">
                            <a href="{% url 'finance:payment_detail' payment.pk %}" class="text-theme-600 hover:text-theme-700">
                                <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            </a>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="9" class="px-6 py-12 text-center">
                            <svg x-data="heroicon('inbox')" class="text-gray-300 text-5xl mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <p class="text-gray-500">暂无收付款数据</p>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-gray-50 px-6 py-4 border-t border-gray-200 flex items-center justify-between">
            <div class="text-sm text-gray-700">
                显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ total_count }} 条
            </div>
            <div class="flex space-x-2">
                {% if page_obj.has_previous %}
                <a href="?page=1{% if search %}&search={{ search }}{% endif %}{% if payment_type %}&payment_type={{ payment_type }}{% endif %}{% if status %}&status={{ status }}{% endif %}{% if payment_method %}&payment_method={{ payment_method }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">首页</a>
                <a href="?page={{ page_obj.previous_page_number }}{% if search %}&search={{ search }}{% endif %}{% if payment_type %}&payment_type={{ payment_type }}{% endif %}{% if status %}&status={{ status }}{% endif %}{% if payment_method %}&payment_method={{ payment_method }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">上一页</a>
                {% endif %} <span class="px-3 py-2 border border-theme-500 bg-theme-50 text-theme-700 rounded-lg">
                    第 {{ page_obj.number }} 页
                </span> {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}{% if search %}&search={{ search }}{% endif %}{% if payment_type %}&payment_type={{ payment_type }}{% endif %}{% if status %}&status={{ status }}{% endif %}{% if payment_method %}&payment_method={{ payment_method }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">下一页</a>
                <a href="?page={{ page_obj.paginator.num_pages }}{% if search %}&search={{ search }}{% endif %}{% if payment_type %}&payment_type={{ payment_type }}{% endif %}{% if status %}&status={{ status }}{% endif %}{% if payment_method %}&payment_method={{ payment_method }}{% endif %}{% if date_from %}&date_from={{ date_from }}{% endif %}{% if date_to %}&date_to={{ date_to }}{% endif %}"
                   class="px-3 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">末页</a>
                {% endif %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
