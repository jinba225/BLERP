{% extends 'base.html' %}

{% block title %}仪表盘 - BetterLaser ERP 系统{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">仪表盘</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">仪表盘</h1>
            <p class="text-gray-600">欢迎回来，{{ user.get_full_name|default:user.username }}</p>
        </div>
        <div class="flex items-center space-x-3">
            <span class="text-sm text-gray-500">{{ "now"|date:"Y年m月d日 H:i" }}</span>
            <button class="btn btn-primary">
                <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                快速操作
            </button>
        </div>
    </div> <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Sales Card -->
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-theme-500">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-theme-100 rounded-lg flex items-center justify-center">
                        <svg x-data="heroicon('shopping-cart')" class="text-theme-600 text-xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">本月销售额</p>
                    <p class="text-2xl font-bold text-gray-900">¥{{ current_month_sales|floatformat:0|default:"0" }}</p>
                    <p class="text-sm text-green-600 mt-1">
                        <svg x-data="heroicon('arrow-up')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        较上月增长 12.5%
                    </p>
                </div>
            </div>
        </div> <!-- Orders Card -->
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                        <svg x-data="heroicon('document')" class="text-green-600 text-xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">待处理订单</p>
                    <p class="text-2xl font-bold text-gray-900">{{ pending_orders|default:"0" }}</p>
                    <p class="text-sm text-theme-600 mt-1">
                        <svg x-data="heroicon('clock')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        需要及时处理
                    </p>
                </div>
            </div>
        </div> <!-- Inventory Card -->
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-yellow-500">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                        <svg x-data="heroicon('building')" class="text-yellow-600 text-xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">库存预警</p>
                    <p class="text-2xl font-bold text-gray-900">{{ low_stock_items|default:"0" }}</p>
                    <p class="text-sm text-yellow-600 mt-1">
                        <svg x-data="heroicon('exclamation-triangle')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        需要补货
                    </p>
                </div>
            </div>
        </div> <!-- Customers Card -->
        <div class="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                        <svg x-data="heroicon('users')" class="text-purple-600 text-xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                </div>
                <div class="ml-4 flex-1">
                    <p class="text-sm font-medium text-gray-600">新增客户</p>
                    <p class="text-2xl font-bold text-gray-900">{{ new_customers|default:"0" }}</p>
                    <p class="text-sm text-green-600 mt-1">
                        <svg x-data="heroicon('arrow-up')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        本月新增
                    </p>
                </div>
            </div>
        </div>
    </div> <!-- Charts and Tables -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Sales Chart -->
        <div class="lg:col-span-2 bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-medium text-gray-900">销售趋势</h3>
                    <select class="text-sm border-gray-300 rounded-md focus:ring-theme-500 focus:border-theme-500">
                        <option>最近7天</option>
                        <option>最近30天</option>
                        <option>最近90天</option>
                    </select>
                </div>
            </div>
            <div class="p-6">
                <div class="h-64 flex items-center justify-center bg-gray-50 rounded-lg border-2 border-dashed border-gray-300">
                    <div class="text-center">
                        <svg x-data="heroicon('chart-bar')" class="text-4xl text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p class="text-gray-500">销售趋势图表</p>
                        <p class="text-sm text-gray-400">图表数据加载中...</p>
                    </div>
                </div>
            </div>
        </div> <!-- Recent Orders -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h3 class="text-lg font-medium text-gray-900">最近订单</h3>
                    <a href="#" class="text-sm text-theme-600 hover:text-theme-700 font-medium">查看全部</a>
                </div>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    {% for order in recent_orders %}
                    <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition-colors">
                        <div class="flex-1">
                            <p class="font-medium text-gray-900">{{ order.order_number }}</p>
                            <p class="text-sm text-gray-600">{{ order.customer.name }}</p>
                            <p class="text-xs text-gray-500">{{ order.order_date }}</p>
                        </div>
                        <div class="text-right">
                            <p class="font-medium text-gray-900">¥{{ order.total_amount|floatformat:0 }}</p>
                            {% if order.status == 'confirmed' %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    已确认
                                </span>
                            {% elif order.status == 'pending' %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                    待审核
                                </span>
                            {% elif order.status == 'in_production' %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-theme-100 text-theme-800">
                                    生产中
                                </span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    {{ order.get_status_display }}
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    {% empty %}
                    <div class="text-center py-8">
                        <svg x-data="heroicon('inbox')" class="text-4xl text-gray-300 mb-4" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p class="text-gray-500">暂无最近订单</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div> <!-- Quick Actions -->
    <div class="bg-white rounded-lg shadow">
        <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">快速操作</h3>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
                <a href="#" class="group flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-theme-50 hover:border-theme-200 border-2 border-transparent transition-all duration-200">
                    <div class="w-12 h-12 bg-theme-100 rounded-lg flex items-center justify-center group-hover:bg-theme-200 transition-colors">
                        <svg x-data="heroicon('plus-circle')" class="text-xl text-theme-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="mt-2 text-sm font-medium text-gray-900 group-hover:text-theme-900">新建订单</span>
                </a> <a href="#" class="group flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-green-50 hover:border-green-200 border-2 border-transparent transition-all duration-200">
                    <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
                        <svg x-data="heroicon('document')" class="text-xl text-green-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="mt-2 text-sm font-medium text-gray-900 group-hover:text-green-900">创建报价</span>
                </a> <a href="#" class="group flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-purple-50 hover:border-purple-200 border-2 border-transparent transition-all duration-200">
                    <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                        <svg x-data="heroicon('shopping-cart')" class="text-xl text-purple-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="mt-2 text-sm font-medium text-gray-900 group-hover:text-purple-900">采购申请</span>
                </a> <a href="#" class="group flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-orange-50 hover:border-orange-200 border-2 border-transparent transition-all duration-200">
                    <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-200 transition-colors">
                        <svg x-data="heroicon('inbox')" class="text-xl text-orange-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="mt-2 text-sm font-medium text-gray-900 group-hover:text-orange-900">入库单</span>
                </a> <a href="#" class="group flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-red-50 hover:border-red-200 border-2 border-transparent transition-all duration-200">
                    <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center group-hover:bg-red-200 transition-colors">
                        <i class="fas fa-truck text-xl text-red-600"></i>
                    </div>
                    <span class="mt-2 text-sm font-medium text-gray-900 group-hover:text-red-900">出库单</span>
                </a> <a href="#" class="group flex flex-col items-center p-4 bg-gray-50 rounded-lg hover:bg-indigo-50 hover:border-indigo-200 border-2 border-transparent transition-all duration-200">
                    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center group-hover:bg-indigo-200 transition-colors">
                        <svg x-data="heroicon('chart-bar')" class="text-xl text-indigo-600" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                    </div>
                    <span class="mt-2 text-sm font-medium text-gray-900 group-hover:text-indigo-900">查看报表</span>
                </a>
            </div>
        </div>
    </div> <!-- System Status -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- System Health -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">系统状态</h3>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">数据库连接</span>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <svg x-data="heroicon('check-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            正常
                        </span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">缓存服务</span>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <svg x-data="heroicon('check-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            正常
                        </span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-600">任务队列</span>
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                            <svg x-data="heroicon('check-circle')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            正常
                        </span>
                    </div>
                </div>
            </div>
        </div> <!-- Recent Activities -->
        <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">最近活动</h3>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    <div class="flex items-start space-x-3">
                        <div class="w-2 h-2 bg-theme-500 rounded-full mt-2"></div>
                        <div class="flex-1">
                            <p class="text-sm text-gray-900">新建销售订单 SO-2024-001</p>
                            <p class="text-xs text-gray-500">5分钟前</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                        <div class="flex-1">
                            <p class="text-sm text-gray-900">完成库存盘点</p>
                            <p class="text-xs text-gray-500">1小时前</p>
                        </div>
                    </div>
                    <div class="flex items-start space-x-3">
                        <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2"></div>
                        <div class="flex-1">
                            <p class="text-sm text-gray-900">采购订单待审核</p>
                            <p class="text-xs text-gray-500">2小时前</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}