{% extends 'base.html' %}

{% block title %}{% if is_edit %}编辑{% else %}新建{% endif %}AI模型配置 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">系统设置</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'ai_assistant:model_config_list' %}" class="text-gray-500 hover:text-gray-700">AI模型配置</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{% if is_edit %}编辑配置{% else %}新建配置{% endif %}</span>
{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">
                {% if is_edit %}
                <i class="fas fa-edit text-theme-600 mr-2"></i>编辑AI模型配置
                {% else %}
                <i class="fas fa-plus text-theme-600 mr-2"></i>新建AI模型配置
                {% endif %}
            </h3>
            <p class="text-sm text-gray-600 mt-1">配置大模型API接入信息</p>
        </div>
        <a href="{% url 'ai_assistant:model_config_list' %}"
           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>返回列表
        </a>
    </div> <!-- Form -->
    <form method="post" class="bg-white rounded-lg shadow">
        {% csrf_token %} <div class="p-6 space-y-6">
            <!-- 基本信息 -->
            <div>
                <h4 class="text-md font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-info-circle text-theme-600 mr-2"></i>基本信息
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            配置名称 <span class="text-red-500">*</span>
                        </label>
                        <input type="text" name="name" value="{% if config %}{{ config.name }}{% endif %}"
                               required
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                               placeholder="例如：生产环境GPT-4">
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            提供商 <span class="text-red-500">*</span>
                        </label>
                        <select name="provider" id="provider" required
                                class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                            <option value="">请选择提供商</option>
                            {% for value, label in provider_choices %}
                            <option value="{{ value }}"
                                    {% if config and config.provider == value %}selected{% endif %}
                                    data-models="{{ model_suggestions|get_item:value|join:',' }}">
                                {{ label }}
                            </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div> <!-- API配置 -->
            <div>
                <h4 class="text-md font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-key text-green-600 mr-2"></i>API配置
                </h4>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            API Key <span class="text-red-500">*</span>
                            {% if is_edit %}
                            <span class="text-xs text-gray-500">(留空则不修改)</span>
                            {% endif %}
                        </label>
                        <div class="relative">
                            <input type="password" name="api_key" id="api_key"
                                   {% if not is_edit %}required{% endif %}
                                   class="w-full px-3 py-2 pr-10 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                                   placeholder="{% if is_edit %}留空则不修改{% else %}输入您的API密钥{% endif %}">
                            <button type="button" id="toggleApiKey"
                                    class="absolute right-3 top-2.5 text-gray-400 hover:text-gray-600">
                                <i class="fas fa-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                        <p class="text-xs text-gray-500 mt-1">
                            <i class="fas fa-lock mr-1"></i>API Key将被加密存储
                        </p>
                        <!-- 百度文心一言特殊说明 -->
                        <div id="baiduKeyHint" class="hidden mt-2 p-3 bg-yellow-50 border border-yellow-200 rounded-lg">
                            <p class="text-xs text-yellow-800">
                                <i class="fas fa-exclamation-triangle mr-1"></i>
                                百度文心一言需要提供格式：<code class="bg-yellow-100 px-1 rounded">API_KEY,SECRET_KEY</code>
                            </p>
                        </div>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            API Base URL <span class="text-gray-500 text-xs">(可选)</span>
                        </label>
                        <input type="url" name="api_base" value="{% if config %}{{ config.api_base }}{% endif %}"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                               placeholder="留空使用默认端点，或输入自定义端点">
                        <p class="text-xs text-gray-500 mt-1">
                            <i class="fas fa-info-circle mr-1"></i>用于自建代理或私有部署
                        </p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            模型名称 <span class="text-red-500">*</span>
                        </label>
                        <input type="text" name="model_name" id="model_name"
                               value="{% if config %}{{ config.model_name }}{% endif %}"
                               required
                               list="modelSuggestions"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                               placeholder="例如：gpt-4">
                        <datalist id="modelSuggestions"></datalist>
                        <p class="text-xs text-gray-500 mt-1" id="modelHint">
                            根据选择的提供商，系统会推荐常用模型
                        </p>
                    </div>
                </div>
            </div> <!-- 模型参数 -->
            <div>
                <h4 class="text-md font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-sliders-h text-purple-600 mr-2"></i>模型参数
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Temperature
                        </label>
                        <input type="number" name="temperature"
                               value="{% if config %}{{ config.temperature }}{% else %}0.7{% endif %}"
                               min="0" max="2" step="0.1"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                        <p class="text-xs text-gray-500 mt-1">0-2，越高越随机</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Max Tokens
                        </label>
                        <input type="number" name="max_tokens"
                               value="{% if config %}{{ config.max_tokens }}{% else %}2000{% endif %}"
                               min="1" max="128000"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                        <p class="text-xs text-gray-500 mt-1">最大输出长度</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Timeout (秒)
                        </label>
                        <input type="number" name="timeout"
                               value="{% if config %}{{ config.timeout }}{% else %}60{% endif %}"
                               min="10" max="300"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                        <p class="text-xs text-gray-500 mt-1">请求超时时间</p>
                    </div>
                </div>
            </div> <!-- 其他设置 -->
            <div>
                <h4 class="text-md font-semibold text-gray-900 mb-4 flex items-center">
                    <i class="fas fa-cog text-gray-600 mr-2"></i>其他设置
                </h4>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            优先级
                        </label>
                        <input type="number" name="priority"
                               value="{% if config %}{{ config.priority }}{% else %}0{% endif %}"
                               min="0" max="100"
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                        <p class="text-xs text-gray-500 mt-1">数字越大优先级越高</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-4">状态</label>
                        <div class="space-y-2">
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="is_active"
                                       {% if not config or config.is_active %}checked{% endif %}
                                       class="w-4 h-4 text-theme-600 border-gray-300 rounded focus:ring-theme-500">
                                <span class="ml-2 text-sm text-gray-700">启用此配置</span>
                            </label>
                            <br>
                            <label class="inline-flex items-center">
                                <input type="checkbox" name="is_default"
                                       {% if config and config.is_default %}checked{% endif %}
                                       class="w-4 h-4 text-theme-600 border-gray-300 rounded focus:ring-theme-500">
                                <span class="ml-2 text-sm text-gray-700">
                                    设为默认配置
                                    <i class="fas fa-star text-yellow-500 ml-1"></i>
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
            </div> <!-- 描述 -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">
                    描述 <span class="text-gray-500 text-xs">(可选)</span>
                </label>
                <textarea name="description" rows="3"
                          class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                          placeholder="配置的用途说明...">{% if config %}{{ config.description }}{% endif %}</textarea>
            </div>
        </div> <!-- Actions -->
        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 rounded-b-lg flex justify-end space-x-3">
            <a href="{% url 'ai_assistant:model_config_list' %}"
               class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition-colors">
                <i class="fas fa-times mr-2"></i>取消
            </a>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-save mr-2"></i>{% if is_edit %}保存修改{% else %}创建配置{% endif %}
            </button>
        </div>
    </form>
</div>

<script>
// Toggle API Key visibility
document.getElementById('toggleApiKey').addEventListener('click', function() {
    const input = document.getElementById('api_key');
    const icon = document.getElementById('eyeIcon');
    if (input.type === 'password') {
        input.type = 'text';
        icon.classList.remove('fa-eye');
        icon.classList.add('fa-eye-slash');
    } else {
        input.type = 'password';
        icon.classList.remove('fa-eye-slash');
        icon.classList.add('fa-eye');
    }
});

// Model suggestions based on provider
const modelSuggestions = {{ model_suggestions|safe }};
const providerSelect = document.getElementById('provider');
const modelInput = document.getElementById('model_name');
const datalist = document.getElementById('modelSuggestions');
const baiduHint = document.getElementById('baiduKeyHint');

providerSelect.addEventListener('change', function() {
    const provider = this.value; // Update model suggestions
    datalist.innerHTML = '';
    if (modelSuggestions[provider]) {
        modelSuggestions[provider].forEach(model => {
            const option = document.createElement('option');
            option.value = model;
            datalist.appendChild(option);
        });
    } // Show/hide Baidu hint
    if (provider === 'baidu') {
        baiduHint.classList.remove('hidden');
    } else {
        baiduHint.classList.add('hidden');
    }
});

// Trigger on page load if editing
if (providerSelect.value) {
    providerSelect.dispatchEvent(new Event('change'));
}
</script>
{% endblock %}
