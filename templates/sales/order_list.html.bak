{% extends 'base.html' %}

{% block title %}销售订单列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">销售管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">销售订单</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">销售订单列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'sales:order_create' %}">
            <i class="fas fa-plus mr-2"></i>新建订单
        </a>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                       placeholder="订单号、客户名称...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">订单状态</label>
                <select name="status"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                    <option value="">全部</option>
                    <option value="draft" {% if status == 'draft' %}selected{% endif %}>草稿</option>
                    <option value="pending" {% if status == 'pending' %}selected{% endif %}>待审核</option>
                    <option value="confirmed" {% if status == 'confirmed' %}selected{% endif %}>已确认</option>
                    <option value="in_production" {% if status == 'in_production' %}selected{% endif %}>生产中</option>
                    <option value="ready_to_ship" {% if status == 'ready_to_ship' %}selected{% endif %}>待发货</option>
                    <option value="shipped" {% if status == 'shipped' %}selected{% endif %}>已发货</option>
                    <option value="delivered" {% if status == 'delivered' %}selected{% endif %}>已交付</option>
                    <option value="completed" {% if status == 'completed' %}selected{% endif %}>已完成</option>
                    <option value="cancelled" {% if status == 'cancelled' %}selected{% endif %}>已取消</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">付款状态</label>
                <select name="payment_status"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                    <option value="">全部</option>
                    <option value="unpaid" {% if payment_status == 'unpaid' %}selected{% endif %}>未付款</option>
                    <option value="partial" {% if payment_status == 'partial' %}selected{% endif %}>部分付款</option>
                    <option value="paid" {% if payment_status == 'paid' %}selected{% endif %}>已付款</option>
                    <option value="overdue" {% if payment_status == 'overdue' %}selected{% endif %}>逾期</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label>
                <input type="date" name="date_from" value="{{ date_from }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">结束日期</label>
                <input type="date" name="date_to" value="{{ date_to }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>搜索
                </button>
            </div>
        </form>
    </div> <!-- Orders Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200" id="ordersTable">
            <colgroup>
                <col data-column="0" />
                <col data-column="1" />
                <col data-column="2" />
                <col data-column="3" />
                <col data-column="4" />
                <col data-column="5" />
                <col data-column="6" />
                <col data-column="7" />
                <col data-column="8" />
                <col data-column="9" />
            </colgroup>
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="0">订单号</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="1">客户名称</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="2">订单日期</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="3">要求交期</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="4">订单金额</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="5">订单状态</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="6">付款状态</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="7">开票状态</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="8">已退货数量</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider" data-column="9">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for order in page_obj %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <a href="{% url 'sales:order_detail' order.pk %}" class="text-theme-600 hover:text-theme-700">
                            {{ order.order_number }}
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ order.customer.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ order.order_date }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {{ order.required_date|default:"-" }}
                        {% if order.is_overdue %}
                            <span class="ml-1 text-xs text-red-600" title="已逾期">
                                <i class="fas fa-exclamation-circle"></i>
                            </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right font-medium text-gray-900">
                        ¥{{ order.total_amount }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if order.status == 'draft' %}bg-gray-100 text-gray-800
                            {% elif order.status == 'pending' %}bg-yellow-100 text-yellow-800
                            {% elif order.status == 'confirmed' %}bg-theme-100 text-theme-800
                            {% elif order.status == 'in_production' %}bg-purple-100 text-purple-800
                            {% elif order.status == 'ready_to_ship' %}bg-indigo-100 text-indigo-800
                            {% elif order.status == 'shipped' %}bg-cyan-100 text-cyan-800
                            {% elif order.status == 'delivered' %}bg-teal-100 text-teal-800
                            {% elif order.status == 'completed' %}bg-green-100 text-green-800
                            {% elif order.status == 'cancelled' %}bg-red-100 text-red-800
                            {% endif %}">
                            {{ order.get_status_display }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if order.payment_status == 'unpaid' %}bg-red-100 text-red-800
                            {% elif order.payment_status == 'paid' %}bg-green-100 text-green-800
                            {% elif order.payment_status == 'partial' %}bg-yellow-100 text-yellow-800
                            {% elif order.payment_status == 'overdue' %}bg-red-100 text-red-800
                            {% endif %}">
                            {{ order.get_payment_status_display }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if order.invoice_status == 'not_invoiced' %}bg-red-100 text-red-800
                            {% elif order.invoice_status == 'invoiced' %}bg-green-100 text-green-800
                            {% elif order.invoice_status == 'partial_invoiced' %}bg-yellow-100 text-yellow-800
                            {% elif order.invoice_status == 'red_flushed' %}bg-red-100 text-red-800
                            {% endif %}">
                            {{ order.get_invoice_status_display }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ order.total_returned_quantity|default:0 }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'sales:order_detail' order.pk %}"
                           class="text-theme-600 hover:text-theme-900 mr-3"
                           title="查看详情">
                            <i class="fas fa-eye"></i>
                        </a>
                        {% if order.status in 'draft,pending' %}
                        <a href="{% url 'sales:order_update' order.pk %}"
                           class="text-green-600 hover:text-green-900"
                           title="编辑">
                            <i class="fas fa-edit"></i>
                        </a>
                        {% endif %}
                        <a href="{% url 'sales:return_create' order.pk %}"
                           class="text-red-600 hover:text-red-900"
                           title="创建退货">
                            <i class="fas fa-undo"></i>
                        </a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="10" class="px-6 py-12 text-center text-gray-500">
                        <i class="fas fa-inbox text-4xl mb-3 block"></i>
                        <p>暂无订单数据</p>
                        <a href="{% url 'sales:order_create' %}" class="text-theme-600 hover:text-theme-700 mt-2 inline-block">
                            <i class="fas fa-plus mr-1"></i>创建第一个订单
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
            <div class="flex-1 flex justify-between sm:hidden">
                {% if page_obj.has_previous %}
                <a href="?page={{ page_obj.previous_page_number }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    上一页
                </a>
                {% else %}
                <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
                    上一页
                </span>
                {% endif %}
                {% if page_obj.has_next %}
                <a href="?page={{ page_obj.next_page_number }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    下一页
                </a>
                {% else %}
                <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
                    下一页
                </span>
                {% endif %}
            </div>
            <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到 <span class="font-medium">{{ page_obj.end_index }}</span> 条，共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                    </p>
                </div>
                <div>
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">
                        {% if page_obj.has_previous %}
                        <a href="?page={{ page_obj.previous_page_number }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                        {% endif %} {% for num in page_obj.paginator.page_range %}
                            {% if page_obj.number == num %}
                            <span class="relative inline-flex items-center px-4 py-2 border border-theme-500 bg-theme-50 text-sm font-medium text-theme-600">
                                {{ num }}
                            </span>
                            {% elif num > page_obj.number|add:'-3' and num < page_obj.number|add:'3' %}
                            <a href="?page={{ num }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                                {{ num }}
                            </a>
                            {% endif %}
                        {% endfor %} {% if page_obj.has_next %}
                        <a href="?page={{ page_obj.next_page_number }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        {% endif %}
                    </nav>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block extra_js %}
<style>
/* Column resize styles */
#ordersTable {
    table-layout: auto;
    border-collapse: collapse;
}

#ordersTable th {
    position: relative;
    user-select: none;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

#ordersTable td {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/* Removed manual drag styles */
</style>

<script>
(function() {
function initOrderColumnResize() {
    const table = document.getElementById('ordersTable');
    if (!table) return; const ths = table.querySelectorAll('th[data-column]'); function getColIndex(th) {
        return parseInt(th.getAttribute('data-column'), 10);
    } function setColumnWidth(colIndex, widthPx) {
        const width = Math.max(50, Math.floor(widthPx));
        const col = table.querySelector(`colgroup col[data-column="${colIndex}"]`);
        if (col) col.style.width = width + 'px';
        const header = table.querySelector(`th[data-column="${colIndex}"]`);
        if (header) header.style.width = width + 'px';
    } function getAutoFitWidth(colIndex) {
        const header = table.querySelector(`th[data-column="${colIndex}"]`);
        const cells = table.querySelectorAll(`tbody tr td:nth-child(${colIndex + 1})`); // Canvas-based text measurement for reliable width in fixed layouts
        const canvas = document.createElement('canvas');
        const ctx = canvas.getContext('2d'); function getFont(el) {
            const cs = window.getComputedStyle(el);
            const weight = cs.fontWeight || 'normal';
            const size = cs.fontSize || '14px';
            const family = cs.fontFamily || 'sans-serif';
            return `${weight} ${size} ${family}`;
        } function measureTextWidth(el) {
            const text = (el.innerText || '').trim();
            ctx.font = getFont(el);
            const metrics = ctx.measureText(text);
            const contentWidth = Math.ceil(metrics.width);
            const cs = window.getComputedStyle(el);
            const padding = parseInt(cs.paddingLeft || '0', 10) + parseInt(cs.paddingRight || '0', 10);
            return contentWidth + padding;
        } let maxWidth = 0;
        if (header) {
            maxWidth = Math.max(maxWidth, measureTextWidth(header));
        }
        cells.forEach(td => {
            maxWidth = Math.max(maxWidth, measureTextWidth(td));
        }); // Minimal reasonable width for icon-heavy columns
        const minWidth = 80;
        return Math.max(minWidth, Math.ceil(maxWidth) + 8);
    } function autoFitColumn(colIndex) {
        const width = getAutoFitWidth(colIndex);
        setColumnWidth(colIndex, width);
        saveColumnWidths();
    } function autoFitAllColumns() {
        ths.forEach(th => {
            const colIndex = getColIndex(th);
            const autoWidth = getAutoFitWidth(colIndex);
            setColumnWidth(colIndex, autoWidth);
        });
        saveColumnWidths();
    } // Removed manual drag creation and handlers // Double-click on header cell to auto-fit width based on content
    ths.forEach(th => {
        th.addEventListener('dblclick', function(e) {
            e.preventDefault();
            const colIndex = getColIndex(th);
            autoFitColumn(colIndex);
        });
    }); // Event delegation as a fallback to ensure dblclick is captured
    const thead = table.querySelector('thead');
    if (thead) {
        thead.addEventListener('dblclick', function(e) {
            const th = e.target.closest('th[data-column]');
            if (!th) return;
            const colIndex = getColIndex(th);
            autoFitColumn(colIndex);
        }, true);
    } // Save column widths
    function saveColumnWidths() {
        const widths = {};
        ths.forEach(th => {
            const col = th.getAttribute('data-column');
            const colEl = table.querySelector(`colgroup col[data-column="${col}"]`);
            let w = (colEl && colEl.style.width) || th.style.width || window.getComputedStyle(th).width;
            widths[col] = w;
        });
        localStorage.setItem('sales_order_column_widths', JSON.stringify(widths));
    } // Load column widths
    function loadColumnWidths() {
        try {
            const saved = localStorage.getItem('sales_order_column_widths');
            if (saved) {
                const widths = JSON.parse(saved);
                ths.forEach(th => {
                    const col = th.getAttribute('data-column');
                    if (widths[col]) {
                        const px = parseInt(widths[col], 10);
                        setColumnWidth(parseInt(col, 10), px);
                    }
                });
            }
        } catch (e) {
            console.warn('Failed to load column widths:', e);
        }
    } // Initialize default widths from current th computed widths (once)
    (function initDefaultWidths() {
        const saved = localStorage.getItem('sales_order_column_widths');
        if (saved) return; // already saved
        const defaults = {};
        ths.forEach(th => {
            const col = th.getAttribute('data-column');
            const w = parseInt(window.getComputedStyle(th).width, 10);
            defaults[col] = w + 'px';
            setColumnWidth(parseInt(col, 10), w);
        });
        localStorage.setItem('sales_order_column_widths', JSON.stringify(defaults));
    })(); // Load saved widths, then auto-fit all columns to current content
    loadColumnWidths();
    autoFitAllColumns(); // Re-auto-fit when page is shown (back/forward cache or refresh)
    window.addEventListener('pageshow', function() {
        autoFitAllColumns();
    }); // After fonts are ready, re-measure for accuracy
    try {
        if (document.fonts && document.fonts.ready) {
            document.fonts.ready.then(() => autoFitAllColumns());
        }
    } catch (e) {} // No manual drag resize; window resize can optionally re-fit columns if needed
}
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initOrderColumnResize);
} else {
    initOrderColumnResize();
}
})();
</script>
{% endblock %}
