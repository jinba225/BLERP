{% extends 'base.html' %}

{% block title %}退货单详情 - {{ return.return_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">销售管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:return_list' %}" class="text-gray-500 hover:text-gray-700">销售退货</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ return.return_number }}</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ return.return_number }}</h3>
            <p class="text-sm text-gray-600 mt-1">
                <span class="px-2 py-1 text-xs font-semibold rounded
                    {% if return.status == 'pending' %}bg-yellow-100 text-yellow-800
                    {% elif return.status == 'approved' %}bg-theme-100 text-theme-800
                    {% elif return.status == 'received' %}bg-indigo-100 text-indigo-800
                    {% elif return.status == 'processed' %}bg-green-100 text-green-800
                    {% elif return.status == 'rejected' %}bg-red-100 text-red-800
                    {% endif %}">
                    {{ return.get_status_display }}
                </span>
            </p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'sales:return_list' %}"
               class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                <i class="fas fa-arrow-left mr-2"></i>返回
            </a>
            {% if return.status == 'pending' %}
            <a class="btn btn-primary" href="{% url 'sales:return_update' return.pk %}">
                <i class="fas fa-edit mr-2"></i>编辑
            </a>
            {% endif %}
            {% if return.status == 'pending' or return.status == 'rejected' %}
            <form method="post" action="{% url 'sales:return_delete' return.pk %}" class="inline">
                {% csrf_token %}
                <button class="btn btn-primary" type="submit" onclick="return confirm('确认删除该退货单？')">
                    <i class="fas fa-trash mr-2"></i>删除
                </button>
            </form>
            {% endif %}
            {% if can_approve %}
            <a class="btn btn-primary" href="{% url 'sales:return_approve' return.pk %}" onclick="return confirm('确认退货并生成退款应付？')">
                <i class="fas fa-check mr-2"></i>确认退货
            </a>
            {% endif %}
            {% if can_receive %}
            <a class="btn btn-primary" href="{% url 'sales:return_receive' return.pk %}" onclick="return confirm('确认收货并完成退货流程？')"> <i class="fas fa-box mr-2"></i>确认收货（完成退货）
            </a>
            {% endif %}
            {% if can_process %}
            <a class="btn btn-primary" href="{% url 'sales:return_process' return.pk %}">
                <i class="fas fa-cog mr-2"></i>处理退货
            </a>
            {% endif %}
            {% if return.status in 'pending,approved' %}
            <a class="btn btn-primary" href="{% url 'sales:return_reject' return.pk %}">
                <i class="fas fa-times mr-2"></i>拒绝退货
            </a>
            {% endif %}
        </div>
    </div> <!-- Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">订单信息</h4>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">销售订单：</dt>
                    <dd class="text-sm text-gray-900">
                        <a href="{% url 'sales:order_detail' return.sales_order.pk %}" class="text-theme-600 hover:text-theme-700">
                            {{ return.sales_order.order_number }}
                        </a>
                    </dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">客户名称：</dt>
                    <dd class="text-sm text-gray-900">{{ return.sales_order.customer.name }}</dd>
                </div>
                {% if return.delivery %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">发货单：</dt>
                    <dd class="text-sm text-gray-900">
                        <a href="{% url 'sales:delivery_detail' return.delivery.pk %}" class="text-theme-600 hover:text-theme-700">
                            {{ return.delivery.delivery_number }}
                        </a>
                    </dd>
                </div>
                {% endif %}
            </dl>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">退货信息</h4>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">退货原因：</dt>
                    <dd class="text-sm text-gray-900">{{ return.get_reason_display }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">退货日期：</dt>
                    <dd class="text-sm text-gray-900">{{ return.return_date }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">收货日期：</dt>
                    <dd class="text-sm text-gray-900">{{ return.received_date|default:"-" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">退款金额：</dt>
                    <dd class="text-sm text-gray-900 font-medium">¥{{ return.refund_amount }}</dd>
                </div>
                {% if return.restocking_fee > 0 %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">重新入库费：</dt>
                    <dd class="text-sm text-gray-900">¥{{ return.restocking_fee }}</dd>
                </div>
                {% endif %}
                {% if return.approved_by %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">审核人：</dt>
                    <dd class="text-sm text-gray-900">{{ return.approved_by.username }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">审核时间：</dt>
                    <dd class="text-sm text-gray-900">{{ return.approved_at|date:"Y-m-d H:i" }}</dd>
                </div>
                {% endif %}
            </dl>
            {% if refund_payment %}
            <div class="mt-4 p-4 bg-yellow-50 border border-yellow-200 rounded">
                <div class="flex items-center justify-between">
                    <div class="text-sm text-yellow-800">
                        {% if refund_payment.status == 'pending' %}
                        已生成退款应付（待付款）：
                        {% else %}
                        退款付款：
                        {% endif %}
                        <span class="font-semibold">¥{{ refund_payment.amount }}</span>
                    </div>
                    <a href="{% url 'finance:payment_detail' refund_payment.pk %}"
                       class="text-sm text-theme-600 hover:text-theme-700">查看付款单</a>
                </div>
            </div>
            {% endif %}
        </div>
    </div> <!-- Items -->
    <div class="bg-white rounded-lg shadow mb-6">
        <div class="px-6 py-4 border-b">
            <h4 class="text-lg font-semibold text-gray-900">退货明细</h4>
        </div>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">#</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品编码</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品名称</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">退货数量</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">退货单价</th>
                        <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">行总计</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">货物状态</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in items %}
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ forloop.counter }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            {{ item.order_item.product.code }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">{{ item.order_item.product.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                            {{ item.quantity }} {{ item.order_item.product.unit.symbol|default:"" }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900">
                            ¥{{ item.unit_price }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900 font-medium">
                            ¥{{ item.line_total }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-500">{{ item.condition|default:"-" }}</td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="7" class="px-6 py-8 text-center text-gray-500">暂无退货明细</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div> <!-- Notes -->
    {% if return.notes %}
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">备注</h4>
        <p class="text-sm text-gray-700 whitespace-pre-wrap">{{ return.notes }}</p>
    </div>
    {% endif %}
</div>
{% endblock %}
