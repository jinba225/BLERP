{% extends 'base.html' %}

{% block title %}销售报价单 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">销售管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">销售报价</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header with Actions -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">报价单列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'sales:quote_create' %}">
            <svg x-data="heroicon('plus')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>新建报价单
        </a>
    </div> <!-- Search and Filter Form -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input
                    type="text"
                    name="search"
                    value="{{ search_form.search.value|default:'' }}"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500"
                    placeholder="报价单号、客户名称..."
                >
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">报价类型</label>
                <select name="quote_type" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500">
                    <option value="">全部</option>
                    <option value="domestic" {% if request.GET.quote_type == 'domestic' %}selected{% endif %}>国内</option>
                    <option value="overseas" {% if request.GET.quote_type == 'overseas' %}selected{% endif %}>国外</option>
                </select>
            </div> <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="status" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500">
                    <option value="">全部</option>
                    <option value="draft" {% if request.GET.status == 'draft' %}selected{% endif %}>草稿</option>
                    <option value="sent" {% if request.GET.status == 'sent' %}selected{% endif %}>已发送</option>
                    <option value="approved" {% if request.GET.status == 'approved' %}selected{% endif %}>已批准</option>
                    <option value="rejected" {% if request.GET.status == 'rejected' %}selected{% endif %}>已拒绝</option>
                    <option value="converted" {% if request.GET.status == 'converted' %}selected{% endif %}>已转订单</option>
                    <option value="expired" {% if request.GET.status == 'expired' %}selected{% endif %}>已过期</option>
                </select>
            </div> <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('magnifying-glass')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>搜索
                </button>
            </div>
        </form>
    </div> <!-- Quotes Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报价单号</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">类型</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">客户</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">报价日期</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">有效期至</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">总金额</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for quote in page_obj %}
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <a href="{% url 'sales:quote_detail' quote.pk %}" class="text-theme-600 hover:text-theme-700 font-medium">
                                {{ quote.quote_number }}
                            </a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full {% if quote.quote_type == 'domestic' %}bg-green-100 text-green-800{% else %}bg-purple-100 text-purple-800{% endif %}">
                                {{ quote.get_quote_type_display }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ quote.customer.name }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ quote.quote_date|date:"Y-m-d" }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ quote.valid_until|date:"Y-m-d" }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                            {{ quote.currency }} {{ quote.total_amount|floatformat:2 }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                {% if quote.status == 'draft' %}bg-gray-100 text-gray-800
                                {% elif quote.status == 'sent' %}bg-theme-100 text-theme-800
                                {% elif quote.status == 'approved' %}bg-green-100 text-green-800
                                {% elif quote.status == 'rejected' %}bg-red-100 text-red-800
                                {% elif quote.status == 'converted' %}bg-indigo-100 text-indigo-800
                                {% elif quote.status == 'expired' %}bg-yellow-100 text-yellow-800
                                {% endif %}">
                                {{ quote.get_status_display }}
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            <div class="flex space-x-2">
                                <a href="{% url 'sales:quote_detail' quote.pk %}" class="text-theme-600 hover:text-theme-700" title="查看">
                                    <svg x-data="heroicon('eye')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                </a>
                                <a href="{% url 'sales:quote_update' quote.pk %}" class="text-green-600 hover:text-green-800" title="编辑">
                                    <svg x-data="heroicon('pencil')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                </a>
                                {% if quote.status != 'converted' %}
                                <a href="{% url 'sales:quote_delete' quote.pk %}" class="text-red-600 hover:text-red-800" title="删除">
                                    <svg x-data="heroicon('trash')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% empty %}
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                            <svg x-data="heroicon('inbox')" class="text-4xl mb-4 text-gray-300" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                            <p>暂无报价单</p>
                            <a href="{% url 'sales:quote_create' %}" class="inline-block mt-4 text-theme-600 hover:text-theme-700">
                                <svg x-data="heroicon('plus')" class="mr-1" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>创建第一个报价单
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 border-t border-gray-200 sm:px-6">
            <div class="flex items-center justify-between">
                <div class="flex-1 flex justify-between sm:hidden">
                    {% if page_obj.has_previous %}
                        <a href="?page={{ page_obj.previous_page_number }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">上一页</a>
                    {% endif %}
                    {% if page_obj.has_next %}
                        <a href="?page={{ page_obj.next_page_number }}" class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">下一页</a>
                    {% endif %}
                </div>
                <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
                    <div>
                        <p class="text-sm text-gray-700">
                            显示第 <span class="font-medium">{{ page_obj.start_index }}</span> 到 <span class="font-medium">{{ page_obj.end_index }}</span> 条，
                            共 <span class="font-medium">{{ page_obj.paginator.count }}</span> 条
                        </p>
                    </div>
                    <div>
                        <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                            {% if page_obj.has_previous %}
                                <a href="?page={{ page_obj.previous_page_number }}" class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    <svg x-data="heroicon('chevron-left')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                </a>
                            {% endif %} {% for num in page_obj.paginator.page_range %}
                                {% if page_obj.number == num %}
                                    <span class="relative inline-flex items-center px-4 py-2 border border-theme-500 bg-theme-50 text-sm font-medium text-theme-600">{{ num }}</span>
                                {% elif num > page_obj.number|add:'-3' and num < page_obj.number|add:'3' %}
                                    <a href="?page={{ num }}" class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">{{ num }}</a>
                                {% endif %}
                            {% endfor %} {% if page_obj.has_next %}
                                <a href="?page={{ page_obj.next_page_number }}" class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50">
                                    <svg x-data="heroicon('chevron-right')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                                </a>
                            {% endif %}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
