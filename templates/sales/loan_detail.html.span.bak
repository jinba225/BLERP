{% extends 'base.html' %}

{% block title %}借用单详情 - {{ loan.loan_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">销售管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:loan_list' %}" class="text-gray-500 hover:text-gray-700">销售借用</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ loan.loan_number }}</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-start">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ loan.loan_number }}</h3>
            <p class="text-sm text-gray-600 mt-1">{{ loan.get_status_display }}</p>
        </div>
        <div class="flex gap-2">
            {% if can_edit %}
            <a class="btn btn-primary" href="{% url 'sales:loan_update' loan.pk %}">
                <svg x-data="heroicon('pencil')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑
            </a>
            {% endif %}
            {% if can_return %}
            <a class="btn btn-primary" href="{% url 'sales:loan_return' loan.pk %}">
                <i class="fas fa-undo mr-2"></i>处理归还
            </a>
            {% endif %}
            {% if can_request_conversion %}
            <a class="btn btn-primary" href="{% url 'sales:loan_request_conversion' loan.pk %}">
                <i class="fas fa-exchange-alt mr-2"></i>转销售订单
            </a>
            {% endif %}
            {% if can_approve_conversion %}
            <form method="post" action="{% url 'sales:loan_approve_conversion' loan.pk %}" class="inline-block"
                  onsubmit="return confirm('确定要审核通过并生成销售订单吗？');">
                {% csrf_token %}
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('check')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>审核通过
                </button>
            </form>
            {% endif %}
            {% if can_delete %}
            <form method="post" action="{% url 'sales:loan_delete' loan.pk %}" class="inline-block"
                  onsubmit="return confirm('确定要删除这个借用单吗？此操作不可恢复。');">
                {% csrf_token %}
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('trash')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>删除
                </button>
            </form>
            {% endif %}
            <a href="{% url 'sales:loan_list' %}"
               class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 transition-colors">
                <svg x-data="heroicon('arrow-left')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>返回列表
            </a>
        </div>
    </div> <!-- Basic Information -->
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">基本信息</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-500">借用单号</label>
                <p class="mt-1 text-sm text-gray-900 font-mono">{{ loan.loan_number }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500">客户</label>
                <p class="mt-1 text-sm text-gray-900">{{ loan.customer.name }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500">销售员</label>
                <p class="mt-1 text-sm text-gray-900">{{ loan.salesperson.username|default:"未指定" }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500">借出日期</label>
                <p class="mt-1 text-sm text-gray-900">{{ loan.loan_date }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500">预计归还日期</label>
                <p class="mt-1 text-sm text-gray-900">{{ loan.expected_return_date|default:"未设置" }}</p>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-500">状态</label>
                <p class="mt-1">
                    <span class="px-2 py-1 text-xs font-semibold rounded
                        {% if loan.status == 'draft' %}bg-gray-100 text-gray-800
                        {% elif loan.status == 'loaned' %}bg-theme-100 text-theme-800
                        {% elif loan.status == 'partially_returned' %}bg-yellow-100 text-yellow-800
                        {% elif loan.status == 'fully_returned' %}bg-green-100 text-green-800
                        {% elif loan.status == 'converting' %}bg-orange-100 text-orange-800
                        {% elif loan.status == 'converted' %}bg-purple-100 text-purple-800
                        {% elif loan.status == 'cancelled' %}bg-red-100 text-red-800
                        {% endif %}">
                        {{ loan.get_status_display }}
                    </span>
                </p>
            </div>
            {% if loan.purpose %}
            <div class="col-span-full">
                <label class="block text-sm font-medium text-gray-500">借用目的</label>
                <p class="mt-1 text-sm text-gray-900 whitespace-pre-wrap">{{ loan.purpose }}</p>
            </div>
            {% endif %}
            {% if loan.delivery_address %}
            <div class="col-span-full">
                <label class="block text-sm font-medium text-gray-500">借出地址</label>
                <p class="mt-1 text-sm text-gray-900 whitespace-pre-wrap">{{ loan.delivery_address }}</p>
            </div>
            {% endif %}
            {% if loan.contact_person %}
            <div>
                <label class="block text-sm font-medium text-gray-500">联系人</label>
                <p class="mt-1 text-sm text-gray-900">{{ loan.contact_person }}</p>
            </div>
            {% endif %}
            {% if loan.contact_phone %}
            <div>
                <label class="block text-sm font-medium text-gray-500">联系电话</label>
                <p class="mt-1 text-sm text-gray-900">{{ loan.contact_phone }}</p>
            </div>
            {% endif %}
        </div>
    </div> <!-- Loan Items -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <div class="p-6 border-b border-gray-200">
            <h4 class="text-lg font-semibold text-gray-900">借用明细</h4>
        </div>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">产品</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">借出数量</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">已归还</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">转销售数量</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">剩余数量</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">批次号</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for item in loan.items.all %}
                <tr>
                    <td class="px-6 py-4 text-sm text-gray-900">
                        <div class="font-medium">{{ item.product.name }}</div>
                        {% if item.specifications %}
                        <div class="text-gray-500 text-xs">{{ item.specifications }}</div>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-right text-gray-900">{{ item.quantity }}</td>
                    <td class="px-6 py-4 text-sm text-right text-gray-900">{{ item.returned_quantity }}</td>
                    <td class="px-6 py-4 text-sm text-right text-gray-900">{{ item.conversion_quantity }}</td>
                    <td class="px-6 py-4 text-sm text-right font-medium">
                        <span class="{% if item.remaining_quantity > 0 %}text-theme-600{% else %}text-gray-500{% endif %}">
                            {{ item.remaining_quantity }}
                        </span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">{{ item.batch_number|default:"-" }}</td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500">
                        <svg x-data="heroicon('inbox')" class="text-4xl mb-3 block" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                        <p>暂无借用明细</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div> <!-- Conversion Information (if converted) -->
    {% if loan.converted_order %}
    <div class="bg-purple-50 border border-purple-200 rounded-lg p-6">
        <h4 class="text-lg font-semibold text-purple-900 mb-4">
            <i class="fas fa-exchange-alt mr-2"></i>转销售订单信息
        </h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-purple-700">销售订单号</label>
                <p class="mt-1 text-sm text-purple-900">
                    <a href="{% url 'sales:order_detail' loan.converted_order.pk %}"
                       class="text-purple-600 hover:text-purple-800 font-medium">
                        {{ loan.converted_order.order_number }}
                    </a>
                </p>
            </div>
            <div>
                <label class="block text-sm font-medium text-purple-700">审核人</label>
                <p class="mt-1 text-sm text-purple-900">
                    {{ loan.conversion_approved_by.username|default:"未知" }}
                </p>
            </div>
            <div>
                <label class="block text-sm font-medium text-purple-700">审核时间</label>
                <p class="mt-1 text-sm text-purple-900">
                    {{ loan.conversion_approved_at|date:"Y-m-d H:i:s" }}
                </p>
            </div>
            {% if loan.conversion_notes %}
            <div class="col-span-full">
                <label class="block text-sm font-medium text-purple-700">转换备注</label>
                <p class="mt-1 text-sm text-purple-900 whitespace-pre-wrap">{{ loan.conversion_notes }}</p>
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %} <!-- Additional Notes -->
    {% if loan.notes %}
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">备注</h4>
        <p class="text-sm text-gray-700 whitespace-pre-wrap">{{ loan.notes }}</p>
    </div>
    {% endif %} <!-- System Information -->
    <div class="bg-gray-50 rounded-lg p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">系统信息</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
            <div>
                <label class="block text-gray-500">创建人</label>
                <p class="mt-1 text-gray-900">{{ loan.created_by.username|default:"系统" }}</p>
            </div>
            <div>
                <label class="block text-gray-500">创建时间</label>
                <p class="mt-1 text-gray-900">{{ loan.created_at|date:"Y-m-d H:i:s" }}</p>
            </div>
            <div>
                <label class="block text-gray-500">最后更新人</label>
                <p class="mt-1 text-gray-900">{{ loan.updated_by.username|default:"系统" }}</p>
            </div>
            <div>
                <label class="block text-gray-500">最后更新时间</label>
                <p class="mt-1 text-gray-900">{{ loan.updated_at|date:"Y-m-d H:i:s" }}</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
