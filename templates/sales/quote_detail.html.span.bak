{% extends 'base.html' %}

{% block title %}报价单详情 - {{ quote.quote_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">销售管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:quote_list' %}" class="text-gray-500 hover:text-gray-700">销售报价</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">{{ quote.quote_number }}</span>
{% endblock %}

{% block content %}
<div class="max-w-7xl mx-auto">
    <!-- Header with Actions -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h3 class="text-2xl font-bold text-gray-900">{{ quote.quote_number }}</h3>
            <p class="text-sm text-gray-600 mt-1">
                <span class="px-2 py-1 text-xs font-semibold rounded
                    {% if quote.status == 'draft' %}bg-gray-100 text-gray-800
                    {% elif quote.status == 'sent' %}bg-theme-100 text-theme-800
                    {% elif quote.status == 'accepted' %}bg-green-100 text-green-800
                    {% elif quote.status == 'rejected' %}bg-red-100 text-red-800
                    {% elif quote.status == 'expired' %}bg-yellow-100 text-yellow-800
                    {% elif quote.status == 'converted' %}bg-purple-100 text-purple-800
                    {% endif %}">
                    {{ quote.get_status_display }}
                </span>
                <span class="ml-2">{{ quote.get_quote_type_display }}</span>
            </p>
        </div>
        <div class="flex space-x-2">
            <a href="{% url 'sales:quote_list' %}" class="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                <svg x-data="heroicon('arrow-left')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>返回列表
            </a> {% if can_edit %}
            <a class="btn btn-primary" href="{% url 'sales:quote_update' quote.pk %}">
                <svg x-data="heroicon('pencil')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>编辑
            </a>
            {% endif %} <form method="post" action="{% url 'sales:quote_duplicate' quote.pk %}" class="inline">
                {% csrf_token %}
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('document-duplicate')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>复制
                </button>
            </form> <!-- 打印模板选择和打印按钮 -->
            <div class="inline-flex items-center space-x-2">
                {% if print_templates.exists %}
                <select id="printTemplateSelect" class="px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 text-sm">
                    {% for template in print_templates %}
                    <option value="{{ template.pk }}" {% if template == default_template %}selected{% endif %}>
                        {{ template.name }}{% if template.is_default %} (默认){% endif %}
                    </option>
                    {% endfor %}
                </select>
                <button class="btn btn-primary" onclick="openPrintPage()">
                    <svg x-data="heroicon('printer')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>打印
                </button>
                {% else %}
                <a class="btn btn-primary" href="{% url 'sales:quote_print' quote.pk %}" onclick="event.preventDefault(); var win = window.open(this.href, '_blank'); win.focus(); return false;">
                    <svg x-data="heroicon('printer')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>打印
                </a>
                {% endif %} <a href="{% url 'core:print_template_list' %}" target="_blank" class="px-3 py-2 border border-gray-300 text-gray-600 rounded-lg hover:bg-gray-50 transition-colors" title="打印模板管理">
                    <svg x-data="heroicon('cog')" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
                </a>
            </div> <script>
            function openPrintPage() {
                var templateSelect = document.getElementById('printTemplateSelect');
                var templateId = templateSelect ? templateSelect.value : '';
                var url = '{% url 'sales:quote_print' quote.pk %}'; if (templateId) {
                    url += '?template_id=' + templateId;
                } var win = window.open(url, '_blank');
                if (win) {
                    win.focus();
                }
            }
            </script> {% if can_convert %}
            <a class="btn btn-primary" href="{% url 'sales:quote_convert' quote.pk %}">
                <i class="fas fa-exchange-alt mr-2"></i>转订单
            </a>
            {% endif %} {% if can_edit %}
            <a class="btn btn-primary" href="{% url 'sales:quote_delete' quote.pk %}">
                <svg x-data="heroicon('trash')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>删除
            </a>
            {% endif %}
        </div>
    </div> <!-- Quote Information -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Customer Information -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">客户信息</h4>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">客户名称：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.customer.name }}</dd>
                </div>
                {% if quote.contact_person %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">联系人：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.contact_person.name }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">联系电话：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.contact_person.phone|default:"-" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">邮箱：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.contact_person.email|default:"-" }}</dd>
                </div>
                {% endif %}
            </dl>
        </div> <!-- Quote Details -->
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">报价信息</h4>
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">报价日期：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.quote_date }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">有效期至：</dt>
                    <dd class="text-sm text-gray-900">
                        {{ quote.valid_until }}
                        {% if quote.is_expired %}
                            <span class="ml-2 px-2 py-0.5 bg-red-100 text-red-800 text-xs rounded">已过期</span>
                        {% endif %}
                    </dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">销售代表：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.sales_rep.username|default:"-" }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">币种/汇率：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.currency }} / {{ quote.exchange_rate }}</dd>
                </div>
                {% if quote.reference_number %}
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">客户询价号：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.reference_number }}</dd>
                </div>
                {% endif %}
            </dl>
        </div>
    </div> <!-- Quote Items -->
    <div class="bg-white rounded-lg shadow mb-6 p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">产品明细</h4>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">#</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品编码</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">产品名称</th>
                        <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase">规格型号</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">单位</th>
                        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">数量</th>
                        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">含税单价</th>
                        <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase">含税小计</th>
                        <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase">交期(天)</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    {% for item in items %}
                    <tr>
                        <td class="px-4 py-3 text-sm text-gray-900">{{ forloop.counter }}</td>
                        <td class="px-4 py-3 text-sm text-gray-900">{{ item.product.code }}</td>
                        <td class="px-4 py-3">
                            <div class="text-sm font-medium text-gray-900">{{ item.product.name }}</div>
                            {% if item.notes %}
                            <div class="text-xs text-gray-400 mt-1">{{ item.notes }}</div>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-900">{{ item.specifications|default:"-" }}</td>
                        <td class="px-4 py-3 text-sm text-center text-gray-900">{{ item.unit|default:"-" }}</td>
                        <td class="px-4 py-3 text-sm text-right text-gray-900">{{ item.quantity }}</td>
                        <td class="px-4 py-3 text-sm text-right text-gray-900">¥{{ item.unit_price }}</td>
                        <td class="px-4 py-3 text-sm text-right font-medium text-gray-900">¥{{ item.line_total }}</td>
                        <td class="px-4 py-3 text-sm text-center text-gray-900">{{ item.lead_time|default:"-" }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div> <!-- Summary -->
        <div class="mt-6 flex justify-end">
            <div class="w-full max-w-sm space-y-2">
                <div class="flex justify-between text-sm">
                    <span class="text-gray-600">含税小计：</span>
                    <span class="font-medium">¥{{ quote.subtotal }}</span>
                </div>
                <div class="flex justify-between text-sm">
                    <span class="text-gray-600">折扣金额：</span>
                    <span class="font-medium text-red-600">¥{{ quote.discount_amount }}</span>
                </div>
                <div class="flex justify-between text-lg font-bold pt-2 border-t">
                    <span>含税总计：</span>
                    <span class="text-theme-600">¥{{ quote.total_amount }}</span>
                </div>
            </div>
        </div>
    </div> <!-- Terms and Conditions -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">付款与交货条件</h4>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500 mb-1">付款方式</dt>
                    <dd class="text-sm text-gray-900">{{ quote.payment_terms|default:"-" }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500 mb-1">交货条件</dt>
                    <dd class="text-sm text-gray-900">{{ quote.delivery_terms|default:"-" }}</dd>
                </div>
            </dl>
        </div> <div class="bg-white rounded-lg shadow p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">保修与备注</h4>
            <dl class="space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-500 mb-1">保修条款</dt>
                    <dd class="text-sm text-gray-900 whitespace-pre-wrap">{{ quote.warranty_terms|default:"-" }}</dd>
                </div>
                {% if quote.notes %}
                <div>
                    <dt class="text-sm font-medium text-gray-500 mb-1">备注</dt>
                    <dd class="text-sm text-gray-900 whitespace-pre-wrap">{{ quote.notes }}</dd>
                </div>
                {% endif %}
            </dl>
        </div>
    </div> <!-- Additional Information -->
    <div class="bg-white rounded-lg shadow p-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4 pb-2 border-b">其他信息</h4>
        <dl class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <div>
                <dt class="text-xs text-gray-500">创建人</dt>
                <dd class="text-sm font-medium text-gray-900 mt-1">{{ quote.created_by.username|default:"-" }}</dd>
            </div>
            <div>
                <dt class="text-xs text-gray-500">创建时间</dt>
                <dd class="text-sm font-medium text-gray-900 mt-1">{{ quote.created_at|date:"Y-m-d H:i" }}</dd>
            </div>
            <div>
                <dt class="text-xs text-gray-500">最后修改人</dt>
                <dd class="text-sm font-medium text-gray-900 mt-1">{{ quote.updated_by.username|default:"-" }}</dd>
            </div>
            <div>
                <dt class="text-xs text-gray-500">最后修改时间</dt>
                <dd class="text-sm font-medium text-gray-900 mt-1">{{ quote.updated_at|date:"Y-m-d H:i" }}</dd>
            </div>
        </dl> {% if quote.status == 'converted' and quote.converted_order %}
        <div class="mt-4 pt-4 border-t">
            <p class="text-sm text-gray-600">
                此报价单已于 {{ quote.updated_at|date:"Y-m-d" }} 转换为销售订单：
                <a href="{% url 'sales:order_detail' quote.converted_order.pk %}" class="text-theme-600 hover:underline font-medium">
                    {{ quote.converted_order.order_number }}
                </a>
            </p>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
