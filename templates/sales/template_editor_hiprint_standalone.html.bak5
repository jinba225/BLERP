        hiprintTemplate.design('#design-container');

        console.log('âœ… ç”»å¸ƒå°ºå¯¸å·²æ›´æ–°å¹¶é‡æ–°æ¸²æŸ“');

        // æ›´æ–°æ˜¾ç¤ºä¿¡æ¯
        updateCanvasSizeInfo();

        showTemporaryMessage('ç”»å¸ƒå°ºå¯¸å·²æ›´æ–°ï¼', 'success');

    } catch (error) {
