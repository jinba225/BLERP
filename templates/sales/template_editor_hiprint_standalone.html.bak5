        console.log('åˆ›å»ºæ–°æ¨¡æ¿ï¼Œç”»å¸ƒå°ºå¯¸:', width, 'x', height, 'å…ƒç´ æ•°é‡:', elements.length);

        // é‡æ–°åˆ›å»ºæ¨¡æ¿å®ä¾‹
        hiprintTemplate = new hiprint.PrintTemplate({
            template: newTemplateJson,
