{% extends 'base.html' %}
{% block title %}删除订单 - {{ order.order_number }} - BetterLaser ERP{% endblock %}
{% block content %}
<div class="max-w-2xl mx-auto"><div class="bg-white rounded-lg shadow p-8"><div class="text-center mb-8"><div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4"><i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i></div><h3 class="text-lg font-semibold text-gray-900 mb-2">确认删除订单</h3></div><div class="bg-gray-50 rounded-lg p-4 mb-6"><dl class="space-y-2"><div class="flex"><dt class="w-32 text-sm font-medium text-gray-500">订单号：</dt><dd class="text-sm text-gray-900 font-medium">{{ order.order_number }}</dd></div><div class="flex"><dt class="w-32 text-sm font-medium text-gray-500">客户：</dt><dd class="text-sm text-gray-900">{{ order.customer.name }}</dd></div><div class="flex"><dt class="w-32 text-sm font-medium text-gray-500">金额：</dt><dd class="text-sm text-gray-900 font-semibold">¥{{ order.total_amount }}</dd></div></dl></div><form method="post" class="flex space-x-3">{% csrf_token %}<a href="{% url 'sales:order_detail' order.pk %}" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 text-center"><i class="fas fa-times mr-2"></i>取消</a><button class="btn btn-primary" type="submit"><i class="fas fa-trash mr-2"></i>确认删除</button></form></div></div>
{% endblock %}
