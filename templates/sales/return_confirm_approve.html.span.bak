{% extends 'base.html' %}

{% block title %}确认退货 - {{ return.return_number }} - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">销售管理</span>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:return_list' %}" class="text-gray-500 hover:text-gray-700">销售退货</a>
<span class="mx-2 text-gray-400">/</span>
<a href="{% url 'sales:return_detail' return.pk %}" class="text-gray-500 hover:text-gray-700">{{ return.return_number }}</a>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">确认退货</span>
{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow p-8">
        <!-- Icon and Title -->
        <div class="text-center mb-8">
            <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-theme-100 mb-4">
                <svg x-data="heroicon('check')" class="text-theme-600 text-3xl" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">确认退货申请</h3>
            <p class="text-sm text-gray-600">请确认此退货申请，确认后将自动生成退款应付</p>
        </div> <!-- Return Information -->
        <div class="bg-gray-50 rounded-lg p-6 mb-6">
            <h4 class="text-sm font-semibold text-gray-700 mb-4">退货信息</h4>
            <dl class="space-y-3">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">退货单号：</dt>
                    <dd class="text-sm text-gray-900 font-medium">{{ return.return_number }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">销售订单：</dt>
                    <dd class="text-sm text-gray-900">{{ return.sales_order.order_number }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">客户名称：</dt>
                    <dd class="text-sm text-gray-900">{{ return.sales_order.customer.name }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">退货原因：</dt>
                    <dd class="text-sm text-gray-900">{{ return.get_reason_display }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">退款金额：</dt>
                    <dd class="text-sm text-gray-900 font-medium text-red-600">¥{{ return.refund_amount }}</dd>
                </div>
            </dl>
        </div> <!-- Form -->
        <form method="post">
            {% csrf_token %} <!-- Action Buttons -->
            <div class="flex space-x-3">
                <a href="{% url 'sales:return_detail' return.pk %}"
                   class="flex-1 px-6 py-3 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 text-center font-medium transition-colors">
                    <svg x-data="heroicon('x-mark')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>取消
                </a>
                <button class="btn btn-primary" type="submit">
                    <svg x-data="heroicon('check')" class="mr-2" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" x-cloak><span x-html="svg"></span></svg>确认退货
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
