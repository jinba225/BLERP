{% extends 'base.html' %}

{% block title %}销售退货单列表 - BetterLaser ERP{% endblock %}

{% block breadcrumb %}
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-500">销售管理</span>
<span class="mx-2 text-gray-400">/</span>
<span class="text-gray-900 font-semibold">销售退货</span>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Header -->
    <div class="flex justify-between items-center">
        <div>
            <h3 class="text-lg font-semibold text-gray-900">销售退货单列表</h3>
            <p class="text-sm text-gray-600">共 {{ total_count }} 条记录</p>
        </div>
        <a class="btn btn-primary" href="{% url 'sales:return_statistics' %}">
            <i class="fas fa-chart-bar mr-2"></i>统计分析
        </a>
    </div> <!-- Search and Filter -->
    <div class="bg-white rounded-lg shadow p-6">
        <form method="get" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">搜索</label>
                <input type="text" name="search" value="{{ search }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors"
                       placeholder="退货单号、订单号、客户名称...">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">状态</label>
                <select name="status"
                        class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
                    <option value="">全部</option>
                    <option value="pending" {% if status == 'pending' %}selected{% endif %}>待处理</option>
                    <option value="approved" {% if status == 'approved' %}selected{% endif %}>已批准</option>
                    <option value="received" {% if status == 'received' %}selected{% endif %}>已收货</option>
                    <option value="processed" {% if status == 'processed' %}selected{% endif %}>已处理</option>
                    <option value="rejected" {% if status == 'rejected' %}selected{% endif %}>已拒绝</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">开始日期</label>
                <input type="date" name="date_from" value="{{ date_from }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">结束日期</label>
                <input type="date" name="date_to" value="{{ date_to }}"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-theme-500 focus:border-theme-500 transition-colors">
            </div>
            <div class="flex items-end">
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-search mr-2"></i>搜索
                </button>
            </div>
        </form>
    </div> <!-- Returns Table -->
    <div class="bg-white rounded-lg shadow overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">退货单号</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">销售订单</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">客户</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">退货原因</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">退货日期</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">退款金额</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">退款状态</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">状态</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for return in page_obj %}
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                        <a href="{% url 'sales:return_detail' return.pk %}" class="text-theme-600 hover:text-theme-700">
                            {{ return.return_number }}
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        <a href="{% url 'sales:order_detail' return.sales_order.pk %}" class="text-theme-600 hover:text-theme-700">
                            {{ return.sales_order.order_number }}
                        </a>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        {{ return.sales_order.customer.name }}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ return.get_reason_display }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{ return.return_date }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-right text-gray-900 font-medium">¥{{ return.refund_amount }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        {% if return.refund_payment %}
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if return.refund_payment.status == 'pending' %}bg-yellow-100 text-yellow-800
                            {% elif return.refund_payment.status == 'completed' %}bg-green-100 text-green-800
                            {% else %}bg-gray-100 text-gray-800
                            {% endif %}">
                            {% if return.refund_payment.status == 'pending' %}
                                待付款
                            {% elif return.refund_payment.status == 'completed' %}
                                已付款
                            {% else %}
                                {{ return.refund_payment.get_status_display }}
                            {% endif %}
                        </span>
                        {% else %}
                        <span class="px-2 py-1 text-xs font-semibold rounded bg-gray-100 text-gray-800">未生成</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="px-2 py-1 text-xs font-semibold rounded
                            {% if return.status == 'pending' %}bg-yellow-100 text-yellow-800
                            {% elif return.status == 'approved' %}bg-theme-100 text-theme-800
                            {% elif return.status == 'received' %}bg-indigo-100 text-indigo-800
                            {% elif return.status == 'processed' %}bg-green-100 text-green-800
                            {% elif return.status == 'rejected' %}bg-red-100 text-red-800
                            {% endif %}">
                            {{ return.get_status_display }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                        <a href="{% url 'sales:return_detail' return.pk %}"
                           class="text-theme-600 hover:text-theme-900"
                           title="查看详情">
                            <i class="fas fa-eye"></i>
                        </a>
                    </td>
                </tr>
                {% empty %}
                <tr>
                    <td colspan="9" class="px-6 py-12 text-center text-gray-500">
                        <i class="fas fa-inbox text-4xl mb-3 block"></i>
                        <p>暂无退货单数据</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table> <!-- Pagination -->
        {% if page_obj.has_other_pages %}
        <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200">
            <div>
                <p class="text-sm text-gray-700">
                    显示第 {{ page_obj.start_index }} 到 {{ page_obj.end_index }} 条，共 {{ page_obj.paginator.count }} 条
                </p>
            </div>
            <div>
                <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                    {% if page_obj.has_previous %}
                    <a href="?page={{ page_obj.previous_page_number }}" class="relative inline-flex items-center px-3 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        上一页
                    </a>
                    {% endif %}
                    <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
                        {{ page_obj.number }} / {{ page_obj.paginator.num_pages }}
                    </span>
                    {% if page_obj.has_next %}
                    <a href="?page={{ page_obj.next_page_number }}" class="relative inline-flex items-center px-3 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50">
                        下一页
                    </a>
                    {% endif %}
                </nav>
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
