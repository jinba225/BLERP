{% extends 'base.html' %}

{% block title %}删除报价单 - {{ quote.quote_number }} - BetterLaser ERP{% endblock %}
{% block page_title %}删除报价单{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-lg shadow p-8">
        <div class="text-center mb-8">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4">
                <i class="fas fa-exclamation-triangle text-red-600 text-2xl"></i>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">确认删除报价单</h3>
            <p class="text-sm text-gray-600">此操作不可撤销，请谨慎操作</p>
        </div> <div class="bg-gray-50 rounded-lg p-4 mb-6">
            <dl class="space-y-2">
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">报价单号：</dt>
                    <dd class="text-sm text-gray-900 font-medium">{{ quote.quote_number }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">客户名称：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.customer.name }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">报价日期：</dt>
                    <dd class="text-sm text-gray-900">{{ quote.quote_date }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">总金额：</dt>
                    <dd class="text-sm text-gray-900 font-semibold">¥{{ quote.total_amount }}</dd>
                </div>
                <div class="flex">
                    <dt class="w-32 text-sm font-medium text-gray-500">状态：</dt>
                    <dd class="text-sm">
                        <span class="px-2 py-1 text-xs font-semibold rounded bg-gray-100 text-gray-800">
                            {{ quote.get_status_display }}
                        </span>
                    </dd>
                </div>
            </dl>
        </div> <form method="post" class="flex space-x-3">
            {% csrf_token %}
            <a href="{% url 'sales:quote_detail' quote.pk %}"
               class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors text-center">
                <i class="fas fa-times mr-2"></i>取消
            </a>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-trash mr-2"></i>确认删除
            </button>
        </form>
    </div>
</div>
{% endblock %}
